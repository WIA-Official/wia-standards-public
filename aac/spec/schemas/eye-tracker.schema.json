{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/aac/signal/v1/eye-tracker.schema.json",
  "title": "WIA AAC Eye Tracker Data",
  "description": "Schema for eye tracker sensor data",
  "definitions": {
    "eyeTrackerData": {
      "type": "object",
      "required": ["gaze"],
      "properties": {
        "gaze": {
          "type": "object",
          "required": ["x", "y"],
          "properties": {
            "x": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Normalized gaze X coordinate (0.0 to 1.0)"
            },
            "y": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Normalized gaze Y coordinate (0.0 to 1.0)"
            },
            "z": {
              "type": ["number", "null"],
              "description": "Gaze Z coordinate for 3D tracking (optional)"
            }
          },
          "additionalProperties": false
        },
        "fixation": {
          "type": "object",
          "properties": {
            "active": {
              "type": "boolean",
              "description": "Whether fixation is currently active"
            },
            "duration_ms": {
              "type": "integer",
              "minimum": 0,
              "description": "Fixation duration in milliseconds"
            },
            "target_id": {
              "type": "string",
              "description": "ID of the fixation target element"
            }
          },
          "additionalProperties": false
        },
        "pupil": {
          "type": "object",
          "properties": {
            "left_diameter_mm": {
              "type": "number",
              "minimum": 0,
              "maximum": 10,
              "description": "Left pupil diameter in millimeters"
            },
            "right_diameter_mm": {
              "type": "number",
              "minimum": 0,
              "maximum": 10,
              "description": "Right pupil diameter in millimeters"
            }
          },
          "additionalProperties": false
        },
        "blink": {
          "type": "object",
          "properties": {
            "detected": {
              "type": "boolean",
              "description": "Whether a blink was detected"
            },
            "duration_ms": {
              "type": "integer",
              "minimum": 0,
              "description": "Blink duration in milliseconds"
            }
          },
          "additionalProperties": false
        },
        "eye_validity": {
          "type": "object",
          "properties": {
            "left": {
              "type": "boolean",
              "description": "Left eye data validity"
            },
            "right": {
              "type": "boolean",
              "description": "Right eye data validity"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": true
    }
  },
  "type": "object",
  "$ref": "#/definitions/eyeTrackerData"
}
