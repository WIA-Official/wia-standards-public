{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/aac/signal/v1/schema.json",
  "title": "WIA AAC Signal",
  "description": "WIA AAC Standard Signal Format - Base Schema",
  "type": "object",
  "required": ["version", "type", "timestamp", "device", "data"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "JSON Schema URI"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Specification version (Semantic Versioning)",
      "examples": ["1.0.0"]
    },
    "type": {
      "type": "string",
      "enum": [
        "eye_tracker",
        "switch",
        "muscle_sensor",
        "brain_interface",
        "breath",
        "head_movement",
        "custom"
      ],
      "description": "Sensor type identifier"
    },
    "timestamp": {
      "type": "object",
      "required": ["unix_ms"],
      "properties": {
        "unix_ms": {
          "type": "number",
          "minimum": 0,
          "description": "UNIX timestamp in milliseconds"
        },
        "iso8601": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 formatted timestamp"
        }
      },
      "additionalProperties": false
    },
    "sequence": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4294967295,
      "description": "Message sequence number (32-bit unsigned)"
    },
    "device": {
      "type": "object",
      "required": ["manufacturer", "model"],
      "properties": {
        "manufacturer": {
          "type": "string",
          "minLength": 1,
          "description": "Device manufacturer name"
        },
        "model": {
          "type": "string",
          "minLength": 1,
          "description": "Device model name"
        },
        "firmware": {
          "type": "string",
          "description": "Firmware version"
        },
        "serial": {
          "type": "string",
          "description": "Serial number"
        }
      },
      "additionalProperties": false
    },
    "data": {
      "type": "object",
      "description": "Sensor-specific data (see sensor-specific schemas)"
    },
    "meta": {
      "type": "object",
      "properties": {
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Data confidence level (0.0 to 1.0)"
        },
        "validity": {
          "type": "boolean",
          "description": "Data validity flag"
        },
        "raw": {
          "type": "object",
          "description": "Raw sensor data for debugging"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true,
  "allOf": [
    {
      "if": {
        "properties": { "type": { "const": "eye_tracker" } }
      },
      "then": {
        "properties": {
          "data": { "$ref": "eye-tracker.schema.json#/definitions/eyeTrackerData" }
        }
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "switch" } }
      },
      "then": {
        "properties": {
          "data": { "$ref": "switch.schema.json#/definitions/switchData" }
        }
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "muscle_sensor" } }
      },
      "then": {
        "properties": {
          "data": { "$ref": "muscle-sensor.schema.json#/definitions/muscleSensorData" }
        }
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "brain_interface" } }
      },
      "then": {
        "properties": {
          "data": { "$ref": "brain-interface.schema.json#/definitions/brainInterfaceData" }
        }
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "breath" } }
      },
      "then": {
        "properties": {
          "data": { "$ref": "breath.schema.json#/definitions/breathData" }
        }
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "head_movement" } }
      },
      "then": {
        "properties": {
          "data": { "$ref": "head-movement.schema.json#/definitions/headMovementData" }
        }
      }
    }
  ]
}
