{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/aac/signal/v1/muscle-sensor.schema.json",
  "title": "WIA AAC Muscle Sensor Data",
  "description": "Schema for muscle sensor (EMG) data",
  "definitions": {
    "muscleSensorData": {
      "type": "object",
      "required": ["channel_id", "activation"],
      "properties": {
        "channel_id": {
          "type": "integer",
          "minimum": 1,
          "description": "EMG channel identifier (1-based)"
        },
        "muscle_group": {
          "type": "string",
          "description": "Target muscle group name",
          "examples": [
            "cheek_left",
            "cheek_right",
            "jaw",
            "forehead",
            "eyebrow_left",
            "eyebrow_right",
            "forearm_left",
            "forearm_right",
            "custom"
          ]
        },
        "activation": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Normalized muscle activation level (0.0 to 1.0)"
        },
        "raw_uv": {
          "type": "number",
          "description": "Raw EMG signal value in microvolts"
        },
        "envelope_uv": {
          "type": "number",
          "minimum": 0,
          "description": "Rectified and smoothed envelope in microvolts"
        },
        "threshold_exceeded": {
          "type": "boolean",
          "description": "Whether activation threshold was exceeded"
        },
        "gesture": {
          "type": "string",
          "description": "Recognized gesture type",
          "examples": [
            "single_twitch",
            "double_twitch",
            "sustained_hold",
            "release"
          ]
        }
      },
      "additionalProperties": true
    }
  },
  "type": "object",
  "$ref": "#/definitions/muscleSensorData"
}
