{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/aac/signal/v1/head-movement.schema.json",
  "title": "WIA AAC Head Movement Data",
  "description": "Schema for head movement tracking sensor data",
  "definitions": {
    "headMovementData": {
      "type": "object",
      "required": ["position"],
      "properties": {
        "position": {
          "type": "object",
          "required": ["x", "y"],
          "properties": {
            "x": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Normalized X position (0.0 to 1.0)"
            },
            "y": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Normalized Y position (0.0 to 1.0)"
            }
          },
          "additionalProperties": false
        },
        "rotation": {
          "type": "object",
          "properties": {
            "pitch": {
              "type": "number",
              "minimum": -180,
              "maximum": 180,
              "description": "Up/down rotation in degrees (+ = up)"
            },
            "yaw": {
              "type": "number",
              "minimum": -180,
              "maximum": 180,
              "description": "Left/right rotation in degrees (+ = right)"
            },
            "roll": {
              "type": "number",
              "minimum": -180,
              "maximum": 180,
              "description": "Tilt rotation in degrees (+ = clockwise)"
            }
          },
          "additionalProperties": false
        },
        "velocity": {
          "type": "object",
          "properties": {
            "x": {
              "type": "number",
              "description": "X velocity (normalized units per second)"
            },
            "y": {
              "type": "number",
              "description": "Y velocity (normalized units per second)"
            }
          },
          "additionalProperties": false
        },
        "gesture": {
          "type": "string",
          "enum": ["dwell", "nod", "shake", "tilt_left", "tilt_right", "none"],
          "description": "Recognized head gesture"
        },
        "dwell_time_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Time spent stationary in milliseconds"
        },
        "face_detected": {
          "type": "boolean",
          "description": "Whether face/tracking target is detected"
        }
      },
      "additionalProperties": true
    }
  },
  "type": "object",
  "$ref": "#/definitions/headMovementData"
}
