{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/aac/signal/v1/switch.schema.json",
  "title": "WIA AAC Switch Data",
  "description": "Schema for switch sensor data",
  "definitions": {
    "switchData": {
      "type": "object",
      "required": ["switch_id", "state"],
      "properties": {
        "switch_id": {
          "type": "integer",
          "minimum": 1,
          "description": "Switch identifier (1-based)"
        },
        "channel": {
          "type": "string",
          "description": "Switch channel name",
          "examples": ["primary", "secondary", "auxiliary"]
        },
        "state": {
          "type": "string",
          "enum": ["pressed", "released", "held"],
          "description": "Current switch state"
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Press duration in milliseconds"
        },
        "pressure": {
          "type": ["number", "null"],
          "minimum": 0,
          "maximum": 1,
          "description": "Pressure level (0.0 to 1.0) if supported"
        },
        "repeat_count": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of consecutive presses"
        }
      },
      "additionalProperties": true
    }
  },
  "type": "object",
  "$ref": "#/definitions/switchData"
}
