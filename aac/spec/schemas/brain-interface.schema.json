{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/aac/signal/v1/brain-interface.schema.json",
  "title": "WIA AAC Brain Interface Data",
  "description": "Schema for brain interface (EEG/BCI) sensor data",
  "definitions": {
    "brainInterfaceData": {
      "type": "object",
      "required": ["channel_count", "channels"],
      "properties": {
        "channel_count": {
          "type": "integer",
          "minimum": 1,
          "maximum": 256,
          "description": "Number of EEG channels"
        },
        "sample_rate_hz": {
          "type": "number",
          "minimum": 1,
          "description": "Sampling rate in Hertz"
        },
        "channels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["id", "value_uv"],
            "properties": {
              "id": {
                "type": "string",
                "description": "Channel ID using 10-20 system naming",
                "examples": ["Fp1", "Fp2", "C3", "C4", "P3", "P4", "O1", "O2", "Fz", "Cz", "Pz"]
              },
              "value_uv": {
                "type": "number",
                "description": "EEG voltage value in microvolts"
              }
            },
            "additionalProperties": false
          },
          "description": "Array of channel data"
        },
        "bands": {
          "type": "object",
          "properties": {
            "delta": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Delta band (0.5-4 Hz) relative power"
            },
            "theta": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Theta band (4-8 Hz) relative power"
            },
            "alpha": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Alpha band (8-13 Hz) relative power"
            },
            "beta": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Beta band (13-30 Hz) relative power"
            },
            "gamma": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Gamma band (30+ Hz) relative power"
            }
          },
          "additionalProperties": false
        },
        "classification": {
          "type": "object",
          "properties": {
            "intent": {
              "type": "string",
              "description": "Classified user intent",
              "examples": ["select", "left", "right", "up", "down", "rest", "focus"]
            },
            "confidence": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Classification confidence (0.0 to 1.0)"
            }
          },
          "additionalProperties": false
        },
        "artifacts": {
          "type": "object",
          "properties": {
            "eye_blink": {
              "type": "boolean",
              "description": "Eye blink artifact detected"
            },
            "muscle": {
              "type": "boolean",
              "description": "Muscle artifact detected"
            },
            "movement": {
              "type": "boolean",
              "description": "Movement artifact detected"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": true
    }
  },
  "type": "object",
  "$ref": "#/definitions/brainInterfaceData"
}
