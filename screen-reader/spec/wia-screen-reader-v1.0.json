{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wiastandards.com/screen-reader/spec/wia-screen-reader-v1.0.json",
  "title": "WIA Screen Reader Standard v1.0",
  "description": "Universal Screen Reader Accessibility Standard for 211 Languages",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "wia_screen_reader": {
      "type": "object",
      "required": ["version", "text"],
      "properties": {
        "version": {
          "type": "string",
          "description": "Standard version",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "default": "1.0.0"
        },
        "text": {
          "type": "string",
          "description": "Original text to be processed"
        },
        "language": {
          "type": "string",
          "description": "ISO 639-1 language code",
          "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
          "default": "en"
        },
        "pronunciation": {
          "$ref": "#/definitions/pronunciation"
        },
        "braille": {
          "$ref": "#/definitions/braille"
        },
        "tts": {
          "$ref": "#/definitions/tts"
        },
        "context": {
          "$ref": "#/definitions/context"
        },
        "metadata": {
          "$ref": "#/definitions/metadata"
        }
      }
    }
  },
  "definitions": {
    "pronunciation": {
      "type": "object",
      "description": "Pronunciation information",
      "properties": {
        "ipa": {
          "type": "string",
          "description": "International Phonetic Alphabet representation"
        },
        "wihp": {
          "type": "string",
          "description": "WIA International Hangul Pronunciation"
        },
        "romanized": {
          "type": "string",
          "description": "Romanized pronunciation"
        },
        "syllables": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Syllable breakdown"
        }
      }
    },
    "braille": {
      "type": "object",
      "description": "Braille conversion output",
      "properties": {
        "grade1": {
          "type": "string",
          "description": "Grade 1 (uncontracted) braille"
        },
        "grade2": {
          "type": "string",
          "description": "Grade 2 (contracted) braille"
        },
        "wia": {
          "type": "string",
          "description": "WIA Braille format (Korean-based)"
        },
        "dots": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "integer",
              "minimum": 1,
              "maximum": 8
            }
          },
          "description": "Dot patterns for each cell"
        },
        "cells": {
          "type": "integer",
          "description": "Total number of braille cells"
        }
      }
    },
    "tts": {
      "type": "object",
      "description": "Text-to-Speech settings",
      "properties": {
        "rate": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 10,
          "default": 1.0,
          "description": "Speech rate multiplier"
        },
        "pitch": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 2.0,
          "default": 1.0,
          "description": "Voice pitch multiplier"
        },
        "volume": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 1.0,
          "description": "Volume level"
        },
        "voice": {
          "type": "string",
          "default": "default",
          "description": "Voice identifier"
        },
        "ssml": {
          "type": "string",
          "description": "SSML markup for advanced TTS"
        }
      }
    },
    "context": {
      "type": "object",
      "description": "Semantic context for accessibility",
      "properties": {
        "element_type": {
          "type": "string",
          "enum": [
            "heading", "paragraph", "list", "listitem", "link",
            "button", "textbox", "checkbox", "radio", "slider",
            "table", "row", "cell", "image", "figure", "form",
            "navigation", "main", "article", "section", "aside",
            "header", "footer", "dialog", "alert", "menu", "menuitem"
          ],
          "description": "HTML/ARIA element type"
        },
        "level": {
          "type": "integer",
          "minimum": 1,
          "maximum": 6,
          "description": "Heading level (1-6)"
        },
        "landmark": {
          "type": "string",
          "enum": ["banner", "main", "navigation", "contentinfo", "search", "form", "complementary", "region"],
          "description": "ARIA landmark role"
        },
        "live": {
          "type": "string",
          "enum": ["off", "polite", "assertive"],
          "description": "ARIA live region type"
        },
        "position": {
          "type": "object",
          "properties": {
            "index": {
              "type": "integer",
              "description": "Current position (1-indexed)"
            },
            "total": {
              "type": "integer",
              "description": "Total items in set"
            }
          }
        },
        "state": {
          "type": "object",
          "properties": {
            "expanded": { "type": "boolean" },
            "selected": { "type": "boolean" },
            "checked": { "type": ["boolean", "string"] },
            "pressed": { "type": ["boolean", "string"] },
            "disabled": { "type": "boolean" },
            "readonly": { "type": "boolean" },
            "required": { "type": "boolean" },
            "invalid": { "type": "boolean" }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Processing metadata",
      "properties": {
        "processed_at": {
          "type": "string",
          "format": "date-time"
        },
        "processing_time_ms": {
          "type": "number"
        },
        "engine_version": {
          "type": "string"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  },
  "examples": [
    {
      "wia_screen_reader": {
        "version": "1.0.0",
        "text": "Hello World",
        "language": "en",
        "pronunciation": {
          "ipa": "/həˈloʊ wɜːrld/",
          "wihp": "헐로우 월드"
        },
        "braille": {
          "grade1": "⠓⠑⠇⠇⠕ ⠺⠕⠗⠇⠙",
          "grade2": "⠓⠑⠇⠇⠕ ⠺⠕⠗⠇⠙",
          "wia": "ㅎㅓㄹㄹㅗㅇ ㅇㅝㄹㄷㅡ"
        },
        "tts": {
          "rate": 1.0,
          "pitch": 1.0,
          "voice": "default"
        },
        "context": {
          "element_type": "heading",
          "level": 1,
          "landmark": "main"
        }
      }
    }
  ]
}
