{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wiastandards.com/screen-reader/spec/schemas/braille.json",
  "title": "WIA Braille Schema",
  "description": "Schema for WIA Braille conversion data",
  "type": "object",
  "required": ["input", "output"],
  "properties": {
    "input": {
      "type": "object",
      "required": ["text"],
      "properties": {
        "text": {
          "type": "string",
          "description": "Text to convert to braille"
        },
        "language": {
          "type": "string",
          "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
          "default": "en"
        }
      }
    },
    "output": {
      "type": "object",
      "properties": {
        "grade1": {
          "type": "object",
          "properties": {
            "unicode": {
              "type": "string",
              "description": "Unicode braille characters"
            },
            "dots": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/brailleCell"
              }
            }
          }
        },
        "grade2": {
          "type": "object",
          "properties": {
            "unicode": {
              "type": "string"
            },
            "dots": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/brailleCell"
              }
            },
            "contractions": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "original": { "type": "string" },
                  "contracted": { "type": "string" },
                  "position": { "type": "integer" }
                }
              }
            }
          }
        },
        "wia": {
          "type": "object",
          "description": "WIA Korean-based braille format",
          "properties": {
            "hangul": {
              "type": "string",
              "description": "Korean Jamo representation"
            },
            "unicode": {
              "type": "string"
            }
          }
        }
      }
    },
    "display": {
      "type": "object",
      "description": "Braille display information",
      "properties": {
        "cells": {
          "type": "integer",
          "description": "Number of cells required"
        },
        "lines": {
          "type": "integer",
          "default": 1
        },
        "cursor_position": {
          "type": "integer"
        }
      }
    }
  },
  "definitions": {
    "brailleCell": {
      "type": "object",
      "properties": {
        "char": {
          "type": "string",
          "description": "Source character"
        },
        "dots": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 1,
            "maximum": 8
          },
          "description": "Active dots (1-8)"
        },
        "unicode": {
          "type": "string",
          "pattern": "^[⠀-⣿]$",
          "description": "Unicode braille character"
        }
      }
    }
  }
}
