{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wiastandards.com/screen-reader/spec/schemas/tts.json",
  "title": "WIA TTS Schema",
  "description": "Schema for Text-to-Speech configuration and output",
  "type": "object",
  "properties": {
    "input": {
      "type": "object",
      "required": ["text"],
      "properties": {
        "text": {
          "type": "string",
          "description": "Text to synthesize"
        },
        "ssml": {
          "type": "string",
          "description": "SSML markup (optional)"
        },
        "language": {
          "type": "string",
          "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
        }
      }
    },
    "config": {
      "type": "object",
      "properties": {
        "voice": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "Voice identifier"
            },
            "name": {
              "type": "string"
            },
            "language": {
              "type": "string"
            },
            "gender": {
              "type": "string",
              "enum": ["male", "female", "neutral"]
            },
            "age": {
              "type": "string",
              "enum": ["child", "young", "adult", "senior"]
            }
          }
        },
        "rate": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 10.0,
          "default": 1.0,
          "description": "Speech rate (1.0 = normal)"
        },
        "pitch": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 2.0,
          "default": 1.0,
          "description": "Voice pitch (1.0 = normal)"
        },
        "volume": {
          "type": "number",
          "minimum": 0,
          "maximum": 1.0,
          "default": 1.0
        },
        "emphasis": {
          "type": "string",
          "enum": ["none", "reduced", "moderate", "strong"],
          "default": "moderate"
        },
        "punctuation": {
          "type": "string",
          "enum": ["none", "some", "most", "all"],
          "default": "some",
          "description": "Punctuation verbosity"
        }
      }
    },
    "output": {
      "type": "object",
      "properties": {
        "audio": {
          "type": "object",
          "properties": {
            "format": {
              "type": "string",
              "enum": ["wav", "mp3", "ogg", "webm"],
              "default": "wav"
            },
            "sample_rate": {
              "type": "integer",
              "enum": [8000, 16000, 22050, 44100, 48000],
              "default": 22050
            },
            "channels": {
              "type": "integer",
              "enum": [1, 2],
              "default": 1
            },
            "duration_ms": {
              "type": "number"
            },
            "url": {
              "type": "string",
              "format": "uri"
            },
            "data_base64": {
              "type": "string"
            }
          }
        },
        "timing": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "word": { "type": "string" },
              "start_ms": { "type": "number" },
              "end_ms": { "type": "number" }
            }
          }
        }
      }
    }
  }
}
