{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wiastandards.com/screen-reader/spec/schemas/pronunciation.json",
  "title": "WIA Pronunciation Schema",
  "description": "Schema for WIHP (WIA International Hangul Pronunciation) data",
  "type": "object",
  "required": ["source", "target"],
  "properties": {
    "source": {
      "type": "object",
      "required": ["text", "language"],
      "properties": {
        "text": {
          "type": "string",
          "description": "Original text"
        },
        "language": {
          "type": "string",
          "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
          "description": "Source language code (ISO 639-1)"
        }
      }
    },
    "target": {
      "type": "object",
      "properties": {
        "wihp": {
          "type": "string",
          "description": "Korean Hangul pronunciation"
        },
        "ipa": {
          "type": "string",
          "description": "IPA transcription"
        },
        "romanized": {
          "type": "string",
          "description": "Romanized form"
        }
      }
    },
    "phonemes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string"
          },
          "ipa": {
            "type": "string"
          },
          "hangul": {
            "type": "string"
          },
          "duration_ms": {
            "type": "number"
          }
        }
      }
    },
    "stress": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "syllable": {
            "type": "integer"
          },
          "level": {
            "type": "string",
            "enum": ["primary", "secondary", "unstressed"]
          }
        }
      }
    }
  }
}
