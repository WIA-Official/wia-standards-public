{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wia.live/schemas/fintech/accessible-notification.schema.json",
  "title": "Accessible Financial Notification",
  "description": "WIA Fintech multi-modal accessible notification format",
  "type": "object",
  "required": ["notificationId", "timestamp", "type", "priority", "content"],
  "properties": {
    "notificationId": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "expiresAt": {
      "type": "string",
      "format": "date-time"
    },
    "type": {
      "type": "string",
      "enum": ["transaction", "balance_alert", "payment_due", "fraud_alert", "security_alert", "promotional", "account_update", "document_ready", "appointment_reminder"]
    },
    "priority": {
      "type": "string",
      "enum": ["low", "normal", "high", "urgent", "emergency"]
    },
    "category": {
      "type": "string",
      "enum": ["financial", "security", "informational", "promotional", "legal"]
    },
    "content": {
      "type": "object",
      "required": ["title", "body", "formats"],
      "properties": {
        "title": { "type": "string" },
        "body": { "type": "string" },
        "formats": {
          "type": "object",
          "required": ["plainText", "simpleLanguage", "voiceScript"],
          "properties": {
            "plainText": { "type": "string" },
            "richText": { "type": "string" },
            "simpleLanguage": { "type": "string" },
            "voiceScript": { "type": "string" },
            "ssml": { "type": "string" },
            "braille": { "type": "string" }
          }
        },
        "localizations": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "body": { "type": "string" },
              "voiceScript": { "type": "string" }
            }
          }
        },
        "signLanguage": {
          "type": "object",
          "properties": {
            "available": { "type": "boolean" },
            "languages": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["ASL", "BSL", "KSL", "JSL", "DGS", "LSF", "ISL"]
              }
            },
            "videoUrls": {
              "type": "object",
              "additionalProperties": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        }
      }
    },
    "action": {
      "type": "object",
      "properties": {
        "required": { "type": "boolean" },
        "actionType": {
          "type": "string",
          "enum": ["confirm", "deny", "review", "pay", "call", "visit", "upload", "acknowledge"]
        },
        "actionLabel": { "type": "string" },
        "accessibleInstructions": { "type": "string" },
        "deadline": {
          "type": "string",
          "format": "date-time"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "delivery": {
      "type": "object",
      "properties": {
        "channels": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["push", "sms", "email", "in_app", "voice_call", "wia_device"]
              },
              "priority": { "type": "integer" },
              "enabled": { "type": "boolean" }
            }
          }
        },
        "respectQuietHours": { "type": "boolean" },
        "escalation": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "escalateAfterMinutes": { "type": "integer" },
            "maxEscalations": { "type": "integer" }
          }
        }
      }
    },
    "accessibility": {
      "type": "object",
      "properties": {
        "visual": {
          "type": "object",
          "properties": {
            "iconCode": { "type": "string" },
            "iconAltText": { "type": "string" },
            "backgroundColor": { "type": "string" },
            "textColor": { "type": "string" },
            "flashPattern": { "type": "string" }
          }
        },
        "auditory": {
          "type": "object",
          "properties": {
            "soundFile": { "type": "string" },
            "ttsEnabled": { "type": "boolean" },
            "ttsVoice": { "type": "string" },
            "ttsRate": { "type": "number", "minimum": 0.5, "maximum": 2.0 },
            "ttsVolume": { "type": "number", "minimum": 0, "maximum": 100 },
            "repeatCount": { "type": "integer" }
          }
        },
        "haptic": {
          "type": "object",
          "properties": {
            "pattern": { "type": "string" },
            "intensity": { "type": "number", "minimum": 0, "maximum": 100 },
            "duration": { "type": "integer" }
          }
        }
      }
    },
    "wiaDelivery": {
      "type": "object",
      "properties": {
        "exoskeleton": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "pattern": { "type": "string" },
            "bodyRegion": { "type": "string" },
            "intensity": { "type": "number" }
          }
        },
        "bionicEye": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "displayMode": {
              "type": "string",
              "enum": ["overlay", "full", "minimal"]
            },
            "position": { "type": "string" },
            "duration": { "type": "integer" }
          }
        },
        "voiceSign": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "signLanguage": { "type": "string" },
            "avatarEnabled": { "type": "boolean" }
          }
        }
      }
    },
    "tracking": {
      "type": "object",
      "properties": {
        "sent": { "type": "boolean" },
        "sentAt": { "type": "string", "format": "date-time" },
        "delivered": { "type": "boolean" },
        "deliveredAt": { "type": "string", "format": "date-time" },
        "read": { "type": "boolean" },
        "readAt": { "type": "string", "format": "date-time" },
        "actioned": { "type": "boolean" },
        "actionedAt": { "type": "string", "format": "date-time" }
      }
    }
  }
}
