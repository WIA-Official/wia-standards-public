{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wia.live/schemas/fintech/atm-accessibility-profile.schema.json",
  "title": "ATM Accessibility Profile",
  "description": "WIA Fintech ATM accessibility features and capabilities",
  "type": "object",
  "required": ["atmId", "bankCode", "location", "physicalAccessibility", "audioAccessibility", "tactileAccessibility"],
  "properties": {
    "atmId": {
      "type": "string",
      "description": "Unique ATM identifier"
    },
    "bankCode": {
      "type": "string",
      "description": "Bank or institution code"
    },
    "manufacturer": {
      "type": "string"
    },
    "model": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["operational", "limited", "offline"]
    },
    "location": {
      "type": "object",
      "required": ["address", "city", "country", "latitude", "longitude"],
      "properties": {
        "address": { "type": "string" },
        "city": { "type": "string" },
        "state": { "type": "string" },
        "country": { "type": "string" },
        "postalCode": { "type": "string" },
        "latitude": { "type": "number", "minimum": -90, "maximum": 90 },
        "longitude": { "type": "number", "minimum": -180, "maximum": 180 },
        "locationDescription": { "type": "string" },
        "accessInstructions": { "type": "string" },
        "nearbyLandmarks": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "physicalAccessibility": {
      "type": "object",
      "required": ["wheelchairAccessible"],
      "properties": {
        "wheelchairAccessible": { "type": "boolean" },
        "heightAdjustable": { "type": "boolean" },
        "screenHeight": {
          "type": "number",
          "description": "Height from ground in cm"
        },
        "keypadHeight": {
          "type": "number",
          "description": "Height from ground in cm"
        },
        "reachRange": {
          "type": "string",
          "enum": ["standard", "forward", "side"]
        },
        "clearFloorSpace": { "type": "boolean" },
        "approachType": {
          "type": "string",
          "enum": ["parallel", "forward", "both"]
        },
        "indoorOutdoor": {
          "type": "string",
          "enum": ["indoor", "outdoor", "both"]
        },
        "sheltered": { "type": "boolean" },
        "wellLit": { "type": "boolean" },
        "lightLevel": {
          "type": "number",
          "description": "Light level in lux"
        }
      }
    },
    "audioAccessibility": {
      "type": "object",
      "required": ["audioGuidance"],
      "properties": {
        "audioGuidance": { "type": "boolean" },
        "headphoneJack": { "type": "boolean" },
        "jackType": {
          "type": "string",
          "enum": ["3.5mm", "2.5mm"]
        },
        "jackLocation": { "type": "string" },
        "speakerOutput": { "type": "boolean" },
        "volumeAdjustable": { "type": "boolean" },
        "volumeRange": {
          "type": "object",
          "properties": {
            "min": { "type": "number" },
            "max": { "type": "number" }
          }
        },
        "supportedLanguages": {
          "type": "array",
          "items": { "type": "string" }
        },
        "speechRate": {
          "type": "string",
          "enum": ["fixed", "adjustable"]
        },
        "privacyMode": {
          "type": "boolean",
          "description": "Audio only through headphones"
        }
      }
    },
    "tactileAccessibility": {
      "type": "object",
      "required": ["brailleLabels"],
      "properties": {
        "brailleLabels": { "type": "boolean" },
        "tactileKeypad": { "type": "boolean" },
        "keypadLayout": {
          "type": "string",
          "enum": ["phone", "calculator"]
        },
        "key5Marker": {
          "type": "boolean",
          "description": "Raised dot on key 5"
        },
        "confirmButtonMarker": {
          "type": "string",
          "enum": ["circle", "raised", "none"]
        },
        "cancelButtonMarker": {
          "type": "string",
          "enum": ["cross", "raised", "none"]
        },
        "cardSlotTactile": { "type": "boolean" },
        "cashDispenserTactile": { "type": "boolean" },
        "receiptSlotTactile": { "type": "boolean" }
      }
    },
    "screenAccessibility": {
      "type": "object",
      "properties": {
        "touchscreen": { "type": "boolean" },
        "physicalButtons": { "type": "boolean" },
        "screenSize": {
          "type": "number",
          "description": "Diagonal in inches"
        },
        "resolution": { "type": "string" },
        "highContrastMode": { "type": "boolean" },
        "fontSizeAdjustable": { "type": "boolean" },
        "colorBlindMode": { "type": "boolean" },
        "screenAngleAdjustable": { "type": "boolean" },
        "antiGlare": { "type": "boolean" },
        "privacyScreen": { "type": "boolean" }
      }
    },
    "operationalFeatures": {
      "type": "object",
      "properties": {
        "extendedTimeout": { "type": "boolean" },
        "timeoutSeconds": {
          "type": "integer",
          "minimum": 30,
          "maximum": 300
        },
        "transactionRepeat": { "type": "boolean" },
        "receiptOptions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["paper", "email", "sms", "app_notification", "braille_print", "audio_summary", "none"]
          }
        },
        "denominationChoice": { "type": "boolean" },
        "cardlessTransaction": { "type": "boolean" },
        "nfcEnabled": { "type": "boolean" },
        "qrCodeEnabled": { "type": "boolean" },
        "mobilePreStaging": { "type": "boolean" }
      }
    },
    "wiaIntegration": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "wiaProfileSync": { "type": "boolean" },
        "exoskeletonGuidance": { "type": "boolean" },
        "bionicEyeDisplay": { "type": "boolean" },
        "voiceSignSupport": { "type": "boolean" },
        "smartWheelchairPositioning": { "type": "boolean" },
        "bluetoothEnabled": { "type": "boolean" },
        "nfcWiaEnabled": { "type": "boolean" }
      }
    },
    "certification": {
      "type": "object",
      "properties": {
        "adaCompliant": { "type": "boolean" },
        "eaaCompliant": { "type": "boolean" },
        "wiaLevel": {
          "type": "string",
          "enum": ["bronze", "silver", "gold", "platinum"]
        },
        "lastInspectionDate": {
          "type": "string",
          "format": "date"
        },
        "certifications": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
