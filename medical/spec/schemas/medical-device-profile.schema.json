{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.org/schemas/medical/medical-device-profile.schema.json",
  "title": "WIA Medical Device Accessibility Profile",
  "description": "Accessibility profile for medical devices",
  "type": "object",
  "required": ["profile_id", "profile_version", "device", "accessibility", "compliance", "metadata"],
  "properties": {
    "profile_id": {
      "type": "string",
      "description": "Unique identifier for the profile"
    },
    "profile_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the profile"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "device": {
      "$ref": "#/definitions/MedicalDeviceInfo"
    },
    "accessibility": {
      "$ref": "#/definitions/DeviceAccessibilityFeatures"
    },
    "compliance": {
      "$ref": "#/definitions/RegulatoryCompliance"
    },
    "wia_integration": {
      "$ref": "#/definitions/WIAIntegration"
    },
    "metadata": {
      "$ref": "#/definitions/ProfileMetadata"
    }
  },
  "definitions": {
    "MedicalDeviceInfo": {
      "type": "object",
      "required": ["device_id", "manufacturer", "model", "device_name", "device_type", "device_category", "use_environment"],
      "properties": {
        "device_id": {
          "type": "string"
        },
        "manufacturer": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "device_name": {
          "type": "string"
        },
        "fda_classification": {
          "type": "object",
          "properties": {
            "class": {
              "type": "string",
              "enum": ["I", "II", "III"]
            },
            "product_code": {
              "type": "string"
            },
            "regulation_number": {
              "type": "string"
            },
            "clearance_type": {
              "type": "string",
              "enum": ["510k", "PMA", "De_Novo", "Exempt"]
            }
          }
        },
        "device_type": {
          "type": "string",
          "enum": ["diagnostic", "monitoring", "therapeutic", "assistive", "wearable", "implantable", "imaging", "laboratory"]
        },
        "device_category": {
          "type": "string",
          "enum": [
            "blood_glucose_monitor",
            "blood_pressure_monitor",
            "pulse_oximeter",
            "thermometer",
            "weight_scale",
            "ecg_monitor",
            "cgm",
            "insulin_pump",
            "cpap_bipap",
            "hearing_aid",
            "cochlear_implant",
            "examination_table",
            "imaging_equipment",
            "infusion_pump",
            "ventilator",
            "defibrillator",
            "other"
          ]
        },
        "use_environment": {
          "type": "string",
          "enum": ["home", "clinical", "both"]
        },
        "intended_users": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["patient", "caregiver", "healthcare_professional"]
              },
              "training_required": {
                "type": "boolean"
              },
              "supervision_required": {
                "type": "boolean"
              }
            }
          }
        },
        "interface": {
          "$ref": "#/definitions/DeviceInterface"
        },
        "connectivity": {
          "$ref": "#/definitions/DeviceConnectivity"
        }
      }
    },
    "DeviceInterface": {
      "type": "object",
      "properties": {
        "display": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["lcd", "led", "oled", "e_ink", "none"]
            },
            "size_inches": {
              "type": "number",
              "minimum": 0
            },
            "resolution": {
              "type": "object",
              "properties": {
                "width": { "type": "integer" },
                "height": { "type": "integer" }
              }
            },
            "touch_enabled": {
              "type": "boolean"
            },
            "color": {
              "type": "boolean"
            },
            "brightness_adjustable": {
              "type": "boolean"
            },
            "contrast_adjustable": {
              "type": "boolean"
            }
          }
        },
        "physical_controls": {
          "type": "object",
          "properties": {
            "buttons": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/ButtonInfo"
              }
            },
            "dials": {
              "type": "array",
              "items": {
                "type": "object"
              }
            },
            "switches": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          }
        },
        "audio": {
          "type": "object",
          "properties": {
            "speaker": { "type": "boolean" },
            "speaker_volume_adjustable": { "type": "boolean" },
            "microphone": { "type": "boolean" },
            "audio_jack": { "type": "boolean" },
            "bluetooth_audio": { "type": "boolean" }
          }
        },
        "haptic": {
          "type": "object",
          "properties": {
            "vibration": { "type": "boolean" },
            "intensity_levels": { "type": "integer", "minimum": 0 },
            "patterns_supported": { "type": "boolean" }
          }
        }
      }
    },
    "ButtonInfo": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "label": { "type": "string" },
        "tactile_marking": { "type": "boolean" },
        "size_mm": { "type": "number" },
        "force_required_grams": { "type": "number" },
        "location": { "type": "string" }
      }
    },
    "DeviceConnectivity": {
      "type": "object",
      "properties": {
        "wireless": {
          "type": "object",
          "properties": {
            "bluetooth": {
              "type": "object",
              "properties": {
                "version": { "type": "string" },
                "profiles": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            },
            "wifi": {
              "type": "object",
              "properties": {
                "standards": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            },
            "cellular": {
              "type": "object",
              "properties": {
                "technology": { "type": "string" }
              }
            },
            "nfc": { "type": "boolean" }
          }
        },
        "wired": {
          "type": "object",
          "properties": {
            "usb": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "version": { "type": "string" }
              }
            },
            "audio_jack": { "type": "boolean" },
            "proprietary": { "type": "string" }
          }
        },
        "companion_app": {
          "type": "object",
          "properties": {
            "platforms": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["ios", "android", "windows", "macos"]
              }
            },
            "accessibility_features": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "cloud_integration": {
          "type": "object",
          "properties": {
            "provider": { "type": "string" },
            "data_sync": { "type": "boolean" },
            "remote_monitoring": { "type": "boolean" }
          }
        }
      }
    },
    "DeviceAccessibilityFeatures": {
      "type": "object",
      "required": ["visual", "auditory", "motor", "cognitive"],
      "properties": {
        "visual": {
          "$ref": "#/definitions/VisualAccessibility"
        },
        "auditory": {
          "$ref": "#/definitions/AuditoryAccessibility"
        },
        "motor": {
          "$ref": "#/definitions/MotorAccessibility"
        },
        "cognitive": {
          "$ref": "#/definitions/CognitiveAccessibility"
        },
        "physical": {
          "$ref": "#/definitions/PhysicalAccessibility"
        },
        "accessibility_score": {
          "type": "object",
          "properties": {
            "overall": { "type": "number", "minimum": 0, "maximum": 100 },
            "visual": { "type": "number", "minimum": 0, "maximum": 100 },
            "auditory": { "type": "number", "minimum": 0, "maximum": 100 },
            "motor": { "type": "number", "minimum": 0, "maximum": 100 },
            "cognitive": { "type": "number", "minimum": 0, "maximum": 100 }
          }
        }
      }
    },
    "VisualAccessibility": {
      "type": "object",
      "properties": {
        "screen_reader": {
          "type": "object",
          "properties": {
            "supported": { "type": "boolean" },
            "level": {
              "type": "string",
              "enum": ["none", "partial", "full"]
            },
            "protocols": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["talkback", "voiceover", "nvda", "jaws", "custom"]
              }
            }
          }
        },
        "voice_output": {
          "type": "object",
          "properties": {
            "supported": { "type": "boolean" },
            "readings": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "data_type": { "type": "string" },
                  "format": { "type": "string" },
                  "units_spoken": { "type": "boolean" },
                  "range_indication": { "type": "boolean" }
                }
              }
            },
            "languages": {
              "type": "array",
              "items": { "type": "string" }
            },
            "speed_adjustable": { "type": "boolean" },
            "volume_adjustable": { "type": "boolean" }
          }
        },
        "display_accessibility": {
          "type": "object",
          "properties": {
            "high_contrast_mode": { "type": "boolean" },
            "large_text_mode": { "type": "boolean" },
            "text_size_adjustable": { "type": "boolean" },
            "color_inversion": { "type": "boolean" },
            "color_blind_modes": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["protanopia", "deuteranopia", "tritanopia", "achromatopsia"]
              }
            }
          }
        },
        "non_visual_alternatives": {
          "type": "object",
          "properties": {
            "audio_feedback": { "type": "boolean" },
            "haptic_feedback": { "type": "boolean" },
            "braille_output": { "type": "boolean" }
          }
        }
      }
    },
    "AuditoryAccessibility": {
      "type": "object",
      "properties": {
        "visual_alerts": {
          "type": "object",
          "properties": {
            "supported": { "type": "boolean" },
            "types": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["screen_flash", "led_indicator", "icon_display", "text_notification", "color_change"]
              }
            },
            "customizable": { "type": "boolean" }
          }
        },
        "haptic_alerts": {
          "type": "object",
          "properties": {
            "supported": { "type": "boolean" },
            "patterns": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/HapticPattern"
              }
            },
            "intensity_levels": { "type": "integer" }
          }
        },
        "audio_adjustments": {
          "type": "object",
          "properties": {
            "volume_range": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 2,
              "maxItems": 2
            },
            "frequency_adjustable": { "type": "boolean" },
            "mono_audio": { "type": "boolean" },
            "hearing_aid_compatible": { "type": "boolean" },
            "t_coil_compatible": { "type": "boolean" }
          }
        },
        "text_alternatives": {
          "type": "object",
          "properties": {
            "on_screen_text": { "type": "boolean" },
            "closed_captions": { "type": "boolean" },
            "real_time_transcription": { "type": "boolean" }
          }
        }
      }
    },
    "HapticPattern": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "meaning": { "type": "string" },
        "duration_ms": { "type": "integer" },
        "intensity": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "MotorAccessibility": {
      "type": "object",
      "properties": {
        "alternative_input": {
          "type": "object",
          "properties": {
            "voice_control": { "type": "boolean" },
            "switch_access": { "type": "boolean" },
            "eye_tracking": { "type": "boolean" },
            "head_tracking": { "type": "boolean" },
            "wia_exoskeleton": { "type": "boolean" }
          }
        },
        "physical_controls": {
          "type": "object",
          "properties": {
            "large_buttons": { "type": "boolean" },
            "button_spacing_adequate": { "type": "boolean" },
            "low_force_buttons": { "type": "boolean" },
            "one_handed_operation": { "type": "boolean" },
            "no_fine_motor_required": { "type": "boolean" }
          }
        },
        "touchscreen": {
          "type": "object",
          "properties": {
            "gesture_alternatives": { "type": "boolean" },
            "touch_accommodation": { "type": "boolean" },
            "dwell_control": { "type": "boolean" },
            "haptic_feedback": { "type": "boolean" }
          }
        },
        "automation": {
          "type": "object",
          "properties": {
            "auto_measurement": { "type": "boolean" },
            "scheduled_operation": { "type": "boolean" },
            "remote_control": { "type": "boolean" }
          }
        }
      }
    },
    "CognitiveAccessibility": {
      "type": "object",
      "properties": {
        "simplified_interface": {
          "type": "object",
          "properties": {
            "available": { "type": "boolean" },
            "reduced_options": { "type": "boolean" },
            "step_by_step_guidance": { "type": "boolean" },
            "clear_icons": { "type": "boolean" }
          }
        },
        "memory_support": {
          "type": "object",
          "properties": {
            "reminders": { "type": "boolean" },
            "history_log": { "type": "boolean" },
            "caregiver_notifications": { "type": "boolean" },
            "auto_data_sync": { "type": "boolean" }
          }
        },
        "error_prevention": {
          "type": "object",
          "properties": {
            "confirmation_prompts": { "type": "boolean" },
            "undo_capability": { "type": "boolean" },
            "clear_error_messages": { "type": "boolean" },
            "recovery_guidance": { "type": "boolean" }
          }
        },
        "language_support": {
          "type": "object",
          "properties": {
            "languages": {
              "type": "array",
              "items": { "type": "string" }
            },
            "simple_language_mode": { "type": "boolean" },
            "icon_based_navigation": { "type": "boolean" },
            "pictogram_support": { "type": "boolean" }
          }
        }
      }
    },
    "PhysicalAccessibility": {
      "type": "object",
      "properties": {
        "transfer_height": {
          "type": "object",
          "properties": {
            "adjustable": { "type": "boolean" },
            "minimum_height_inches": { "type": "number" },
            "maximum_height_inches": { "type": "number" },
            "mde_compliant": { "type": "boolean" }
          }
        },
        "wheelchair_access": {
          "type": "object",
          "properties": {
            "accessible": { "type": "boolean" },
            "clear_floor_space": { "type": "boolean" },
            "approach_type": {
              "type": "string",
              "enum": ["front", "side", "both"]
            },
            "knee_clearance": { "type": "boolean" }
          }
        },
        "dimensions": {
          "type": "object",
          "properties": {
            "weight_kg": { "type": "number" },
            "portable": { "type": "boolean" },
            "height_adjustable": { "type": "boolean" },
            "tilt_adjustable": { "type": "boolean" }
          }
        },
        "supports": {
          "type": "object",
          "properties": {
            "armrests": { "type": "boolean" },
            "grab_bars": { "type": "boolean" },
            "head_support": { "type": "boolean" },
            "leg_support": { "type": "boolean" }
          }
        }
      }
    },
    "RegulatoryCompliance": {
      "type": "object",
      "properties": {
        "fda": {
          "type": "object",
          "properties": {
            "registered": { "type": "boolean" },
            "clearance_number": { "type": "string" },
            "human_factors_validated": { "type": "boolean" },
            "accessibility_tested": { "type": "boolean" }
          }
        },
        "mde_standards": {
          "type": "object",
          "properties": {
            "compliant": { "type": "boolean" },
            "transfer_height_compliant": { "type": "boolean" },
            "last_assessment_date": { "type": "string", "format": "date" }
          }
        },
        "ada": {
          "type": "object",
          "properties": {
            "title_ii_compliant": { "type": "boolean" },
            "title_iii_compliant": { "type": "boolean" }
          }
        },
        "international": {
          "type": "object",
          "properties": {
            "iec_62366": { "type": "boolean" },
            "iso_14971": { "type": "boolean" },
            "en_301_549": { "type": "boolean" },
            "mdr_compliant": { "type": "boolean" }
          }
        },
        "wia_certification": {
          "type": "object",
          "properties": {
            "level": {
              "type": "string",
              "enum": ["bronze", "silver", "gold", "platinum"]
            },
            "certificate_id": { "type": "string" },
            "valid_until": { "type": "string", "format": "date" }
          }
        },
        "accessibility_conformance": {
          "type": "object",
          "properties": {
            "vpat_available": { "type": "boolean" },
            "vpat_url": { "type": "string", "format": "uri" },
            "wcag_level": {
              "type": "string",
              "enum": ["A", "AA", "AAA"]
            },
            "section_508_compliant": { "type": "boolean" }
          }
        }
      }
    },
    "WIAIntegration": {
      "type": "object",
      "properties": {
        "supported_protocols": {
          "type": "object",
          "properties": {
            "exoskeleton": { "type": "boolean" },
            "bionic_eye": { "type": "boolean" },
            "voice_sign": { "type": "boolean" },
            "haptic": { "type": "boolean" },
            "smart_wheelchair": { "type": "boolean" }
          }
        },
        "exoskeleton": {
          "type": "object",
          "properties": {
            "haptic_feedback_mapping": {
              "type": "array",
              "items": { "type": "object" }
            },
            "motion_assistance": { "type": "boolean" },
            "rehabilitation_mode": { "type": "boolean" }
          }
        },
        "bionic_eye": {
          "type": "object",
          "properties": {
            "display_optimization": { "type": "boolean" },
            "contrast_enhancement": { "type": "boolean" },
            "pattern_simplification": { "type": "boolean" }
          }
        },
        "voice_sign": {
          "type": "object",
          "properties": {
            "medical_terminology_support": { "type": "boolean" },
            "real_time_translation": { "type": "boolean" },
            "emergency_phrases": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "haptic": {
          "type": "object",
          "properties": {
            "alarm_mapping": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "alarm_priority": { "type": "string" },
                  "haptic_pattern": { "type": "string" },
                  "body_location": { "type": "string" }
                }
              }
            },
            "data_haptic_encoding": { "type": "boolean" }
          }
        },
        "smart_wheelchair": {
          "type": "object",
          "properties": {
            "device_positioning": { "type": "boolean" },
            "height_adjustment_sync": { "type": "boolean" }
          }
        }
      }
    },
    "ProfileMetadata": {
      "type": "object",
      "required": ["profile_type", "schema_version"],
      "properties": {
        "profile_type": {
          "type": "string",
          "enum": ["device", "user", "combination"]
        },
        "schema_version": {
          "type": "string"
        },
        "language": {
          "type": "string"
        },
        "created_by": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "validation": {
          "type": "object",
          "properties": {
            "validated": { "type": "boolean" },
            "validator": { "type": "string" },
            "validation_date": { "type": "string", "format": "date" }
          }
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}
