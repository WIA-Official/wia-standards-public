{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.org/schemas/medical/user-medical-profile.schema.json",
  "title": "WIA User Medical Accessibility Profile",
  "description": "User accessibility profile for medical device interaction",
  "type": "object",
  "required": ["user_id", "profile_version", "accessibility_needs", "sensory_preferences", "input_preferences"],
  "properties": {
    "user_id": {
      "type": "string",
      "description": "Anonymized user identifier"
    },
    "profile_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "accessibility_needs": {
      "$ref": "#/definitions/UserAccessibilityNeeds"
    },
    "sensory_preferences": {
      "$ref": "#/definitions/SensoryPreferences"
    },
    "input_preferences": {
      "$ref": "#/definitions/InputPreferences"
    },
    "cognitive_support": {
      "$ref": "#/definitions/CognitiveSupport"
    },
    "medical_context": {
      "$ref": "#/definitions/MedicalContext"
    },
    "wia_devices": {
      "$ref": "#/definitions/WIADeviceSettings"
    }
  },
  "definitions": {
    "UserAccessibilityNeeds": {
      "type": "object",
      "properties": {
        "sensory": {
          "type": "object",
          "properties": {
            "visual": {
              "type": "object",
              "properties": {
                "level": {
                  "type": "string",
                  "enum": ["none", "low_vision", "legally_blind", "totally_blind"]
                },
                "color_blind": {
                  "type": "string",
                  "enum": ["none", "protanopia", "deuteranopia", "tritanopia", "achromatopsia"]
                },
                "light_sensitivity": {
                  "type": "boolean"
                },
                "field_of_vision": {
                  "type": "string",
                  "enum": ["full", "tunnel", "peripheral_loss", "central_loss"]
                }
              }
            },
            "auditory": {
              "type": "object",
              "properties": {
                "level": {
                  "type": "string",
                  "enum": ["none", "hard_of_hearing", "deaf"]
                },
                "uses_hearing_aid": {
                  "type": "boolean"
                },
                "uses_cochlear_implant": {
                  "type": "boolean"
                },
                "frequency_range_affected": {
                  "type": "string",
                  "enum": ["none", "low", "mid", "high", "all"]
                }
              }
            }
          }
        },
        "motor": {
          "type": "object",
          "properties": {
            "upper_limb": {
              "type": "object",
              "properties": {
                "level": {
                  "type": "string",
                  "enum": ["none", "mild", "moderate", "severe"]
                },
                "affected_side": {
                  "type": "string",
                  "enum": ["none", "left", "right", "both"]
                },
                "tremor": {
                  "type": "boolean"
                },
                "grip_strength": {
                  "type": "string",
                  "enum": ["normal", "reduced", "minimal", "none"]
                }
              }
            },
            "fine_motor": {
              "type": "object",
              "properties": {
                "level": {
                  "type": "string",
                  "enum": ["none", "mild", "moderate", "severe"]
                }
              }
            },
            "mobility": {
              "type": "object",
              "properties": {
                "level": {
                  "type": "string",
                  "enum": ["ambulatory", "assisted", "wheelchair", "bed_bound"]
                },
                "uses_assistive_device": {
                  "type": "boolean"
                },
                "assistive_device_type": {
                  "type": "string"
                }
              }
            }
          }
        },
        "cognitive": {
          "type": "object",
          "properties": {
            "memory": {
              "type": "string",
              "enum": ["normal", "mild_impairment", "moderate_impairment", "severe_impairment"]
            },
            "attention": {
              "type": "string",
              "enum": ["normal", "limited", "very_limited"]
            },
            "processing_speed": {
              "type": "string",
              "enum": ["normal", "slower", "very_slow"]
            },
            "reading_level": {
              "type": "string",
              "enum": ["basic", "intermediate", "advanced"]
            },
            "primary_language": {
              "type": "string"
            },
            "additional_languages": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "medical_conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "condition": { "type": "string" },
              "relevance_to_device_use": { "type": "string" }
            }
          }
        }
      }
    },
    "SensoryPreferences": {
      "type": "object",
      "properties": {
        "visual": {
          "type": "object",
          "properties": {
            "text_size": {
              "type": "string",
              "enum": ["small", "medium", "large", "extra_large"]
            },
            "high_contrast": {
              "type": "boolean"
            },
            "dark_mode": {
              "type": "boolean"
            },
            "color_scheme": {
              "type": "string"
            },
            "reduce_motion": {
              "type": "boolean"
            },
            "reduce_transparency": {
              "type": "boolean"
            }
          }
        },
        "auditory": {
          "type": "object",
          "properties": {
            "volume_level": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "prefer_voice": {
              "type": "boolean"
            },
            "voice_speed": {
              "type": "number",
              "minimum": 0.5,
              "maximum": 2.0
            },
            "voice_pitch": {
              "type": "string",
              "enum": ["low", "medium", "high"]
            },
            "prefer_tones": {
              "type": "boolean"
            },
            "tone_frequency_preference": {
              "type": "number"
            }
          }
        },
        "haptic": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "intensity": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "prefer_haptic_over_audio": {
              "type": "boolean"
            },
            "wia_haptic_device": {
              "type": "string"
            }
          }
        }
      }
    },
    "InputPreferences": {
      "type": "object",
      "properties": {
        "primary_input": {
          "type": "string",
          "enum": ["touch", "buttons", "voice", "switch", "eye_tracking", "head_tracking", "wia_exoskeleton"]
        },
        "fallback_inputs": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["touch", "buttons", "voice", "switch", "eye_tracking", "head_tracking", "wia_exoskeleton"]
          }
        },
        "touch_settings": {
          "type": "object",
          "properties": {
            "touch_duration_ms": {
              "type": "integer",
              "minimum": 0
            },
            "ignore_repeated_touches": {
              "type": "boolean"
            },
            "touch_accommodation": {
              "type": "boolean"
            }
          }
        },
        "voice_settings": {
          "type": "object",
          "properties": {
            "voice_language": {
              "type": "string"
            },
            "wake_word": {
              "type": "string"
            },
            "confirmation_required": {
              "type": "boolean"
            }
          }
        },
        "switch_settings": {
          "type": "object",
          "properties": {
            "switch_type": {
              "type": "string"
            },
            "scanning_speed": {
              "type": "string",
              "enum": ["slow", "medium", "fast"]
            },
            "auto_scanning": {
              "type": "boolean"
            }
          }
        },
        "dwell_settings": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "dwell_time_ms": {
              "type": "integer",
              "minimum": 100
            }
          }
        }
      }
    },
    "CognitiveSupport": {
      "type": "object",
      "properties": {
        "simplified_mode": {
          "type": "boolean"
        },
        "step_by_step_guidance": {
          "type": "boolean"
        },
        "reminder_frequency": {
          "type": "string",
          "enum": ["none", "low", "medium", "high"]
        },
        "caregiver_mode": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "caregiver_contact": {
              "type": "string"
            },
            "notification_types": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["missed_reading", "abnormal_value", "device_error", "low_battery"]
              }
            }
          }
        },
        "confirmation_level": {
          "type": "string",
          "enum": ["none", "important_only", "all_actions"]
        }
      }
    },
    "MedicalContext": {
      "type": "object",
      "properties": {
        "conditions_monitored": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "devices_used": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "device_id": { "type": "string" },
              "device_type": { "type": "string" },
              "usage_frequency": {
                "type": "string",
                "enum": ["continuous", "daily", "weekly", "as_needed"]
              }
            }
          }
        },
        "healthcare_provider": {
          "type": "object",
          "properties": {
            "data_sharing_enabled": { "type": "boolean" },
            "provider_id": { "type": "string" }
          }
        }
      }
    },
    "WIADeviceSettings": {
      "type": "object",
      "properties": {
        "exoskeleton": {
          "type": "object",
          "properties": {
            "device_id": { "type": "string" },
            "enabled": { "type": "boolean" },
            "haptic_intensity": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "assistance_level": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          }
        },
        "bionic_eye": {
          "type": "object",
          "properties": {
            "device_id": { "type": "string" },
            "enabled": { "type": "boolean" },
            "brightness": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "contrast": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          }
        },
        "voice_sign": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "sign_language": {
              "type": "string",
              "enum": ["ASL", "BSL", "KSL", "JSL", "DGS", "LSF", "Auslan", "other"]
            },
            "medical_terms_mode": { "type": "boolean" }
          }
        },
        "smart_wheelchair": {
          "type": "object",
          "properties": {
            "device_id": { "type": "string" },
            "enabled": { "type": "boolean" },
            "auto_positioning": { "type": "boolean" }
          }
        }
      }
    }
  }
}
