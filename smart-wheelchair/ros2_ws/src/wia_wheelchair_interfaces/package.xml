<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>wia_wheelchair_interfaces</name>
  <version>1.0.0</version>
  <description>
    WIA Smart Wheelchair Interface Nodes

    Provides integration with assistive devices including:
    - Eye Gaze control
    - BCI (Brain-Computer Interface) control
    - Voice commands with AAC integration
    - Exoskeleton transition management
    - Smart home (Matter/Thread) integration
  </description>

  <maintainer email="wia@example.com">WIA Standards Team</maintainer>
  <license>Apache-2.0</license>

  <buildtool_depend>ament_cmake</buildtool_depend>
  <buildtool_depend>ament_cmake_python</buildtool_depend>

  <depend>rclpy</depend>
  <depend>std_msgs</depend>
  <depend>geometry_msgs</depend>
  <depend>std_srvs</depend>
  <depend>wia_wheelchair_msgs</depend>

  <exec_depend>python3-yaml</exec_depend>

  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
