{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/bci/events.schema.json",
  "title": "WIA BCI Events",
  "description": "Schema for event markers and annotations",
  "type": "object",
  "required": [
    "event_count",
    "events"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "event_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of events"
    },
    "event_definitions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/eventDefinition"
      },
      "description": "Definitions of event types used in this recording"
    },
    "events": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/event"
      },
      "description": "Array of event markers"
    },
    "annotations": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/annotation"
      },
      "description": "Free-form annotations"
    },
    "epochs": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/epoch"
      },
      "description": "Defined time epochs/trials"
    }
  },
  "definitions": {
    "eventDefinition": {
      "type": "object",
      "required": ["code"],
      "properties": {
        "code": {
          "type": "integer",
          "description": "Numeric event code"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description"
        },
        "category": {
          "type": "string",
          "enum": [
            "stimulus",
            "response",
            "feedback",
            "system",
            "artifact",
            "custom"
          ]
        },
        "color": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Display color (hex)"
        }
      }
    },
    "event": {
      "type": "object",
      "required": ["timestamp_seconds", "code"],
      "properties": {
        "timestamp_seconds": {
          "type": "number",
          "minimum": 0,
          "description": "Event time relative to recording start (seconds)"
        },
        "sample_index": {
          "type": "integer",
          "minimum": 0,
          "description": "Sample index at event time"
        },
        "code": {
          "type": "integer",
          "description": "Numeric event code"
        },
        "type": {
          "type": "string",
          "description": "Event type name (references event_definitions)"
        },
        "value": {
          "oneOf": [
            {"type": "string"},
            {"type": "number"},
            {"type": "boolean"},
            {"type": "object"}
          ],
          "description": "Event value or additional data"
        },
        "duration_seconds": {
          "type": "number",
          "minimum": 0,
          "description": "Event duration in seconds (0 for instantaneous)"
        },
        "channel": {
          "oneOf": [
            {"type": "integer"},
            {"type": "string"},
            {"type": "array", "items": {"type": "integer"}}
          ],
          "description": "Associated channel(s)"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence score for detected events"
        }
      }
    },
    "annotation": {
      "type": "object",
      "required": ["timestamp_seconds", "text"],
      "properties": {
        "timestamp_seconds": {
          "type": "number",
          "minimum": 0,
          "description": "Annotation time"
        },
        "end_timestamp_seconds": {
          "type": "number",
          "description": "End time for range annotations"
        },
        "text": {
          "type": "string",
          "description": "Annotation text"
        },
        "author": {
          "type": "string",
          "description": "Who created the annotation"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "When annotation was created"
        },
        "tags": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Tags for categorization"
        }
      }
    },
    "epoch": {
      "type": "object",
      "required": ["start_seconds", "end_seconds"],
      "properties": {
        "epoch_id": {
          "type": "string",
          "description": "Unique epoch identifier"
        },
        "start_seconds": {
          "type": "number",
          "description": "Epoch start time"
        },
        "end_seconds": {
          "type": "number",
          "description": "Epoch end time"
        },
        "start_sample": {
          "type": "integer"
        },
        "end_sample": {
          "type": "integer"
        },
        "label": {
          "type": "string",
          "description": "Epoch label/class"
        },
        "trial_number": {
          "type": "integer",
          "description": "Trial number in sequence"
        },
        "condition": {
          "type": "string",
          "description": "Experimental condition"
        },
        "correct": {
          "type": "boolean",
          "description": "Whether response was correct"
        },
        "reaction_time_ms": {
          "type": "number",
          "description": "Reaction time in milliseconds"
        },
        "rejected": {
          "type": "boolean",
          "default": false,
          "description": "Whether epoch was rejected (artifact)"
        },
        "rejection_reason": {
          "type": "string",
          "description": "Reason for rejection"
        }
      }
    }
  }
}
