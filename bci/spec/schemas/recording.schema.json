{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/bci/recording.schema.json",
  "title": "WIA BCI Recording",
  "description": "Schema for WIA BCI recording metadata",
  "type": "object",
  "required": [
    "wia_version",
    "recording_id",
    "recording_info",
    "data_files"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "wia_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "WIA BCI specification version"
    },
    "format_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Data format version"
    },
    "recording_id": {
      "type": "string",
      "pattern": "^rec-[a-zA-Z0-9-]+$",
      "description": "Unique recording identifier"
    },
    "recording_info": {
      "type": "object",
      "required": ["start_time"],
      "properties": {
        "start_time": {
          "type": "string",
          "format": "date-time",
          "description": "Recording start time (ISO 8601)"
        },
        "end_time": {
          "type": "string",
          "format": "date-time",
          "description": "Recording end time (ISO 8601)"
        },
        "duration_seconds": {
          "type": "number",
          "minimum": 0,
          "description": "Total recording duration in seconds"
        },
        "timezone": {
          "type": "string",
          "description": "IANA timezone identifier"
        }
      }
    },
    "session": {
      "type": "object",
      "properties": {
        "session_id": {
          "type": "string",
          "pattern": "^ses-[a-zA-Z0-9-]+$"
        },
        "session_type": {
          "type": "string",
          "enum": ["research", "clinical", "training", "evaluation", "other"]
        },
        "paradigm": {
          "type": "string",
          "enum": [
            "motor_imagery",
            "p300_speller",
            "ssvep",
            "erp",
            "resting_state",
            "imagined_speech",
            "error_potential",
            "hybrid",
            "other"
          ]
        },
        "description": {
          "type": "string"
        }
      }
    },
    "data_files": {
      "type": "object",
      "properties": {
        "eeg": {
          "$ref": "#/definitions/dataFile"
        },
        "emg": {
          "$ref": "#/definitions/dataFile"
        },
        "eog": {
          "$ref": "#/definitions/dataFile"
        },
        "ecg": {
          "$ref": "#/definitions/dataFile"
        },
        "auxiliary": {
          "$ref": "#/definitions/dataFile"
        },
        "events": {
          "$ref": "#/definitions/dataFile"
        }
      }
    },
    "references": {
      "type": "object",
      "properties": {
        "device": {
          "type": "string",
          "description": "Path to device.json"
        },
        "subject": {
          "type": "string",
          "description": "Path to subject.json"
        },
        "channels": {
          "type": "string",
          "description": "Path to channels.json"
        }
      }
    },
    "software": {
      "type": "object",
      "properties": {
        "recording_software": {
          "type": "string"
        },
        "recording_version": {
          "type": "string"
        },
        "export_software": {
          "type": "string"
        },
        "export_version": {
          "type": "string"
        }
      }
    },
    "notes": {
      "type": "string",
      "description": "Free-form notes about the recording"
    }
  },
  "definitions": {
    "dataFile": {
      "type": "object",
      "required": ["file"],
      "properties": {
        "file": {
          "type": "string",
          "description": "Path to data file"
        },
        "metadata": {
          "type": "string",
          "description": "Path to metadata file"
        },
        "format": {
          "type": "string",
          "enum": [
            "binary_float32_le",
            "binary_float64_le",
            "binary_int16_le",
            "binary_int24_le",
            "binary_int32_le",
            "json",
            "csv"
          ]
        }
      }
    }
  }
}
