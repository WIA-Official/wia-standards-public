{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/robot/v1/device.schema.json",
  "title": "WIA Robot Device Base Schema",
  "description": "Base schema for all WIA Robot data formats",
  "type": "object",
  "required": ["$schema", "version", "device", "state", "spec", "safety", "meta"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Data format version (semver)"
    },
    "device": {
      "$ref": "#/definitions/DeviceInfo"
    },
    "user": {
      "$ref": "#/definitions/UserInfo"
    },
    "state": {
      "$ref": "#/definitions/DeviceState"
    },
    "spec": {
      "type": "object",
      "description": "Robot-type specific data"
    },
    "safety": {
      "$ref": "#/definitions/SafetyStatus"
    },
    "meta": {
      "$ref": "#/definitions/Metadata"
    }
  },
  "definitions": {
    "DeviceInfo": {
      "type": "object",
      "required": ["id", "type", "name", "manufacturer", "model", "firmware_version"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique device identifier"
        },
        "type": {
          "$ref": "#/definitions/RobotType"
        },
        "name": {
          "type": "string",
          "description": "Human-readable device name"
        },
        "manufacturer": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "firmware_version": {
          "type": "string"
        },
        "serial_number": {
          "type": "string"
        },
        "capabilities": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "RobotType": {
      "type": "string",
      "enum": [
        "exoskeleton",
        "prosthetics",
        "rehabilitation",
        "care_robot",
        "surgical",
        "mobility_aid"
      ]
    },
    "UserInfo": {
      "type": "object",
      "required": ["id", "medical_clearance"],
      "properties": {
        "id": {
          "type": "string"
        },
        "profile_id": {
          "type": "string",
          "description": "WIA Unified Profile ID"
        },
        "medical_clearance": {
          "type": "boolean"
        },
        "accessibility_needs": {
          "$ref": "#/definitions/AccessibilityNeeds"
        }
      }
    },
    "AccessibilityNeeds": {
      "type": "object",
      "properties": {
        "visual": {
          "type": "string",
          "enum": ["none", "low_vision", "blind"]
        },
        "hearing": {
          "type": "string",
          "enum": ["none", "hard_of_hearing", "deaf"]
        },
        "motor": {
          "type": "string",
          "enum": ["none", "limited", "significant"]
        },
        "cognitive": {
          "type": "string",
          "enum": ["none", "mild", "moderate"]
        },
        "preferred_feedback": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["visual", "audio", "haptic"]
          }
        },
        "preferred_input": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["joystick", "voice", "switch", "eye_gaze", "emg", "sip_puff"]
          }
        }
      }
    },
    "DeviceState": {
      "type": "object",
      "required": ["status", "battery_percent", "uptime_seconds"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["operational", "standby", "error", "maintenance", "charging"]
        },
        "battery_percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "battery_voltage": {
          "type": "number"
        },
        "battery_temp_c": {
          "type": "number"
        },
        "uptime_seconds": {
          "type": "integer",
          "minimum": 0
        },
        "last_calibration": {
          "type": "string",
          "format": "date-time"
        },
        "error_codes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "SafetyStatus": {
      "type": "object",
      "required": ["emergency_stop", "safety_score"],
      "properties": {
        "emergency_stop": {
          "type": "boolean"
        },
        "emergency_stop_source": {
          "type": "string",
          "enum": ["user_button", "remote", "software", "overload", "fall", "obstacle"]
        },
        "fall_detection": {
          "type": "boolean"
        },
        "collision_avoidance": {
          "type": "boolean"
        },
        "force_limit_ok": {
          "type": "boolean"
        },
        "workspace_boundary_ok": {
          "type": "boolean"
        },
        "vital_signs_ok": {
          "type": "boolean"
        },
        "safety_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "Metadata": {
      "type": "object",
      "required": ["timestamp", "sequence"],
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "sequence": {
          "type": "integer",
          "minimum": 0
        },
        "sample_rate_hz": {
          "type": "number"
        },
        "location": {
          "type": "object",
          "properties": {
            "latitude": { "type": "number" },
            "longitude": { "type": "number" },
            "altitude_m": { "type": "number" },
            "accuracy_m": { "type": "number" }
          }
        },
        "session_id": {
          "type": "string"
        }
      }
    },
    "Vector3D": {
      "type": "object",
      "required": ["x", "y", "z"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      }
    }
  }
}
