{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/robot/v1/surgical.schema.json",
  "title": "WIA Surgical Robot Data Schema",
  "description": "Schema for surgical assistant robot data",
  "allOf": [
    { "$ref": "device.schema.json" },
    {
      "properties": {
        "device": {
          "properties": {
            "type": { "const": "surgical" }
          }
        },
        "spec": {
          "$ref": "#/definitions/SurgicalSpec"
        }
      }
    }
  ],
  "definitions": {
    "SurgicalSpec": {
      "type": "object",
      "required": ["surgical_type", "procedure_phase", "instruments", "teleoperation", "camera", "workspace", "safety"],
      "properties": {
        "surgical_type": {
          "type": "string",
          "enum": ["minimally_invasive", "orthopedic", "neurosurgical", "cardiac", "urological", "general"]
        },
        "procedure_phase": {
          "type": "string",
          "enum": ["setup", "docking", "operating", "undocking", "complete"]
        },
        "instruments": {
          "type": "array",
          "items": { "$ref": "#/definitions/SurgicalInstrument" }
        },
        "teleoperation": {
          "$ref": "#/definitions/Teleoperation"
        },
        "camera": {
          "$ref": "#/definitions/CameraData"
        },
        "workspace": {
          "$ref": "#/definitions/WorkspaceData"
        },
        "safety": {
          "$ref": "#/definitions/SurgicalSafety"
        },
        "recording": {
          "$ref": "#/definitions/RecordingData"
        }
      }
    },
    "SurgicalInstrument": {
      "type": "object",
      "required": ["arm_id", "instrument_type", "position", "orientation", "state"],
      "properties": {
        "arm_id": { "type": "integer" },
        "instrument_type": { "type": "string" },
        "instrument_id": { "type": "string" },
        "position": { "$ref": "#/definitions/Position3D" },
        "orientation": { "$ref": "#/definitions/Orientation" },
        "velocity": { "$ref": "#/definitions/Vector3D" },
        "state": {
          "type": "string",
          "enum": ["open", "closed", "active", "inactive"]
        },
        "articulation_deg": { "type": "number" },
        "force_n": { "type": "number" },
        "power_w": { "type": "number" },
        "insertion_depth_mm": { "type": "number" },
        "usage_count": { "type": "integer" }
      }
    },
    "Teleoperation": {
      "type": "object",
      "required": ["surgeon_console_id", "connected", "latency_ms", "motion_scaling", "tremor_filtering", "clutch_engaged"],
      "properties": {
        "surgeon_console_id": { "type": "string" },
        "connected": { "type": "boolean" },
        "latency_ms": { "type": "number" },
        "motion_scaling": {
          "type": "number",
          "description": "Motion scaling ratio (e.g., 5.0 = 5:1 reduction)"
        },
        "tremor_filtering": { "type": "boolean" },
        "clutch_engaged": { "type": "boolean" }
      }
    },
    "CameraData": {
      "type": "object",
      "required": ["arm_id", "type", "zoom_level", "stereo_enabled", "resolution", "frame_rate_fps"],
      "properties": {
        "arm_id": { "type": "integer" },
        "type": {
          "type": "string",
          "enum": ["endoscope", "microscope", "external"]
        },
        "zoom_level": { "type": "number" },
        "focus_distance_mm": { "type": "number" },
        "stereo_enabled": { "type": "boolean" },
        "resolution": { "type": "string" },
        "frame_rate_fps": { "type": "number" },
        "field_of_view_deg": { "type": "number" }
      }
    },
    "WorkspaceData": {
      "type": "object",
      "required": ["boundaries", "reference_frame"],
      "properties": {
        "boundaries": {
          "type": "object",
          "required": ["type", "center", "dimensions"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["sphere", "cylinder", "box"]
            },
            "center": { "$ref": "#/definitions/Position3D" },
            "dimensions": {
              "type": "object",
              "additionalProperties": { "type": "number" }
            }
          }
        },
        "reference_frame": { "type": "string" },
        "registration_accuracy_mm": { "type": "number" }
      }
    },
    "SurgicalSafety": {
      "type": "object",
      "required": ["workspace_boundary_ok", "collision_detection", "force_limit_exceeded", "instrument_count_verified", "all_arms_visible"],
      "properties": {
        "workspace_boundary_ok": { "type": "boolean" },
        "collision_detection": { "type": "boolean" },
        "force_limit_exceeded": { "type": "boolean" },
        "instrument_count_verified": { "type": "boolean" },
        "all_arms_visible": { "type": "boolean" }
      }
    },
    "RecordingData": {
      "type": "object",
      "properties": {
        "active": { "type": "boolean" },
        "duration_s": { "type": "number" },
        "storage_available_gb": { "type": "number" }
      }
    },
    "Position3D": {
      "type": "object",
      "required": ["x", "y", "z"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      }
    },
    "Vector3D": {
      "type": "object",
      "required": ["x", "y", "z"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      }
    },
    "Orientation": {
      "type": "object",
      "required": ["roll", "pitch", "yaw"],
      "properties": {
        "roll": { "type": "number" },
        "pitch": { "type": "number" },
        "yaw": { "type": "number" }
      }
    }
  }
}
