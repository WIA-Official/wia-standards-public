{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/material/v1/holographic-storage.schema.json",
  "title": "WIA Material - Holographic Storage",
  "description": "Schema for holographic data storage materials and systems",
  "allOf": [
    { "$ref": "wia-material-v1.schema.json" }
  ],
  "properties": {
    "material_type": {
      "const": "holographic_storage"
    },
    "properties": {
      "type": "object",
      "properties": {
        "domain_specific": {
          "type": "object",
          "required": ["medium_type", "capacity_GB"],
          "properties": {
            "medium_type": {
              "type": "string",
              "enum": ["photorefractive_crystal", "photopolymer", "bacteriorhodopsin", "other"],
              "description": "Type of holographic storage medium"
            },
            "material": {
              "type": "string",
              "description": "Storage medium material",
              "examples": ["LiNbO3", "Fe:LiNbO3", "photopolymer"]
            },
            "dimensions_mm": {
              "type": "object",
              "properties": {
                "x": { "type": "number", "minimum": 0 },
                "y": { "type": "number", "minimum": 0 },
                "z": { "type": "number", "minimum": 0 }
              },
              "description": "Medium dimensions in millimeters"
            },
            "capacity_GB": {
              "type": "number",
              "minimum": 0,
              "description": "Storage capacity in gigabytes"
            },
            "wavelength_nm": {
              "type": "number",
              "minimum": 0,
              "description": "Recording laser wavelength in nanometers"
            },
            "multiplexing_method": {
              "type": "string",
              "enum": ["angular", "wavelength", "shift", "phase_code", "peristrophic"],
              "description": "Hologram multiplexing method"
            },
            "hologram_count": {
              "type": "integer",
              "minimum": 1,
              "description": "Number of holograms stored"
            },
            "page_size_bits": {
              "type": "integer",
              "minimum": 1,
              "description": "Bits per hologram page"
            },
            "reference_beam_angle_deg": {
              "type": "number",
              "description": "Reference beam angle in degrees"
            },
            "angular_selectivity_deg": {
              "type": "number",
              "minimum": 0,
              "description": "Angular selectivity in degrees"
            },
            "diffraction_efficiency_percent": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Diffraction efficiency in percent"
            },
            "read_speed_Mbps": {
              "type": "number",
              "minimum": 0,
              "description": "Read speed in megabits per second"
            },
            "write_speed_Mbps": {
              "type": "number",
              "minimum": 0,
              "description": "Write speed in megabits per second"
            },
            "retention_years": {
              "type": "number",
              "minimum": 0,
              "description": "Data retention period in years"
            },
            "rewrite_cycles": {
              "type": "integer",
              "minimum": 0,
              "description": "Number of rewrite cycles (0 for WORM)"
            },
            "error_correction": {
              "type": "string",
              "description": "Error correction scheme",
              "examples": ["ldpc", "reed_solomon", "turbo"]
            },
            "bit_error_rate": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Raw bit error rate before error correction"
            },
            "sensitivity_mJ_cm2": {
              "type": "number",
              "minimum": 0,
              "description": "Recording sensitivity in mJ/cmÂ²"
            }
          }
        }
      }
    }
  }
}
