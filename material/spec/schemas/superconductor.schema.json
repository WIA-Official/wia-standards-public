{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/material/v1/superconductor.schema.json",
  "title": "WIA Material - Superconductor",
  "description": "Schema for superconductor materials",
  "allOf": [
    { "$ref": "wia-material-v1.schema.json" }
  ],
  "properties": {
    "material_type": {
      "const": "superconductor"
    },
    "properties": {
      "type": "object",
      "properties": {
        "domain_specific": {
          "type": "object",
          "required": ["critical_temperature_K"],
          "properties": {
            "critical_temperature_K": {
              "type": "number",
              "minimum": 0,
              "description": "Critical temperature (Tc) in Kelvin"
            },
            "critical_pressure_Pa": {
              "type": "number",
              "minimum": 0,
              "description": "Critical pressure in Pascal"
            },
            "critical_current_density_A_m2": {
              "type": "number",
              "minimum": 0,
              "description": "Critical current density (Jc) in A/m²"
            },
            "critical_magnetic_field_T": {
              "type": "number",
              "minimum": 0,
              "description": "Upper critical magnetic field (Hc2) in Tesla"
            },
            "lower_critical_field_T": {
              "type": "number",
              "minimum": 0,
              "description": "Lower critical magnetic field (Hc1) in Tesla"
            },
            "meissner_effect": {
              "type": "boolean",
              "description": "Whether Meissner effect is observed"
            },
            "superconductor_type": {
              "type": "string",
              "enum": ["type_i", "type_ii"],
              "description": "Type I or Type II superconductor"
            },
            "coherence_length_nm": {
              "type": "number",
              "minimum": 0,
              "description": "Coherence length (ξ) in nanometers"
            },
            "penetration_depth_nm": {
              "type": "number",
              "minimum": 0,
              "description": "London penetration depth (λ) in nanometers"
            },
            "ginzburg_landau_parameter": {
              "type": "number",
              "minimum": 0,
              "description": "Ginzburg-Landau parameter (κ = λ/ξ)"
            },
            "energy_gap_meV": {
              "type": "number",
              "minimum": 0,
              "description": "Superconducting energy gap (Δ) in meV"
            },
            "pairing_mechanism": {
              "type": "string",
              "enum": ["bcs", "unconventional", "unknown"],
              "description": "Cooper pairing mechanism"
            }
          }
        }
      }
    }
  }
}
