{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/bio/sequence.schema.json",
  "title": "WIA Biotech Sequence",
  "description": "Schema for biological sequence data",
  "type": "object",
  "required": [
    "sequence_id",
    "sequence_type",
    "length_bp"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "sequence_id": {
      "type": "string",
      "pattern": "^seq-[a-zA-Z0-9-]+$",
      "description": "Unique sequence identifier"
    },
    "sequence_info": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Sequence name"
        },
        "description": {
          "type": "string",
          "description": "Sequence description"
        },
        "organism": {
          "type": "string",
          "description": "Source organism"
        },
        "taxonomy_id": {
          "type": "integer",
          "description": "NCBI Taxonomy ID"
        },
        "gene_symbol": {
          "type": "string",
          "description": "Gene symbol"
        },
        "gene_id": {
          "type": "string",
          "description": "Gene ID (e.g., NCBI Gene ID)"
        }
      }
    },
    "sequence_type": {
      "type": "string",
      "enum": ["dna", "rna", "mrna", "protein", "synthetic"],
      "description": "Type of sequence"
    },
    "length_bp": {
      "type": "integer",
      "minimum": 1,
      "description": "Sequence length in base pairs (or amino acids for proteins)"
    },
    "gc_content": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "GC content (for DNA/RNA)"
    },
    "source": {
      "type": "object",
      "properties": {
        "database": {
          "type": "string",
          "description": "Source database name"
        },
        "accession": {
          "type": "string",
          "description": "Accession number"
        },
        "version": {
          "type": "string",
          "description": "Sequence version"
        },
        "retrieved_date": {
          "type": "string",
          "format": "date",
          "description": "Date retrieved from database"
        }
      }
    },
    "annotations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["feature", "start", "end"],
        "properties": {
          "feature": {
            "type": "string",
            "enum": [
              "gene", "exon", "intron", "cds", "utr5", "utr3",
              "promoter", "terminator", "rbs", "operator",
              "enhancer", "silencer", "repeat", "misc"
            ],
            "description": "Feature type"
          },
          "start": {
            "type": "integer",
            "minimum": 1,
            "description": "Start position (1-based)"
          },
          "end": {
            "type": "integer",
            "minimum": 1,
            "description": "End position (1-based)"
          },
          "strand": {
            "type": "string",
            "enum": ["+", "-"],
            "description": "Strand orientation"
          },
          "name": {
            "type": "string",
            "description": "Feature name"
          },
          "qualifiers": {
            "type": "object",
            "description": "Additional qualifiers"
          }
        }
      },
      "description": "Sequence annotations"
    },
    "files": {
      "type": "object",
      "properties": {
        "fasta": {
          "type": "string",
          "description": "FASTA file path"
        },
        "genbank": {
          "type": "string",
          "description": "GenBank file path"
        },
        "embl": {
          "type": "string",
          "description": "EMBL file path"
        }
      }
    },
    "checksum": {
      "type": "object",
      "properties": {
        "algorithm": {
          "type": "string",
          "enum": ["md5", "sha256"],
          "description": "Checksum algorithm"
        },
        "value": {
          "type": "string",
          "description": "Checksum value"
        }
      }
    }
  }
}
