{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/bio/project.schema.json",
  "title": "WIA Biotech Project",
  "description": "Schema for biotechnology project metadata",
  "type": "object",
  "required": [
    "wia_version",
    "project_id",
    "project_info"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "wia_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "WIA Biotech specification version"
    },
    "format_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Data format version"
    },
    "project_id": {
      "type": "string",
      "pattern": "^proj-[a-zA-Z0-9-]+$",
      "description": "Unique project identifier"
    },
    "project_info": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Project name"
        },
        "description": {
          "type": "string",
          "description": "Project description"
        },
        "start_date": {
          "type": "string",
          "format": "date",
          "description": "Project start date"
        },
        "status": {
          "type": "string",
          "enum": ["planning", "active", "completed", "archived"],
          "description": "Project status"
        },
        "category": {
          "type": "string",
          "enum": [
            "gene_therapy",
            "synthetic_biology",
            "protein_engineering",
            "drug_discovery",
            "diagnostics",
            "agriculture",
            "industrial",
            "research",
            "other"
          ],
          "description": "Project category"
        }
      }
    },
    "organization": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Organization name"
        },
        "department": {
          "type": "string",
          "description": "Department or lab name"
        },
        "principal_investigator": {
          "type": "string",
          "description": "Principal investigator name"
        },
        "contact_email": {
          "type": "string",
          "format": "email",
          "description": "Contact email"
        }
      }
    },
    "data_files": {
      "type": "object",
      "properties": {
        "sequences": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Sequence data file paths"
        },
        "editing": {
          "type": "array",
          "items": {"type": "string"},
          "description": "CRISPR editing data file paths"
        },
        "structures": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Structure data file paths"
        },
        "parts": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Synthetic biology part file paths"
        },
        "experiments": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Experiment data file paths"
        }
      }
    },
    "ethics": {
      "type": "object",
      "properties": {
        "irb_approval": {
          "type": "string",
          "description": "IRB approval number"
        },
        "biosafety_level": {
          "type": "string",
          "enum": ["BSL-1", "BSL-2", "BSL-3", "BSL-4"],
          "description": "Biosafety level"
        },
        "gmo_approval": {
          "type": "string",
          "description": "GMO approval number"
        },
        "iacuc_approval": {
          "type": "string",
          "description": "IACUC approval for animal research"
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Project creation timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  }
}
