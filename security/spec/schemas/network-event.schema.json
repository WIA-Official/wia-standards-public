{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/security/v1/network-event.schema.json",
  "title": "WIA Network Event",
  "description": "Network Event type schema",
  "allOf": [
    { "$ref": "wia-security-v1.schema.json" }
  ],
  "properties": {
    "type": {
      "const": "network_event"
    },
    "data": {
      "$ref": "#/definitions/NetworkEventData"
    }
  },
  "definitions": {
    "NetworkEventData": {
      "type": "object",
      "required": ["event_type", "protocol", "source", "destination"],
      "properties": {
        "event_type": {
          "type": "string",
          "enum": ["connection", "dns", "http", "tls", "smtp", "ftp", "ssh", "rdp", "custom"],
          "description": "Network event type"
        },
        "protocol": {
          "type": "string",
          "enum": ["TCP", "UDP", "ICMP", "GRE", "ESP"],
          "description": "Network protocol"
        },
        "direction": {
          "type": "string",
          "enum": ["inbound", "outbound", "internal"]
        },
        "action": {
          "type": "string",
          "enum": ["allowed", "blocked", "dropped", "reset"]
        },
        "source": {
          "$ref": "#/definitions/NetworkHost"
        },
        "destination": {
          "$ref": "#/definitions/NetworkHost"
        },
        "bytes_sent": {
          "type": "integer",
          "minimum": 0
        },
        "bytes_received": {
          "type": "integer",
          "minimum": 0
        },
        "packets_sent": {
          "type": "integer",
          "minimum": 0
        },
        "packets_received": {
          "type": "integer",
          "minimum": 0
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0
        },
        "rule_matched": { "type": "string" },
        "application": { "type": "string" },
        "url": { "type": "string" },
        "http": {
          "type": "object",
          "properties": {
            "method": {
              "type": "string",
              "enum": ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "OPTIONS", "CONNECT", "TRACE"]
            },
            "status_code": {
              "type": "integer",
              "minimum": 100,
              "maximum": 599
            },
            "user_agent": { "type": "string" },
            "referer": { "type": "string" },
            "content_type": { "type": "string" }
          }
        },
        "dns": {
          "type": "object",
          "properties": {
            "query": { "type": "string" },
            "query_type": {
              "type": "string",
              "enum": ["A", "AAAA", "CNAME", "MX", "NS", "PTR", "SOA", "SRV", "TXT"]
            },
            "response": {
              "type": "array",
              "items": { "type": "string" }
            },
            "response_code": {
              "type": "string",
              "enum": ["NOERROR", "NXDOMAIN", "SERVFAIL", "REFUSED", "FORMERR"]
            }
          }
        },
        "tls": {
          "type": "object",
          "properties": {
            "version": {
              "type": "string",
              "enum": ["TLS 1.0", "TLS 1.1", "TLS 1.2", "TLS 1.3"]
            },
            "cipher": { "type": "string" },
            "sni": { "type": "string" },
            "certificate": {
              "type": "object",
              "properties": {
                "issuer": { "type": "string" },
                "subject": { "type": "string" },
                "not_before": {
                  "type": "string",
                  "format": "date-time"
                },
                "not_after": {
                  "type": "string",
                  "format": "date-time"
                },
                "fingerprint_sha256": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "NetworkHost": {
      "type": "object",
      "required": ["ip"],
      "properties": {
        "ip": { "type": "string" },
        "port": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535
        },
        "hostname": { "type": "string" },
        "mac": { "type": "string" },
        "geo": {
          "type": "object",
          "properties": {
            "country": { "type": "string" },
            "country_name": { "type": "string" },
            "city": { "type": "string" },
            "latitude": { "type": "number" },
            "longitude": { "type": "number" },
            "asn": { "type": "integer" },
            "org": { "type": "string" }
          }
        }
      }
    }
  }
}
