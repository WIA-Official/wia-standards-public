{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/security/v1/auth-event.schema.json",
  "title": "WIA Authentication Event",
  "description": "Authentication Event type schema",
  "allOf": [
    { "$ref": "wia-security-v1.schema.json" }
  ],
  "properties": {
    "type": {
      "const": "auth_event"
    },
    "data": {
      "$ref": "#/definitions/AuthEventData"
    }
  },
  "definitions": {
    "AuthEventData": {
      "type": "object",
      "required": ["event_type", "result", "user", "target"],
      "properties": {
        "event_type": {
          "type": "string",
          "enum": [
            "login_success",
            "login_failure",
            "logout",
            "password_change",
            "account_locked",
            "account_unlocked",
            "mfa_success",
            "mfa_failure",
            "privilege_escalation"
          ],
          "description": "Authentication event type"
        },
        "result": {
          "type": "string",
          "enum": ["success", "failure"]
        },
        "failure_reason": {
          "type": "string",
          "enum": [
            "invalid_credentials",
            "account_disabled",
            "account_locked",
            "expired_password",
            "mfa_failed",
            "unknown"
          ]
        },
        "user": {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": { "type": "string" },
            "domain": { "type": "string" },
            "email": {
              "type": "string",
              "format": "email"
            },
            "employee_id": { "type": "string" },
            "groups": {
              "type": "array",
              "items": { "type": "string" }
            },
            "roles": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "source": {
          "type": "object",
          "properties": {
            "ip": { "type": "string" },
            "hostname": { "type": "string" },
            "geo": {
              "type": "object",
              "properties": {
                "country": { "type": "string" },
                "city": { "type": "string" }
              }
            },
            "user_agent": { "type": "string" },
            "device_type": {
              "type": "string",
              "enum": ["desktop", "mobile", "tablet", "unknown"]
            }
          }
        },
        "target": {
          "type": "object",
          "required": ["type", "name"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["application", "host", "service", "network"]
            },
            "name": { "type": "string" },
            "ip": { "type": "string" },
            "url": { "type": "string" }
          }
        },
        "auth_method": {
          "type": "string",
          "enum": ["password", "sso", "certificate", "biometric", "mfa", "api_key", "oauth"]
        },
        "mfa_used": { "type": "boolean" },
        "mfa_method": {
          "type": "string",
          "enum": ["totp", "sms", "push", "hardware_token", "biometric"]
        },
        "session_id": { "type": "string" },
        "logon_type": {
          "type": "string",
          "enum": ["interactive", "network", "batch", "service", "remote_interactive"]
        },
        "attempt_count": {
          "type": "integer",
          "minimum": 1
        },
        "previous_login": {
          "type": "string",
          "format": "date-time"
        },
        "risk_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "risk_factors": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
