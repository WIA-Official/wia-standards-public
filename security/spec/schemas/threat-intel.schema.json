{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/security/v1/threat-intel.schema.json",
  "title": "WIA Threat Intelligence",
  "description": "Threat Intelligence event type schema",
  "allOf": [
    { "$ref": "wia-security-v1.schema.json" }
  ],
  "properties": {
    "type": {
      "const": "threat_intel"
    },
    "data": {
      "$ref": "#/definitions/ThreatIntelData"
    }
  },
  "definitions": {
    "ThreatIntelData": {
      "type": "object",
      "required": ["threat_type", "threat_name", "status"],
      "properties": {
        "threat_type": {
          "type": "string",
          "enum": ["malware", "apt", "campaign", "botnet", "ransomware", "phishing"],
          "description": "Threat type"
        },
        "threat_name": {
          "type": "string",
          "description": "Threat name"
        },
        "threat_family": {
          "type": "string",
          "description": "Threat family"
        },
        "aliases": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Known aliases"
        },
        "first_seen": {
          "type": "string",
          "format": "date-time"
        },
        "last_seen": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": ["active", "inactive", "unknown"],
          "description": "Threat status"
        },
        "indicators": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "value"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["ip", "domain", "url", "file_hash_md5", "file_hash_sha1", "file_hash_sha256", "email", "mutex", "registry"]
              },
              "value": { "type": "string" },
              "confidence": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "first_seen": {
                "type": "string",
                "format": "date-time"
              },
              "last_seen": {
                "type": "string",
                "format": "date-time"
              },
              "context": {
                "type": "object",
                "properties": {
                  "description": { "type": "string" },
                  "kill_chain_phase": { "type": "string" }
                }
              }
            }
          }
        },
        "ttps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "tactic": { "type": "string" },
              "tactic_name": { "type": "string" },
              "technique": { "type": "string" },
              "technique_name": { "type": "string" }
            }
          }
        },
        "target_sectors": {
          "type": "array",
          "items": { "type": "string" }
        },
        "target_countries": {
          "type": "array",
          "items": { "type": "string" }
        },
        "references": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "report_id": {
          "type": "string"
        }
      }
    }
  }
}
