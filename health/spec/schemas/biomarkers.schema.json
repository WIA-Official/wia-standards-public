{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wia.live/health/schemas/biomarkers.schema.json",
  "title": "WIA Health Biomarker Profile",
  "description": "Biomarker measurements and aging clocks for longevity assessment",
  "type": "object",
  "properties": {
    "inflammatoryMarkers": {
      "type": "object",
      "description": "Inflammatory biomarkers",
      "properties": {
        "crp": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "C-Reactive Protein (mg/L)"
        },
        "il6": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "Interleukin-6 (pg/mL)"
        },
        "tnfAlpha": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "Tumor Necrosis Factor Alpha (pg/mL)"
        },
        "il1beta": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "Interleukin-1 Beta (pg/mL)"
        },
        "il10": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "Interleukin-10 (pg/mL)"
        }
      },
      "additionalProperties": false
    },
    "metabolicMarkers": {
      "type": "object",
      "description": "Metabolic biomarkers",
      "properties": {
        "igf1": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "Insulin-like Growth Factor 1 (ng/mL)"
        },
        "gdf15": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "Growth Differentiation Factor 15 (pg/mL)"
        },
        "glucose": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "Fasting glucose (mg/dL)"
        },
        "insulin": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "Fasting insulin (μIU/mL)"
        },
        "hba1c": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "Glycated hemoglobin (%)"
        },
        "homair": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "HOMA-IR insulin resistance index"
        },
        "cholesterol": {
          "type": "object",
          "properties": {
            "total": {
              "$ref": "common.schema.json#/$defs/Measurement"
            },
            "ldl": {
              "$ref": "common.schema.json#/$defs/Measurement"
            },
            "hdl": {
              "$ref": "common.schema.json#/$defs/Measurement"
            },
            "triglycerides": {
              "$ref": "common.schema.json#/$defs/Measurement"
            },
            "vldl": {
              "$ref": "common.schema.json#/$defs/Measurement"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "hormonalMarkers": {
      "type": "object",
      "description": "Hormonal biomarkers",
      "properties": {
        "testosterone": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "Total testosterone (ng/dL)"
        },
        "freeTestosterone": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "Free testosterone (pg/mL)"
        },
        "estradiol": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "Estradiol (pg/mL)"
        },
        "dheas": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "DHEA-Sulfate (μg/dL)"
        },
        "cortisol": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "Cortisol (μg/dL)"
        },
        "growthHormone": {
          "$ref": "common.schema.json#/$defs/Measurement",
          "description": "Growth Hormone (ng/mL)"
        },
        "thyroid": {
          "type": "object",
          "properties": {
            "tsh": {
              "$ref": "common.schema.json#/$defs/Measurement",
              "description": "Thyroid Stimulating Hormone (mIU/L)"
            },
            "freeT3": {
              "$ref": "common.schema.json#/$defs/Measurement",
              "description": "Free T3 (pg/mL)"
            },
            "freeT4": {
              "$ref": "common.schema.json#/$defs/Measurement",
              "description": "Free T4 (ng/dL)"
            },
            "reverseT3": {
              "$ref": "common.schema.json#/$defs/Measurement",
              "description": "Reverse T3 (ng/dL)"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "organFunction": {
      "type": "object",
      "description": "Organ function markers",
      "properties": {
        "liver": {
          "type": "object",
          "properties": {
            "alt": {
              "$ref": "common.schema.json#/$defs/Measurement",
              "description": "Alanine Aminotransferase (U/L)"
            },
            "ast": {
              "$ref": "common.schema.json#/$defs/Measurement",
              "description": "Aspartate Aminotransferase (U/L)"
            },
            "ggt": {
              "$ref": "common.schema.json#/$defs/Measurement",
              "description": "Gamma-Glutamyl Transferase (U/L)"
            },
            "albumin": {
              "$ref": "common.schema.json#/$defs/Measurement",
              "description": "Albumin (g/dL)"
            },
            "bilirubin": {
              "$ref": "common.schema.json#/$defs/Measurement",
              "description": "Total Bilirubin (mg/dL)"
            },
            "alp": {
              "$ref": "common.schema.json#/$defs/Measurement",
              "description": "Alkaline Phosphatase (U/L)"
            }
          },
          "additionalProperties": false
        },
        "kidney": {
          "type": "object",
          "properties": {
            "creatinine": {
              "$ref": "common.schema.json#/$defs/Measurement",
              "description": "Creatinine (mg/dL)"
            },
            "egfr": {
              "$ref": "common.schema.json#/$defs/Measurement",
              "description": "Estimated GFR (mL/min/1.73m²)"
            },
            "bun": {
              "$ref": "common.schema.json#/$defs/Measurement",
              "description": "Blood Urea Nitrogen (mg/dL)"
            },
            "cystatin​C": {
              "$ref": "common.schema.json#/$defs/Measurement",
              "description": "Cystatin C (mg/L)"
            },
            "uricAcid": {
              "$ref": "common.schema.json#/$defs/Measurement",
              "description": "Uric Acid (mg/dL)"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "agingClocks": {
      "type": "object",
      "description": "Biological age calculations",
      "properties": {
        "chronologicalAge": {
          "type": "number",
          "minimum": 0,
          "maximum": 150,
          "description": "Chronological age in years"
        },
        "biologicalAge": {
          "type": "number",
          "minimum": 0,
          "maximum": 150,
          "description": "Calculated biological age in years"
        },
        "clockType": {
          "type": "string",
          "enum": [
            "horvath",
            "hannum",
            "grimAge",
            "phenoAge",
            "dunedinPACE",
            "levine",
            "skinBlood",
            "custom"
          ],
          "description": "Type of aging clock used"
        },
        "ageDelta": {
          "type": "number",
          "description": "Difference between biological and chronological age"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence score of the calculation"
        },
        "calculatedAt": {
          "$ref": "common.schema.json#/$defs/Timestamp"
        },
        "algorithm": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "version": {
              "type": "string"
            },
            "provider": {
              "type": "string"
            },
            "cpgSites": {
              "type": "integer",
              "description": "Number of CpG sites used"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
