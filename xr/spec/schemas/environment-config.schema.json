{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.org/schemas/xr/environment-config.schema.json",
  "title": "XR Environment Accessibility Configuration",
  "description": "Accessibility characteristics and requirements of XR environments",
  "type": "object",
  "required": ["environment_id", "environment_name", "environment_type", "accessibility", "sensory", "interaction"],
  "properties": {
    "environment_id": {
      "type": "string",
      "description": "Unique environment identifier"
    },
    "environment_name": {
      "type": "string",
      "description": "Human-readable environment name"
    },
    "environment_type": {
      "type": "string",
      "enum": ["game", "social", "educational", "therapeutic", "productivity", "entertainment"],
      "description": "Type of XR environment"
    },
    "accessibility": {
      "type": "object",
      "required": ["overall_rating", "visual_accessibility", "auditory_accessibility", "motor_accessibility", "cognitive_accessibility", "features", "content_warnings"],
      "properties": {
        "overall_rating": {
          "type": "string",
          "enum": ["not_accessible", "partially_accessible", "accessible", "fully_accessible"],
          "description": "Overall accessibility rating"
        },
        "visual_accessibility": {
          "$ref": "#/definitions/AccessibilityRating"
        },
        "auditory_accessibility": {
          "$ref": "#/definitions/AccessibilityRating"
        },
        "motor_accessibility": {
          "$ref": "#/definitions/AccessibilityRating"
        },
        "cognitive_accessibility": {
          "$ref": "#/definitions/AccessibilityRating"
        },
        "features": {
          "type": "object",
          "properties": {
            "has_captions": { "type": "boolean", "default": false },
            "has_audio_description": { "type": "boolean", "default": false },
            "has_sign_language": { "type": "boolean", "default": false },
            "has_colorblind_mode": { "type": "boolean", "default": false },
            "has_high_contrast": { "type": "boolean", "default": false },
            "has_simplified_mode": { "type": "boolean", "default": false },
            "has_one_handed_mode": { "type": "boolean", "default": false },
            "has_seated_mode": { "type": "boolean", "default": false },
            "has_teleport_locomotion": { "type": "boolean", "default": false },
            "has_comfort_settings": { "type": "boolean", "default": false }
          }
        },
        "content_warnings": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ContentWarning"
          }
        }
      }
    },
    "sensory": {
      "type": "object",
      "required": ["visual_intensity", "has_flashing", "audio_intensity", "motion_intensity"],
      "properties": {
        "visual_intensity": {
          "type": "string",
          "enum": ["calm", "moderate", "intense"]
        },
        "has_flashing": {
          "type": "boolean",
          "description": "Contains flashing or strobing content"
        },
        "flash_frequency_max_hz": {
          "type": "number",
          "description": "Maximum flash frequency in Hz"
        },
        "has_bright_lights": {
          "type": "boolean"
        },
        "has_darkness": {
          "type": "boolean"
        },
        "dominant_colors": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Primary colors used in environment"
        },
        "audio_intensity": {
          "type": "string",
          "enum": ["quiet", "moderate", "loud"]
        },
        "has_sudden_sounds": {
          "type": "boolean"
        },
        "has_continuous_background": {
          "type": "boolean",
          "description": "Has continuous background audio"
        },
        "motion_intensity": {
          "type": "string",
          "enum": ["minimal", "moderate", "intense"]
        },
        "has_forced_movement": {
          "type": "boolean",
          "description": "Forces camera/player movement"
        },
        "has_falling_sequences": {
          "type": "boolean"
        },
        "has_vehicle_motion": {
          "type": "boolean"
        }
      }
    },
    "interaction": {
      "type": "object",
      "required": ["minimum_input_methods", "required_physical_actions"],
      "properties": {
        "minimum_input_methods": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["controller_standard", "controller_adaptive", "eye_tracking", "voice_control", "head_tracking", "hand_tracking"]
          },
          "description": "Minimum required input methods"
        },
        "required_physical_actions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["standing", "walking", "crouching", "reaching_high", "reaching_low", "two_handed", "pointing", "grabbing", "throwing", "head_movement"]
          },
          "description": "Physical actions required"
        },
        "requires_voice": {
          "type": "boolean",
          "default": false
        },
        "requires_precise_aim": {
          "type": "boolean",
          "default": false
        },
        "requires_quick_reactions": {
          "type": "boolean",
          "default": false
        },
        "reaction_time_required_ms": {
          "type": "integer",
          "description": "Minimum reaction time required in milliseconds"
        }
      }
    }
  },
  "definitions": {
    "AccessibilityRating": {
      "type": "object",
      "required": ["score"],
      "properties": {
        "score": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Accessibility score (0-100)"
        },
        "issues": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["category", "severity", "description"],
            "properties": {
              "category": { "type": "string" },
              "severity": {
                "type": "string",
                "enum": ["minor", "moderate", "major", "blocker"]
              },
              "description": { "type": "string" },
              "workaround": { "type": "string" }
            }
          }
        }
      }
    },
    "ContentWarning": {
      "type": "object",
      "required": ["type", "severity", "can_be_disabled"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "flashing_lights",
            "loud_sounds",
            "sudden_events",
            "heights",
            "enclosed_spaces",
            "crowds",
            "violence",
            "gore",
            "body_horror",
            "motion_intense",
            "other"
          ]
        },
        "severity": {
          "type": "string",
          "enum": ["mild", "moderate", "strong"]
        },
        "can_be_disabled": {
          "type": "boolean"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}
