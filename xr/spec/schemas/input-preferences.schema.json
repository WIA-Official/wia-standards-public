{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.org/schemas/xr/input-preferences.schema.json",
  "title": "XR Input Preferences",
  "description": "Input method and control preferences for XR experiences",
  "type": "object",
  "required": ["primary_input", "fallback_inputs", "controller"],
  "properties": {
    "primary_input": {
      "$ref": "#/definitions/InputMethod",
      "description": "Primary input method"
    },
    "fallback_inputs": {
      "type": "array",
      "items": { "$ref": "#/definitions/InputMethod" },
      "description": "Fallback input methods in priority order"
    },
    "controller": {
      "type": "object",
      "required": ["dominant_hand", "one_handed_mode"],
      "properties": {
        "dominant_hand": {
          "type": "string",
          "enum": ["left", "right", "either"],
          "default": "right"
        },
        "one_handed_mode": {
          "type": "boolean",
          "default": false,
          "description": "Enable single controller operation"
        },
        "one_handed_controller": {
          "type": "string",
          "enum": ["left", "right"],
          "description": "Which controller to use in one-handed mode"
        },
        "button_remapping": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["original_button", "remapped_to"],
            "properties": {
              "original_button": { "type": "string" },
              "remapped_to": { "type": "string" }
            }
          }
        },
        "stick_sensitivity": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 2.0,
          "default": 1.0
        },
        "trigger_sensitivity": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 2.0,
          "default": 1.0
        },
        "stick_deadzone": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 0.5,
          "default": 0.1
        },
        "trigger_deadzone": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 0.5,
          "default": 0.05
        },
        "grip_toggle": {
          "type": "boolean",
          "default": false,
          "description": "Toggle grip instead of hold"
        },
        "trigger_toggle": {
          "type": "boolean",
          "default": false,
          "description": "Toggle trigger instead of hold"
        }
      }
    },
    "eye_tracking": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "dwell_time_ms": {
          "type": "integer",
          "minimum": 200,
          "maximum": 3000,
          "default": 800,
          "description": "Time to look at element to select"
        },
        "gaze_smoothing": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.3,
          "description": "Smoothing applied to gaze tracking"
        },
        "blink_to_select": {
          "type": "boolean",
          "default": false,
          "description": "Use blink as selection trigger"
        }
      }
    },
    "voice_control": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "language": {
          "type": "string",
          "description": "BCP-47 language code",
          "default": "en-US"
        },
        "wake_word": {
          "type": "string",
          "description": "Wake word to activate voice control"
        },
        "continuous_listening": {
          "type": "boolean",
          "default": false,
          "description": "Always listen for commands"
        },
        "command_timeout_ms": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 10000,
          "default": 5000,
          "description": "Timeout for voice command recognition"
        }
      }
    },
    "head_tracking": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "sensitivity": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 2.0,
          "default": 1.0
        },
        "snap_turning": {
          "type": "boolean",
          "default": false,
          "description": "Use snap rotation instead of smooth"
        },
        "snap_angle_degrees": {
          "type": "integer",
          "enum": [15, 30, 45, 60, 90],
          "default": 45,
          "description": "Degrees per snap turn"
        }
      }
    },
    "hand_tracking": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "gesture_recognition": {
          "type": "boolean",
          "default": true,
          "description": "Enable gesture-based commands"
        },
        "custom_gestures": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CustomGesture"
          }
        }
      }
    }
  },
  "definitions": {
    "InputMethod": {
      "type": "string",
      "enum": [
        "controller_standard",
        "controller_adaptive",
        "eye_tracking",
        "voice_control",
        "head_tracking",
        "hand_tracking",
        "brain_computer_interface",
        "switch_access",
        "mouth_controller",
        "wia_exoskeleton"
      ]
    },
    "CustomGesture": {
      "type": "object",
      "required": ["gesture_id", "gesture_name", "hand", "action", "gesture_data"],
      "properties": {
        "gesture_id": {
          "type": "string",
          "description": "Unique gesture identifier"
        },
        "gesture_name": {
          "type": "string",
          "description": "Human-readable gesture name"
        },
        "hand": {
          "type": "string",
          "enum": ["left", "right", "both"]
        },
        "action": {
          "type": "string",
          "description": "Action to trigger"
        },
        "gesture_data": {
          "type": "object",
          "properties": {
            "finger_states": {
              "type": "object",
              "properties": {
                "thumb": { "type": "string", "enum": ["extended", "curled", "any"] },
                "index": { "type": "string", "enum": ["extended", "curled", "any"] },
                "middle": { "type": "string", "enum": ["extended", "curled", "any"] },
                "ring": { "type": "string", "enum": ["extended", "curled", "any"] },
                "pinky": { "type": "string", "enum": ["extended", "curled", "any"] }
              }
            },
            "palm_direction": {
              "type": "string",
              "enum": ["up", "down", "forward", "back", "any"]
            },
            "motion": {
              "type": "string",
              "enum": ["static", "swipe", "circle", "wave"]
            }
          }
        }
      }
    }
  }
}
