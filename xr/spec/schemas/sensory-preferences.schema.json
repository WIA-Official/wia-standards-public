{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.org/schemas/xr/sensory-preferences.schema.json",
  "title": "XR Sensory Preferences",
  "description": "Visual, auditory, and haptic preferences for XR experiences",
  "type": "object",
  "required": ["visual", "auditory", "haptic"],
  "properties": {
    "visual": {
      "type": "object",
      "required": ["brightness_multiplier", "contrast_multiplier", "text_size_multiplier", "high_contrast_mode", "reduce_motion"],
      "properties": {
        "brightness_multiplier": {
          "type": "number",
          "minimum": 0.5,
          "maximum": 2.0,
          "default": 1.0,
          "description": "Brightness adjustment multiplier"
        },
        "contrast_multiplier": {
          "type": "number",
          "minimum": 0.5,
          "maximum": 3.0,
          "default": 1.0,
          "description": "Contrast adjustment multiplier"
        },
        "saturation_multiplier": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 2.0,
          "default": 1.0,
          "description": "Color saturation multiplier"
        },
        "color_filter": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["none", "protanopia", "deuteranopia", "tritanopia", "grayscale", "inverted", "custom"],
              "default": "none"
            },
            "custom_matrix": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 9,
              "maxItems": 9,
              "description": "3x3 color transformation matrix"
            }
          }
        },
        "text_size_multiplier": {
          "type": "number",
          "minimum": 0.5,
          "maximum": 3.0,
          "default": 1.0,
          "description": "Text size scaling factor"
        },
        "font_preference": {
          "type": "string",
          "enum": ["default", "sans_serif", "dyslexia_friendly", "high_legibility"],
          "default": "default"
        },
        "ui_scale": {
          "type": "number",
          "minimum": 0.5,
          "maximum": 2.0,
          "default": 1.0,
          "description": "UI element scaling factor"
        },
        "high_contrast_mode": {
          "type": "boolean",
          "default": false,
          "description": "Enable high contrast UI"
        },
        "reduce_transparency": {
          "type": "boolean",
          "default": false,
          "description": "Reduce UI transparency effects"
        },
        "reduce_motion": {
          "type": "boolean",
          "default": false,
          "description": "Reduce animations and motion effects"
        },
        "flash_threshold_hz": {
          "type": "number",
          "minimum": 0,
          "maximum": 30,
          "description": "Block flashing content above this frequency"
        },
        "preferred_fov_degrees": {
          "type": "number",
          "minimum": 60,
          "maximum": 180,
          "description": "Preferred field of view in degrees"
        }
      }
    },
    "auditory": {
      "type": "object",
      "required": ["master_volume", "spatial_audio_enabled"],
      "properties": {
        "master_volume": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.8,
          "description": "Master volume level"
        },
        "voice_volume": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 1.0,
          "description": "Voice/dialogue volume"
        },
        "effects_volume": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.8,
          "description": "Sound effects volume"
        },
        "music_volume": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.6,
          "description": "Background music volume"
        },
        "balance": {
          "type": "number",
          "minimum": -1.0,
          "maximum": 1.0,
          "default": 0.0,
          "description": "Left/right audio balance"
        },
        "mono_audio": {
          "type": "boolean",
          "default": false,
          "description": "Convert stereo to mono"
        },
        "background_noise_reduction": {
          "type": "boolean",
          "default": false,
          "description": "Reduce background noise"
        },
        "voice_enhancement": {
          "type": "boolean",
          "default": false,
          "description": "Enhance voice clarity"
        },
        "spatial_audio_enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable 3D spatial audio"
        },
        "spatial_audio_intensity": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 1.0,
          "description": "Spatial audio effect intensity"
        },
        "bass_boost": {
          "type": "number",
          "minimum": -1.0,
          "maximum": 1.0,
          "default": 0.0,
          "description": "Bass frequency adjustment"
        },
        "treble_boost": {
          "type": "number",
          "minimum": -1.0,
          "maximum": 1.0,
          "default": 0.0,
          "description": "Treble frequency adjustment"
        }
      }
    },
    "haptic": {
      "type": "object",
      "required": ["enabled", "intensity"],
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable haptic feedback"
        },
        "intensity": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.7,
          "description": "Overall haptic intensity"
        },
        "controller_haptics": {
          "type": "boolean",
          "default": true,
          "description": "Enable controller vibration"
        },
        "vest_haptics": {
          "type": "boolean",
          "default": false,
          "description": "Enable haptic vest feedback"
        },
        "glove_haptics": {
          "type": "boolean",
          "default": false,
          "description": "Enable haptic glove feedback"
        },
        "vibration_enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable vibration feedback"
        },
        "force_feedback_enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable force feedback"
        },
        "texture_feedback_enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable texture simulation"
        },
        "temperature_feedback_enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable temperature feedback"
        }
      }
    }
  }
}
