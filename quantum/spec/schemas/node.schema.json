{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://quantum.wia.live/schemas/node.schema.json",
  "title": "WIA Quantum Network Node",
  "description": "Quantum network node following WIA Quantum standard",
  "type": "object",
  "required": ["wia_quantum_version", "type", "network_type", "node_id", "name"],
  "properties": {
    "wia_quantum_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "type": {
      "type": "string",
      "const": "network"
    },
    "network_type": {
      "type": "string",
      "const": "node"
    },
    "node_id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string"
    },
    "location": {
      "type": "object",
      "properties": {
        "latitude": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        },
        "address": {
          "type": "string"
        }
      }
    },
    "capabilities": {
      "type": "object",
      "properties": {
        "quantum_memory": {
          "type": "boolean"
        },
        "memory_coherence_ms": {
          "type": "number",
          "description": "Quantum memory coherence time in milliseconds"
        },
        "entanglement_generation": {
          "type": "boolean"
        },
        "entanglement_rate_hz": {
          "type": "number"
        },
        "qkd_protocols": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["BB84", "E91", "BBM92", "SARG04", "COW", "DPS"]
          }
        },
        "num_ports": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["online", "offline", "maintenance", "degraded"]
    },
    "uptime_hours": {
      "type": "number"
    }
  }
}
