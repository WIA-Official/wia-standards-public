{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://quantum.wia.live/schemas/job.schema.json",
  "title": "WIA Quantum Job",
  "description": "Quantum job/execution request following WIA Quantum standard",
  "type": "object",
  "required": ["wia_quantum_version", "type", "job_id", "circuit_id", "backend"],
  "properties": {
    "wia_quantum_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "type": {
      "type": "string",
      "const": "job"
    },
    "job_id": {
      "type": "string",
      "format": "uuid"
    },
    "circuit_id": {
      "type": "string",
      "format": "uuid"
    },
    "status": {
      "type": "string",
      "enum": ["queued", "running", "completed", "failed", "cancelled"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "backend": {
      "type": "object",
      "required": ["provider", "name"],
      "properties": {
        "provider": {
          "type": "string",
          "description": "Backend provider (ibm_quantum, google_quantum, aws_braket, etc.)"
        },
        "name": {
          "type": "string",
          "description": "Backend name"
        },
        "type": {
          "type": "string",
          "enum": ["hardware", "simulator"]
        },
        "num_qubits": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "execution": {
      "type": "object",
      "properties": {
        "shots": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100000,
          "default": 1024
        },
        "seed": {
          "type": "integer",
          "description": "Random seed for reproducibility"
        },
        "optimization_level": {
          "type": "integer",
          "minimum": 0,
          "maximum": 3
        },
        "error_mitigation": {
          "type": "object",
          "properties": {
            "method": {
              "type": "string",
              "enum": ["ZNE", "PEC", "M3", "TREX"]
            },
            "enabled": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "transpilation": {
      "type": "object",
      "properties": {
        "basis_gates": {
          "type": "array",
          "items": { "type": "string" }
        },
        "coupling_map": {
          "type": "array",
          "items": {
            "type": "array",
            "items": { "type": "integer" },
            "minItems": 2,
            "maxItems": 2
          }
        },
        "initial_layout": {
          "type": "array",
          "items": { "type": "integer" }
        }
      }
    }
  }
}
