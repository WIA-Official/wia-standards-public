{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://quantum.wia.live/schemas/atomic-clock.schema.json",
  "title": "WIA Quantum Atomic Clock",
  "description": "Atomic clock sensor data following WIA Quantum standard",
  "type": "object",
  "required": ["wia_quantum_version", "type", "sensor_type", "device", "measurement"],
  "properties": {
    "wia_quantum_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "type": {
      "type": "string",
      "const": "sensor"
    },
    "sensor_type": {
      "type": "string",
      "const": "atomic_clock"
    },
    "device": {
      "type": "object",
      "required": ["manufacturer", "model", "type"],
      "properties": {
        "manufacturer": { "type": "string" },
        "model": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["microwave", "optical", "chip_scale"]
        },
        "serial": { "type": "string" }
      }
    },
    "measurement": {
      "type": "object",
      "required": ["timestamp", "frequency_hz"],
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "frequency_hz": {
          "type": "number",
          "description": "Clock transition frequency in Hz"
        },
        "fractional_frequency_offset": {
          "type": "number",
          "description": "Relative frequency offset from nominal"
        },
        "allan_deviation": {
          "type": "number",
          "description": "Allan deviation (stability measure)"
        }
      }
    },
    "timing": {
      "type": "object",
      "properties": {
        "utc_offset_ns": {
          "type": "number",
          "description": "Offset from UTC in nanoseconds"
        },
        "tai_offset_s": {
          "type": "integer",
          "description": "TAI-UTC offset in seconds"
        },
        "pps_accuracy_ns": {
          "type": "number",
          "description": "Pulse-per-second accuracy in nanoseconds"
        }
      }
    },
    "status": {
      "type": "object",
      "properties": {
        "locked": { "type": "boolean" },
        "temperature_c": { "type": "number" },
        "battery_percent": { "type": "number" }
      }
    }
  }
}
