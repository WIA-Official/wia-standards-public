{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://quantum.wia.live/schemas/entanglement.schema.json",
  "title": "WIA Quantum Entanglement Resource",
  "description": "Entanglement resource following WIA Quantum standard",
  "type": "object",
  "required": ["wia_quantum_version", "type", "network_type", "entanglement_id", "parties", "state"],
  "properties": {
    "wia_quantum_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "type": {
      "type": "string",
      "const": "network"
    },
    "network_type": {
      "type": "string",
      "const": "entanglement"
    },
    "entanglement_id": {
      "type": "string",
      "format": "uuid"
    },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["node_id", "qubit_id"],
        "properties": {
          "node_id": { "type": "string" },
          "qubit_id": { "type": "integer" }
        }
      },
      "minItems": 2
    },
    "state": {
      "type": "object",
      "required": ["type", "name"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["bell", "ghz", "w", "cluster", "custom"]
        },
        "name": {
          "type": "string",
          "description": "State name (e.g., phi_plus, phi_minus, psi_plus, psi_minus)"
        },
        "fidelity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Fidelity to ideal state"
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time"
    },
    "coherence_time_ms": {
      "type": "number",
      "description": "Expected coherence time in milliseconds"
    }
  }
}
