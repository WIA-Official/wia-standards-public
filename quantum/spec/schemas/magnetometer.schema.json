{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://quantum.wia.live/schemas/magnetometer.schema.json",
  "title": "WIA Quantum Magnetometer",
  "description": "Quantum magnetometer sensor data following WIA Quantum standard",
  "type": "object",
  "required": ["wia_quantum_version", "type", "sensor_type", "device", "measurement"],
  "properties": {
    "wia_quantum_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "type": {
      "type": "string",
      "const": "sensor"
    },
    "sensor_type": {
      "type": "string",
      "const": "magnetometer"
    },
    "device": {
      "type": "object",
      "required": ["manufacturer", "model", "type"],
      "properties": {
        "manufacturer": { "type": "string" },
        "model": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["optically_pumped", "nv_diamond", "squid", "fluxgate"]
        },
        "serial": { "type": "string" }
      }
    },
    "measurement": {
      "type": "object",
      "required": ["timestamp"],
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "field_vector": {
          "type": "object",
          "properties": {
            "bx_nT": { "type": "number" },
            "by_nT": { "type": "number" },
            "bz_nT": { "type": "number" }
          },
          "description": "Magnetic field components in nanotesla"
        },
        "magnitude_nT": {
          "type": "number",
          "description": "Total field magnitude in nanotesla"
        },
        "sensitivity_fT_sqrt_hz": {
          "type": "number",
          "description": "Sensitivity in femtotesla per root Hz"
        }
      }
    },
    "calibration": {
      "type": "object",
      "properties": {
        "last_calibrated": {
          "type": "string",
          "format": "date-time"
        },
        "offset_nT": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 3,
          "maxItems": 3
        },
        "scale_factor": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 3,
          "maxItems": 3
        }
      }
    }
  }
}
