{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://quantum.wia.live/schemas/pqc-key.schema.json",
  "title": "WIA Quantum PQC Key",
  "description": "Post-Quantum Cryptography key following WIA Quantum standard",
  "type": "object",
  "required": ["wia_quantum_version", "type", "crypto_type", "algorithm", "key"],
  "properties": {
    "wia_quantum_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "type": {
      "type": "string",
      "const": "crypto"
    },
    "crypto_type": {
      "type": "string",
      "const": "pqc_key"
    },
    "algorithm": {
      "type": "object",
      "required": ["name", "variant", "type"],
      "properties": {
        "name": {
          "type": "string",
          "enum": ["ML-KEM", "ML-DSA", "SLH-DSA", "HQC"],
          "description": "NIST PQC algorithm name"
        },
        "variant": {
          "type": "string",
          "description": "Algorithm variant (e.g., ML-KEM-768, ML-DSA-65)"
        },
        "nist_level": {
          "type": "integer",
          "enum": [1, 2, 3, 5],
          "description": "NIST security level"
        },
        "type": {
          "type": "string",
          "enum": ["kem", "signature"],
          "description": "Key type"
        }
      }
    },
    "key": {
      "type": "object",
      "required": ["format", "public_key"],
      "properties": {
        "format": {
          "type": "string",
          "enum": ["base64", "hex", "pem"]
        },
        "public_key": {
          "type": "string",
          "description": "Encoded public key"
        },
        "secret_key": {
          "type": "string",
          "description": "Encoded secret key (optional, for key pairs)"
        },
        "key_size_bytes": {
          "type": "object",
          "properties": {
            "public": { "type": "integer" },
            "secret": { "type": "integer" }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "generated_at": {
          "type": "string",
          "format": "date-time"
        },
        "expires_at": {
          "type": "string",
          "format": "date-time"
        },
        "key_id": {
          "type": "string",
          "format": "uuid"
        }
      }
    }
  }
}
