{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/quantum/protocol/submit-job.schema.json",
  "title": "WIA Quantum Submit Job Payload",
  "description": "Payload schema for submit_job message",
  "type": "object",
  "required": ["circuit", "backendId"],
  "properties": {
    "jobName": {
      "type": "string",
      "maxLength": 256,
      "description": "Job name for identification"
    },
    "backendId": {
      "type": "string",
      "description": "Target backend identifier"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "normal", "high"],
      "default": "normal",
      "description": "Job priority"
    },
    "circuit": {
      "$ref": "../circuit.schema.json",
      "description": "Quantum circuit (Phase 1 format)"
    },
    "config": {
      "type": "object",
      "properties": {
        "shots": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100000,
          "default": 1024,
          "description": "Number of shots"
        },
        "seed": {
          "type": "integer",
          "description": "Random seed for reproducibility"
        },
        "optimization_level": {
          "type": "integer",
          "minimum": 0,
          "maximum": 3,
          "default": 1,
          "description": "Circuit optimization level"
        },
        "error_mitigation": {
          "type": "boolean",
          "default": false,
          "description": "Enable error mitigation"
        },
        "dynamic_decoupling": {
          "type": "boolean",
          "default": false,
          "description": "Enable dynamic decoupling"
        },
        "resilience_level": {
          "type": "integer",
          "minimum": 0,
          "maximum": 3,
          "default": 0,
          "description": "Resilience level"
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for job categorization"
    }
  }
}
