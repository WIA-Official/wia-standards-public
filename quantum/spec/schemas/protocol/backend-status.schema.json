{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/quantum/protocol/backend-status.schema.json",
  "title": "WIA Quantum Backend Status Payload",
  "description": "Payload schema for backend_status message",
  "type": "object",
  "required": ["backendId", "status"],
  "properties": {
    "backendId": {
      "type": "string",
      "description": "Backend identifier"
    },
    "status": {
      "type": "string",
      "enum": ["online", "offline", "maintenance", "calibrating"],
      "description": "Backend status"
    },
    "queueLength": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of jobs in queue"
    },
    "estimatedQueueTime": {
      "type": "integer",
      "description": "Estimated queue wait time in milliseconds"
    },
    "properties": {
      "type": "object",
      "properties": {
        "numQubits": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of qubits"
        },
        "basisGates": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Native gate set"
        },
        "couplingMap": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "minItems": 2,
            "maxItems": 2
          },
          "description": "Qubit connectivity"
        },
        "t1": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "T1 relaxation times (microseconds)"
        },
        "t2": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "T2 dephasing times (microseconds)"
        },
        "readoutError": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "Readout error rates per qubit"
        },
        "gateError": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "description": "Gate error rates"
        }
      }
    },
    "lastCalibration": {
      "type": "integer",
      "description": "Timestamp of last calibration"
    },
    "nextCalibration": {
      "type": "integer",
      "description": "Scheduled next calibration"
    }
  }
}
