{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/quantum/protocol/error.schema.json",
  "title": "WIA Quantum Error Payload",
  "description": "Payload schema for error message",
  "type": "object",
  "required": ["code", "name", "message"],
  "properties": {
    "code": {
      "type": "integer",
      "description": "Numeric error code"
    },
    "name": {
      "type": "string",
      "description": "Error name (e.g., BACKEND_NOT_AVAILABLE)"
    },
    "message": {
      "type": "string",
      "description": "Human-readable error message"
    },
    "recoverable": {
      "type": "boolean",
      "description": "Whether the error is recoverable"
    },
    "details": {
      "type": "object",
      "description": "Additional error details"
    },
    "relatedMessageId": {
      "type": "string",
      "format": "uuid",
      "description": "Related message that caused the error"
    },
    "retryAfter": {
      "type": "integer",
      "description": "Suggested retry delay in milliseconds"
    }
  },
  "definitions": {
    "errorCodes": {
      "description": "Standard error codes",
      "type": "object",
      "properties": {
        "CONNECTION_CLOSED": { "const": 1000 },
        "CONNECTION_LOST": { "const": 1001 },
        "CONNECTION_TIMEOUT": { "const": 1002 },
        "PROTOCOL_ERROR": { "const": 1003 },
        "VERSION_MISMATCH": { "const": 1004 },
        "BACKEND_NOT_AVAILABLE": { "const": 2001 },
        "BACKEND_BUSY": { "const": 2002 },
        "BACKEND_ERROR": { "const": 2003 },
        "QUEUE_FULL": { "const": 2004 },
        "MAINTENANCE": { "const": 2005 },
        "CIRCUIT_TOO_DEEP": { "const": 3001 },
        "CIRCUIT_TOO_WIDE": { "const": 3002 },
        "INVALID_GATE": { "const": 3003 },
        "INVALID_CIRCUIT": { "const": 3004 },
        "TRANSPILE_ERROR": { "const": 3005 },
        "JOB_NOT_FOUND": { "const": 4001 },
        "JOB_CANCELLED": { "const": 4002 },
        "JOB_TIMEOUT": { "const": 4003 },
        "SHOTS_LIMIT_EXCEEDED": { "const": 4004 },
        "QUOTA_EXCEEDED": { "const": 4005 },
        "AUTH_REQUIRED": { "const": 5001 },
        "AUTH_FAILED": { "const": 5002 },
        "TOKEN_EXPIRED": { "const": 5003 },
        "PERMISSION_DENIED": { "const": 5004 }
      }
    }
  }
}
