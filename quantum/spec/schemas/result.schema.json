{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://quantum.wia.live/schemas/result.schema.json",
  "title": "WIA Quantum Result",
  "description": "Quantum execution result following WIA Quantum standard",
  "type": "object",
  "required": ["wia_quantum_version", "type", "result_id", "job_id", "status"],
  "properties": {
    "wia_quantum_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "type": {
      "type": "string",
      "const": "result"
    },
    "result_id": {
      "type": "string",
      "format": "uuid"
    },
    "job_id": {
      "type": "string",
      "format": "uuid"
    },
    "circuit_id": {
      "type": "string",
      "format": "uuid"
    },
    "status": {
      "type": "string",
      "enum": ["completed", "failed"]
    },
    "success": {
      "type": "boolean"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "counts": {
      "type": "object",
      "additionalProperties": {
        "type": "integer",
        "minimum": 0
      },
      "description": "Measurement outcomes and their counts"
    },
    "quasi_probabilities": {
      "type": "object",
      "additionalProperties": {
        "type": "number",
        "minimum": -1,
        "maximum": 1
      },
      "description": "Quasi-probability distribution (for error mitigation)"
    },
    "memory": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Individual shot results"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "shots": { "type": "integer" },
        "execution_time_ms": { "type": "number" },
        "backend": { "type": "string" }
      }
    },
    "statevector": {
      "type": "object",
      "properties": {
        "real": {
          "type": "array",
          "items": { "type": "number" }
        },
        "imag": {
          "type": "array",
          "items": { "type": "number" }
        }
      },
      "description": "Final state vector (simulator only)"
    },
    "error": {
      "type": "object",
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "details": { "type": "object" }
      }
    }
  }
}
