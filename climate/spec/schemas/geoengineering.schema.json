{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/climate/data/v1/geoengineering.schema.json",
  "title": "WIA Climate - Geoengineering Data",
  "description": "Schema for geoengineering and climate intervention data",
  "definitions": {
    "geoengineeringData": {
      "type": "object",
      "required": ["intervention_type", "category"],
      "properties": {
        "intervention_type": {
          "type": "string",
          "enum": [
            "stratospheric_aerosol_injection",
            "marine_cloud_brightening",
            "ocean_fertilization",
            "enhanced_weathering",
            "space_reflector",
            "direct_air_capture",
            "biochar",
            "afforestation"
          ],
          "description": "Climate intervention type"
        },
        "category": {
          "type": "string",
          "enum": ["solar_radiation_management", "carbon_dioxide_removal"],
          "description": "Geoengineering category (SRM or CDR)"
        },
        "deployment": {
          "type": "object",
          "properties": {
            "aerosol_type": {
              "type": "string",
              "enum": ["sulfur_dioxide", "sulfate", "calcium_carbite", "sea_salt", "titanium_dioxide"],
              "description": "Aerosol type for SRM"
            },
            "injection_altitude_km": {
              "type": "number",
              "minimum": 0,
              "description": "Injection altitude in km"
            },
            "injection_rate_kg_per_day": {
              "type": "number",
              "minimum": 0,
              "description": "Injection rate in kg/day"
            },
            "particle_size_um": {
              "type": "number",
              "minimum": 0,
              "description": "Particle size in micrometers"
            },
            "delivery_platform": {
              "type": "string",
              "enum": ["aircraft", "balloon", "ship", "ground_based"],
              "description": "Deployment platform"
            }
          },
          "additionalProperties": true
        },
        "coverage": {
          "type": "object",
          "properties": {
            "area_km2": {
              "type": "number",
              "minimum": 0,
              "description": "Coverage area in km²"
            },
            "latitude_range": {
              "type": "array",
              "items": { "type": "number", "minimum": -90, "maximum": 90 },
              "minItems": 2,
              "maxItems": 2,
              "description": "Latitude range [min, max]"
            },
            "longitude_range": {
              "type": "array",
              "items": { "type": "number", "minimum": -180, "maximum": 180 },
              "minItems": 2,
              "maxItems": 2,
              "description": "Longitude range [min, max]"
            }
          },
          "additionalProperties": true
        },
        "effects": {
          "type": "object",
          "properties": {
            "radiative_forcing_w_per_m2": {
              "type": "number",
              "description": "Radiative forcing change in W/m²"
            },
            "temperature_change_celsius": {
              "type": "number",
              "description": "Temperature change in °C"
            },
            "precipitation_change_percentage": {
              "type": "number",
              "description": "Precipitation change in %"
            },
            "co2_removal_tonnes_per_year": {
              "type": "number",
              "minimum": 0,
              "description": "CO2 removal rate for CDR methods"
            }
          },
          "additionalProperties": true
        },
        "monitoring": {
          "type": "object",
          "properties": {
            "ozone_impact_percentage": {
              "type": "number",
              "description": "Impact on ozone layer in %"
            },
            "acid_deposition_increase_percentage": {
              "type": "number",
              "description": "Acid deposition increase in %"
            },
            "ecosystem_impact_score": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Ecosystem impact score (0-1)"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  }
}
