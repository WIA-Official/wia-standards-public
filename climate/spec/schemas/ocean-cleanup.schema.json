{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/climate/data/v1/ocean-cleanup.schema.json",
  "title": "WIA Climate - Ocean Cleanup Data",
  "description": "Schema for ocean cleanup and marine pollution removal data",
  "definitions": {
    "oceanCleanupData": {
      "type": "object",
      "required": ["operation_type", "collection", "area"],
      "properties": {
        "operation_type": {
          "type": "string",
          "enum": ["floating_barrier", "river_interceptor", "beach_cleanup", "autonomous_vessel", "drone_collection", "diver_collection"],
          "description": "Cleanup operation type"
        },
        "collection": {
          "type": "object",
          "required": ["total_mass_kg"],
          "properties": {
            "total_mass_kg": {
              "type": "number",
              "minimum": 0,
              "description": "Total debris mass collected in kg"
            },
            "plastic_mass_kg": {
              "type": "number",
              "minimum": 0,
              "description": "Plastic mass collected in kg"
            },
            "fishing_gear_kg": {
              "type": "number",
              "minimum": 0,
              "description": "Fishing gear/nets mass in kg"
            },
            "other_debris_kg": {
              "type": "number",
              "minimum": 0,
              "description": "Other debris mass in kg"
            },
            "microplastic_count": {
              "type": "integer",
              "minimum": 0,
              "description": "Microplastic particle count"
            },
            "microplastic_size_range_mm": {
              "type": "array",
              "items": { "type": "number", "minimum": 0 },
              "minItems": 2,
              "maxItems": 2,
              "description": "Microplastic size range [min, max] in mm"
            },
            "debris_categories": {
              "type": "object",
              "properties": {
                "bottles_count": { "type": "integer", "minimum": 0 },
                "bags_count": { "type": "integer", "minimum": 0 },
                "foam_kg": { "type": "number", "minimum": 0 },
                "rope_m": { "type": "number", "minimum": 0 }
              },
              "additionalProperties": true,
              "description": "Detailed debris categories"
            }
          },
          "additionalProperties": true
        },
        "area": {
          "type": "object",
          "required": ["swept_km2", "duration_hours"],
          "properties": {
            "swept_km2": {
              "type": "number",
              "minimum": 0,
              "description": "Area covered in km²"
            },
            "duration_hours": {
              "type": "number",
              "minimum": 0,
              "description": "Operation duration in hours"
            },
            "efficiency_kg_per_km2": {
              "type": "number",
              "minimum": 0,
              "description": "Collection efficiency in kg/km²"
            },
            "efficiency_kg_per_hour": {
              "type": "number",
              "minimum": 0,
              "description": "Collection rate in kg/hour"
            }
          },
          "additionalProperties": true
        },
        "water_conditions": {
          "type": "object",
          "properties": {
            "temperature_celsius": {
              "type": "number",
              "description": "Water temperature in Celsius"
            },
            "salinity_ppt": {
              "type": "number",
              "minimum": 0,
              "description": "Salinity in parts per thousand"
            },
            "ph": {
              "type": "number",
              "minimum": 0,
              "maximum": 14,
              "description": "Water pH"
            },
            "current_speed_m_per_s": {
              "type": "number",
              "minimum": 0,
              "description": "Current speed in m/s"
            },
            "current_direction_deg": {
              "type": "number",
              "minimum": 0,
              "maximum": 360,
              "description": "Current direction in degrees"
            },
            "wave_height_m": {
              "type": "number",
              "minimum": 0,
              "description": "Wave height in meters"
            },
            "visibility_m": {
              "type": "number",
              "minimum": 0,
              "description": "Water visibility in meters"
            }
          },
          "additionalProperties": true
        },
        "vessel": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["support_vessel", "collection_barge", "autonomous_drone", "interceptor"],
              "description": "Vessel type"
            },
            "name": {
              "type": "string",
              "description": "Vessel name"
            },
            "fuel_consumption_l_per_hour": {
              "type": "number",
              "minimum": 0,
              "description": "Fuel consumption in L/hour"
            },
            "crew_count": {
              "type": "integer",
              "minimum": 0,
              "description": "Number of crew members"
            }
          },
          "additionalProperties": true
        },
        "zone": {
          "type": "string",
          "enum": [
            "great_pacific_garbage_patch",
            "north_atlantic_gyre",
            "south_atlantic_gyre",
            "indian_ocean_gyre",
            "south_pacific_gyre",
            "coastal",
            "river_mouth",
            "harbor"
          ],
          "description": "Geographic zone identifier"
        }
      },
      "additionalProperties": true
    }
  }
}
