{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/climate/data/v1/schema.json",
  "title": "WIA Climate Data",
  "description": "WIA Climate Standard Data Format - Base Schema",
  "type": "object",
  "required": ["version", "type", "timestamp", "location", "device", "data"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "JSON Schema URI"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Specification version (Semantic Versioning)",
      "examples": ["1.0.0"]
    },
    "type": {
      "type": "string",
      "enum": [
        "carbon_capture",
        "weather_control",
        "geoengineering",
        "vertical_farming",
        "ocean_cleanup",
        "climate_model",
        "custom"
      ],
      "description": "Data type identifier"
    },
    "timestamp": {
      "type": "object",
      "required": ["unix_ms"],
      "properties": {
        "unix_ms": {
          "type": "number",
          "minimum": 0,
          "description": "UNIX timestamp in milliseconds"
        },
        "iso8601": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 formatted timestamp (UTC)"
        }
      },
      "additionalProperties": false
    },
    "location": {
      "type": "object",
      "required": ["latitude", "longitude"],
      "properties": {
        "latitude": {
          "type": "number",
          "minimum": -90,
          "maximum": 90,
          "description": "Latitude in degrees (WGS84)"
        },
        "longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180,
          "description": "Longitude in degrees (WGS84)"
        },
        "altitude_m": {
          "type": "number",
          "description": "Altitude in meters above sea level"
        },
        "crs": {
          "type": "string",
          "default": "EPSG:4326",
          "description": "Coordinate Reference System"
        }
      },
      "additionalProperties": false
    },
    "device": {
      "type": "object",
      "required": ["manufacturer", "model"],
      "properties": {
        "manufacturer": {
          "type": "string",
          "minLength": 1,
          "description": "Device manufacturer or data provider name"
        },
        "model": {
          "type": "string",
          "minLength": 1,
          "description": "Device model or system name"
        },
        "serial": {
          "type": "string",
          "description": "Serial number or identifier"
        },
        "firmware": {
          "type": "string",
          "description": "Firmware or software version"
        }
      },
      "additionalProperties": false
    },
    "data": {
      "type": "object",
      "description": "Domain-specific data (see domain-specific schemas)"
    },
    "meta": {
      "type": "object",
      "properties": {
        "quality_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Data quality score (0.0 to 1.0)"
        },
        "uncertainty": {
          "type": "number",
          "minimum": 0,
          "description": "Measurement uncertainty"
        },
        "source": {
          "type": "string",
          "enum": ["sensor", "model", "manual", "satellite", "derived"],
          "description": "Data source type"
        },
        "processing_level": {
          "type": "string",
          "enum": ["raw", "calibrated", "validated", "derived"],
          "description": "Data processing level"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true,
  "allOf": [
    {
      "if": {
        "properties": { "type": { "const": "carbon_capture" } }
      },
      "then": {
        "properties": {
          "data": { "$ref": "carbon-capture.schema.json#/definitions/carbonCaptureData" }
        }
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "weather_control" } }
      },
      "then": {
        "properties": {
          "data": { "$ref": "weather-control.schema.json#/definitions/weatherControlData" }
        }
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "geoengineering" } }
      },
      "then": {
        "properties": {
          "data": { "$ref": "geoengineering.schema.json#/definitions/geoengineeringData" }
        }
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "vertical_farming" } }
      },
      "then": {
        "properties": {
          "data": { "$ref": "vertical-farming.schema.json#/definitions/verticalFarmingData" }
        }
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "ocean_cleanup" } }
      },
      "then": {
        "properties": {
          "data": { "$ref": "ocean-cleanup.schema.json#/definitions/oceanCleanupData" }
        }
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "climate_model" } }
      },
      "then": {
        "properties": {
          "data": { "$ref": "climate-model.schema.json#/definitions/climateModelData" }
        }
      }
    }
  ]
}
