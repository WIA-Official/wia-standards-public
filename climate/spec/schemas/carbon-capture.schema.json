{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/climate/data/v1/carbon-capture.schema.json",
  "title": "WIA Climate - Carbon Capture Data",
  "description": "Schema for carbon capture, utilization and storage data",
  "definitions": {
    "carbonCaptureData": {
      "type": "object",
      "required": ["technology", "capture_rate_kg_per_hour"],
      "properties": {
        "technology": {
          "type": "string",
          "enum": ["dac", "post_combustion", "pre_combustion", "oxy_fuel", "bioenergy_ccs"],
          "description": "Carbon capture technology type"
        },
        "capture_rate_kg_per_hour": {
          "type": "number",
          "minimum": 0,
          "description": "CO2 capture rate in kg/hour"
        },
        "co2_concentration_ppm": {
          "type": "number",
          "minimum": 0,
          "description": "Ambient CO2 concentration in ppm"
        },
        "co2_purity_percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Captured CO2 purity percentage"
        },
        "energy_consumption_kwh": {
          "type": "number",
          "minimum": 0,
          "description": "Energy consumption in kWh"
        },
        "sorbent_status": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["solid_amine", "liquid_amine", "calcium_looping", "membrane", "cryogenic"],
              "description": "Sorbent/capture material type"
            },
            "efficiency_percentage": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Sorbent efficiency percentage"
            },
            "cycles_completed": {
              "type": "integer",
              "minimum": 0,
              "description": "Number of regeneration cycles completed"
            },
            "temperature_celsius": {
              "type": "number",
              "description": "Sorbent operating temperature"
            }
          },
          "additionalProperties": true
        },
        "storage": {
          "type": "object",
          "properties": {
            "method": {
              "type": "string",
              "enum": ["geological", "ocean", "mineral", "utilization", "enhanced_oil_recovery"],
              "description": "CO2 storage method"
            },
            "pressure_mpa": {
              "type": "number",
              "minimum": 0,
              "description": "Storage pressure in MPa"
            },
            "depth_m": {
              "type": "number",
              "minimum": 0,
              "description": "Storage depth in meters"
            },
            "formation_type": {
              "type": "string",
              "enum": ["saline_aquifer", "depleted_reservoir", "basalt", "coal_seam"],
              "description": "Geological formation type"
            },
            "injection_rate_kg_per_hour": {
              "type": "number",
              "minimum": 0,
              "description": "CO2 injection rate"
            }
          },
          "additionalProperties": true
        },
        "cumulative_captured_tonnes": {
          "type": "number",
          "minimum": 0,
          "description": "Cumulative CO2 captured in tonnes"
        }
      },
      "additionalProperties": true
    }
  }
}
