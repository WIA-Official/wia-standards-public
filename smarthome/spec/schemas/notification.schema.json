{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wia.live/schemas/smarthome/notification.schema.json",
  "title": "WIA Smart Home Notification",
  "description": "Multi-modal accessible notification",
  "type": "object",
  "required": ["notification_id", "type", "priority", "message", "delivery"],
  "properties": {
    "notification_id": {
      "type": "string",
      "format": "uuid"
    },
    "type": {
      "type": "string",
      "enum": ["alert", "warning", "info", "reminder", "emergency"],
      "description": "Notification type"
    },
    "priority": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low"],
      "description": "Notification priority"
    },
    "source": {
      "type": "object",
      "properties": {
        "device_id": { "type": "string", "format": "uuid" },
        "device_type": { "type": "string" },
        "device_name": { "type": "string" },
        "zone_id": { "type": "string", "format": "uuid" },
        "zone_name": { "type": "string" },
        "automation_id": { "type": "string", "format": "uuid" }
      }
    },
    "message": {
      "type": "object",
      "required": ["default"],
      "properties": {
        "default": { "type": "string" }
      },
      "additionalProperties": { "type": "string" },
      "description": "Localized messages (key is language code)"
    },
    "delivery": {
      "type": "object",
      "required": ["modalities"],
      "properties": {
        "modalities": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["audio_tts", "audio_tone", "visual_screen", "visual_led", "haptic", "braille"]
          },
          "minItems": 1
        },
        "audio": {
          "type": "object",
          "properties": {
            "tts_text": { "type": "string" },
            "tts_language": { "type": "string", "default": "ko-KR" },
            "tts_voice": { "type": "string" },
            "tts_rate": { "type": "number", "minimum": 0.5, "maximum": 2.0 },
            "tone": { "type": "string" },
            "volume": { "type": "integer", "minimum": 0, "maximum": 100 },
            "repeat_count": { "type": "integer", "minimum": 1, "default": 1 },
            "repeat_interval_ms": { "type": "integer" }
          }
        },
        "visual": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "body": { "type": "string" },
            "icon": { "type": "string" },
            "image_url": { "type": "string", "format": "uri" },
            "color": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
            "flash_pattern": {
              "type": "string",
              "enum": ["none", "pulse", "blink", "strobe"]
            },
            "duration_ms": { "type": "integer" }
          }
        },
        "haptic": {
          "type": "object",
          "properties": {
            "pattern": {
              "type": "string",
              "enum": ["short_tap", "double_tap", "long_buzz", "pulse", "escalating"]
            },
            "intensity": { "type": "integer", "minimum": 0, "maximum": 100 },
            "repeat": { "type": "integer", "minimum": 1, "default": 1 }
          }
        }
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label", "command"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "label_i18n": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          },
          "command": { "type": "string" },
          "parameters": { "type": "object" },
          "confirmation_required": { "type": "boolean", "default": false },
          "icon": { "type": "string" }
        }
      }
    },
    "targeting": {
      "type": "object",
      "properties": {
        "user_ids": {
          "type": "array",
          "items": { "type": "string", "format": "uuid" }
        },
        "zone_ids": {
          "type": "array",
          "items": { "type": "string", "format": "uuid" }
        },
        "all_users": { "type": "boolean", "default": false }
      }
    },
    "scheduling": {
      "type": "object",
      "properties": {
        "deliver_at": { "type": "string", "format": "date-time" },
        "expires_at": { "type": "string", "format": "date-time" },
        "respect_quiet_hours": { "type": "boolean", "default": true },
        "snooze_options": {
          "type": "array",
          "items": {
            "type": "integer",
            "description": "Snooze duration in minutes"
          }
        }
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "read_at": {
      "type": "string",
      "format": "date-time"
    },
    "dismissed_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
