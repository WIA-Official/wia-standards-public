{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wia.live/schemas/smarthome/home.schema.json",
  "title": "WIA Smart Home",
  "description": "Smart home configuration with accessibility settings",
  "type": "object",
  "required": ["home_id", "name", "owner_profile_id"],
  "properties": {
    "home_id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "maxLength": 100
    },
    "address": {
      "type": "object",
      "properties": {
        "street": { "type": "string" },
        "city": { "type": "string" },
        "state": { "type": "string" },
        "postal_code": { "type": "string" },
        "country": { "type": "string" },
        "latitude": { "type": "number" },
        "longitude": { "type": "number" }
      }
    },
    "timezone": {
      "type": "string",
      "default": "Asia/Seoul"
    },
    "owner_profile_id": {
      "type": "string",
      "format": "uuid"
    },
    "member_profiles": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      }
    },
    "zones": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      }
    },
    "devices": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      }
    },
    "hub_info": {
      "type": "object",
      "properties": {
        "hub_type": {
          "type": "string",
          "enum": ["matter", "zigbee", "zwave", "wifi", "hybrid"]
        },
        "hub_id": { "type": "string" },
        "firmware_version": { "type": "string" },
        "ip_address": { "type": "string" }
      }
    },
    "accessibility_settings": {
      "type": "object",
      "properties": {
        "default_modalities": {
          "type": "object",
          "properties": {
            "input": {
              "type": "array",
              "items": { "type": "string" }
            },
            "output": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "global_volume": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "default": 70
        },
        "global_brightness": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "default": 80
        },
        "tts_settings": {
          "type": "object",
          "properties": {
            "default_voice": { "type": "string" },
            "default_language": { "type": "string", "default": "ko-KR" },
            "speech_rate": { "type": "number", "default": 1.0 }
          }
        },
        "emergency_contacts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "phone": { "type": "string" },
              "email": { "type": "string", "format": "email" },
              "relationship": { "type": "string" },
              "notify_on_emergency": { "type": "boolean", "default": true }
            }
          }
        },
        "caregiver_access": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": false },
            "caregiver_profiles": {
              "type": "array",
              "items": { "type": "string", "format": "uuid" }
            },
            "permissions": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["view_status", "control_devices", "modify_settings", "receive_alerts"]
              }
            }
          }
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
