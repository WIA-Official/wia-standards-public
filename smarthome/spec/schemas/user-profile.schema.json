{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wia.live/schemas/smarthome/user-profile.schema.json",
  "title": "WIA Smart Home User Profile",
  "description": "User profile with accessibility requirements and preferences",
  "type": "object",
  "required": ["profile_id", "version", "accessibility_requirements"],
  "properties": {
    "profile_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the user profile"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version (semver)"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "personal_info": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 100
        },
        "preferred_language": {
          "type": "string",
          "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
          "default": "ko-KR"
        },
        "timezone": {
          "type": "string",
          "default": "Asia/Seoul"
        }
      }
    },
    "accessibility_requirements": {
      "$ref": "accessibility-requirements.schema.json"
    },
    "interaction_preferences": {
      "type": "object",
      "properties": {
        "preferred_input_modalities": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/InputModality"
          }
        },
        "preferred_output_modalities": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/OutputModality"
          }
        },
        "voice_settings": {
          "type": "object",
          "properties": {
            "wake_word": {
              "type": "string"
            },
            "speech_rate": {
              "type": "number",
              "minimum": 0.5,
              "maximum": 2.0,
              "default": 1.0
            },
            "pitch": {
              "type": "number",
              "minimum": 0.5,
              "maximum": 2.0,
              "default": 1.0
            },
            "voice_id": {
              "type": "string"
            }
          }
        },
        "visual_settings": {
          "type": "object",
          "properties": {
            "high_contrast": {
              "type": "boolean",
              "default": false
            },
            "large_text": {
              "type": "boolean",
              "default": false
            },
            "text_scale": {
              "type": "number",
              "minimum": 1.0,
              "maximum": 3.0,
              "default": 1.0
            },
            "reduce_motion": {
              "type": "boolean",
              "default": false
            }
          }
        },
        "timing_settings": {
          "type": "object",
          "properties": {
            "response_timeout_ms": {
              "type": "integer",
              "minimum": 1000,
              "maximum": 30000,
              "default": 5000
            },
            "dwell_time_ms": {
              "type": "integer",
              "minimum": 500,
              "maximum": 5000,
              "default": 1000
            },
            "confirmation_required": {
              "type": "boolean",
              "default": false
            }
          }
        }
      }
    },
    "notification_preferences": {
      "type": "object",
      "properties": {
        "quiet_hours": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "start_time": {
              "type": "string",
              "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"
            },
            "end_time": {
              "type": "string",
              "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"
            }
          }
        },
        "priority_overrides": {
          "type": "object",
          "properties": {
            "critical_always_notify": {
              "type": "boolean",
              "default": true
            },
            "emergency_contacts": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "phone": { "type": "string" },
                  "relationship": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "privacy_settings": {
      "type": "object",
      "properties": {
        "data_collection": {
          "type": "object",
          "properties": {
            "usage_analytics": {
              "type": "boolean",
              "default": false
            },
            "voice_recording": {
              "type": "boolean",
              "default": false
            },
            "location_history": {
              "type": "boolean",
              "default": false
            }
          }
        },
        "data_sharing": {
          "type": "object",
          "properties": {
            "with_caregivers": {
              "type": "boolean",
              "default": false
            },
            "with_healthcare": {
              "type": "boolean",
              "default": false
            }
          }
        }
      }
    }
  },
  "$defs": {
    "InputModality": {
      "type": "string",
      "enum": [
        "voice",
        "touch",
        "switch",
        "gaze",
        "gesture",
        "bci",
        "sip_puff",
        "keyboard",
        "remote"
      ]
    },
    "OutputModality": {
      "type": "string",
      "enum": [
        "visual_screen",
        "visual_led",
        "audio_tts",
        "audio_tone",
        "haptic",
        "braille"
      ]
    }
  }
}
