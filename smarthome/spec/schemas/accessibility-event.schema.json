{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wia.live/schemas/smarthome/accessibility-event.schema.json",
  "title": "WIA Smart Home Accessibility Event",
  "description": "Events related to accessibility features and user interactions",
  "type": "object",
  "required": ["event_id", "event_type", "timestamp", "source"],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "event_type": {
      "$ref": "#/$defs/EventType"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "object",
      "required": ["type", "id"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["device", "user", "automation", "system", "caregiver"]
        },
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "target": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["device", "zone", "home", "user"]
        },
        "id": {
          "type": "string",
          "format": "uuid"
        }
      }
    },
    "home_id": {
      "type": "string",
      "format": "uuid"
    },
    "zone_id": {
      "type": "string",
      "format": "uuid"
    },
    "user_id": {
      "type": "string",
      "format": "uuid",
      "description": "User associated with this event"
    },
    "severity": {
      "type": "string",
      "enum": ["info", "warning", "alert", "emergency"],
      "default": "info"
    },
    "data": {
      "type": "object",
      "additionalProperties": true,
      "description": "Event-specific data"
    },
    "accessibility_context": {
      "type": "object",
      "properties": {
        "modalities_used": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "voice",
              "touch",
              "switch",
              "eye_gaze",
              "bci",
              "gesture",
              "proximity"
            ]
          }
        },
        "assistive_tech": {
          "type": "string",
          "description": "Assistive technology involved"
        },
        "response_time_ms": {
          "type": "integer",
          "description": "Time taken to respond to user input"
        },
        "accessibility_features_active": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "notifications_sent": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "notification_id": {
            "type": "string",
            "format": "uuid"
          },
          "recipient_id": {
            "type": "string",
            "format": "uuid"
          },
          "channel": {
            "type": "string",
            "enum": ["tts", "visual", "haptic", "push", "sms", "email"]
          },
          "delivered": {
            "type": "boolean"
          }
        }
      }
    },
    "requires_acknowledgment": {
      "type": "boolean",
      "default": false
    },
    "acknowledged_at": {
      "type": "string",
      "format": "date-time"
    },
    "acknowledged_by": {
      "type": "string",
      "format": "uuid"
    }
  },
  "$defs": {
    "EventType": {
      "type": "string",
      "enum": [
        "voice_command_received",
        "voice_command_executed",
        "voice_command_failed",
        "switch_activated",
        "gesture_detected",
        "eye_gaze_selection",
        "bci_command",
        "device_state_changed",
        "automation_triggered",
        "automation_executed",
        "automation_failed",
        "scene_activated",
        "emergency_triggered",
        "emergency_resolved",
        "fall_detected",
        "inactivity_alert",
        "medication_reminder",
        "caregiver_alert_sent",
        "caregiver_responded",
        "safe_mode_activated",
        "safe_mode_deactivated",
        "quiet_hours_started",
        "quiet_hours_ended",
        "user_entered_zone",
        "user_left_zone",
        "accessibility_settings_changed",
        "device_accessibility_error",
        "system_announcement"
      ]
    }
  }
}
