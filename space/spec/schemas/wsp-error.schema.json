{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wia.live/space/v1/wsp-error.schema.json",
  "title": "WIA Space Protocol Error",
  "description": "Error payload format for WIA Space Protocol (WSP)",
  "type": "object",
  "required": ["code", "name", "message"],
  "properties": {
    "code": {
      "type": "integer",
      "description": "Error code"
    },
    "name": {
      "type": "string",
      "description": "Error name"
    },
    "message": {
      "type": "string",
      "description": "Human-readable error message"
    },
    "details": {
      "type": "object",
      "description": "Additional error details"
    },
    "recoverable": {
      "type": "boolean",
      "default": false,
      "description": "Whether the error is recoverable"
    },
    "retryAfter_s": {
      "type": "integer",
      "minimum": 0,
      "description": "Seconds to wait before retry"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "code": { "minimum": 1000, "maximum": 1999 }
        }
      },
      "then": {
        "properties": {
          "name": {
            "enum": [
              "CONNECTION_CLOSED",
              "CONNECTION_LOST",
              "CONNECTION_TIMEOUT",
              "PROTOCOL_ERROR",
              "VERSION_MISMATCH"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "code": { "minimum": 2000, "maximum": 2999 }
        }
      },
      "then": {
        "properties": {
          "name": {
            "enum": [
              "SPACECRAFT_UNREACHABLE",
              "GROUND_STATION_BUSY",
              "LINK_DEGRADED",
              "SIGNAL_LOST",
              "LATENCY_EXCEEDED"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "code": { "minimum": 3000, "maximum": 3999 }
        }
      },
      "then": {
        "properties": {
          "name": {
            "enum": [
              "INVALID_MESSAGE",
              "PAYLOAD_TOO_LARGE",
              "CHECKSUM_FAILED",
              "SEQUENCE_GAP",
              "DUPLICATE_MESSAGE"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "code": { "minimum": 4000, "maximum": 4999 }
        }
      },
      "then": {
        "properties": {
          "name": {
            "enum": [
              "MISSION_NOT_FOUND",
              "INVALID_COMMAND",
              "COMMAND_REJECTED",
              "SUBSYSTEM_OFFLINE",
              "RESOURCE_EXHAUSTED"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "code": { "minimum": 5000, "maximum": 5999 }
        }
      },
      "then": {
        "properties": {
          "name": {
            "enum": [
              "AUTH_REQUIRED",
              "AUTH_FAILED",
              "PERMISSION_DENIED",
              "SESSION_EXPIRED"
            ]
          }
        }
      }
    }
  ]
}
