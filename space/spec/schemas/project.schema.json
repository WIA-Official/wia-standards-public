{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/space/project.schema.json",
  "title": "WIA Space Project",
  "description": "Schema for space technology project metadata",
  "type": "object",
  "required": [
    "wia_version",
    "project_id",
    "project_info"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "wia_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "WIA Space standard version"
    },
    "format_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Data format version"
    },
    "project_id": {
      "type": "string",
      "pattern": "^proj-[a-zA-Z0-9-]+$",
      "description": "Unique project identifier"
    },
    "project_info": {
      "type": "object",
      "required": ["name", "technology_category"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Project name"
        },
        "description": {
          "type": "string",
          "description": "Project description"
        },
        "start_date": {
          "type": "string",
          "format": "date",
          "description": "Project start date"
        },
        "end_date": {
          "type": "string",
          "format": "date",
          "description": "Project end date (if completed)"
        },
        "status": {
          "type": "string",
          "enum": ["planned", "active", "completed", "cancelled", "on_hold"],
          "description": "Project status"
        },
        "technology_category": {
          "type": "string",
          "enum": [
            "dyson_sphere",
            "mars_terraforming",
            "warp_drive",
            "space_elevator",
            "asteroid_mining",
            "interstellar_travel"
          ],
          "description": "Primary technology category"
        }
      }
    },
    "organization": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Organization name"
        },
        "country": {
          "type": "string",
          "description": "Country or 'International'"
        },
        "contact": {
          "type": "string",
          "description": "Contact email"
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "Organization website"
        }
      }
    },
    "collaborators": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "role": {"type": "string"},
          "organization": {"type": "string"}
        }
      },
      "description": "Project collaborators"
    },
    "data_files": {
      "type": "object",
      "properties": {
        "technology": {
          "type": "string",
          "description": "Path to technology specification"
        },
        "simulation": {
          "type": "string",
          "description": "Path to simulation metadata"
        },
        "telemetry": {
          "type": "string",
          "description": "Path to telemetry metadata"
        },
        "resources": {
          "type": "string",
          "description": "Path to resource assessment"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "license": {
          "type": "string"
        },
        "keywords": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "notes": {
      "type": "string",
      "description": "Additional notes"
    }
  }
}
