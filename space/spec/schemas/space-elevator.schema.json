{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/space/space-elevator.schema.json",
  "title": "WIA Space Elevator",
  "description": "Schema for space elevator infrastructure specifications",
  "type": "object",
  "required": [
    "technology_id",
    "category",
    "location",
    "tether"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "technology_id": {
      "type": "string",
      "pattern": "^elevator-[a-zA-Z0-9-]+$"
    },
    "category": {
      "type": "string",
      "const": "space_elevator"
    },
    "location": {
      "type": "object",
      "required": ["anchor_latitude", "anchor_longitude"],
      "properties": {
        "anchor_latitude": {
          "type": "number",
          "minimum": -90,
          "maximum": 90,
          "description": "Anchor latitude in degrees"
        },
        "anchor_longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180,
          "description": "Anchor longitude in degrees"
        },
        "anchor_altitude_m": {
          "type": "number",
          "minimum": 0,
          "description": "Anchor altitude above sea level"
        },
        "anchor_description": {
          "type": "string",
          "description": "Location description"
        },
        "anchor_type": {
          "type": "string",
          "enum": ["ground_station", "ocean_platform", "mountain_top", "artificial_island"]
        },
        "host_body": {
          "type": "string",
          "enum": ["earth", "moon", "mars"],
          "default": "earth"
        }
      }
    },
    "tether": {
      "type": "object",
      "required": ["material", "total_length_km"],
      "properties": {
        "material": {
          "type": "string",
          "enum": [
            "carbon_nanotube",
            "single_crystal_graphene",
            "h_boron_nitride",
            "carbon_fiber",
            "diamond_nanothread",
            "theoretical"
          ],
          "description": "Tether material"
        },
        "total_length_km": {
          "type": "number",
          "minimum": 0,
          "description": "Total tether length in km"
        },
        "taper_ratio": {
          "type": "number",
          "minimum": 1,
          "description": "Ratio of widest to narrowest point"
        },
        "base_width_mm": {
          "type": "number",
          "minimum": 0,
          "description": "Width at narrowest point"
        },
        "max_width_mm": {
          "type": "number",
          "minimum": 0,
          "description": "Width at widest point (GEO)"
        },
        "tensile_strength_gpa": {
          "type": "number",
          "minimum": 0,
          "description": "Material tensile strength"
        },
        "density_kg_m3": {
          "type": "number",
          "minimum": 0,
          "description": "Material density"
        },
        "total_mass_kg": {
          "type": "number",
          "minimum": 0,
          "description": "Total tether mass"
        },
        "safety_factor": {
          "type": "number",
          "minimum": 1,
          "description": "Engineering safety factor"
        },
        "redundancy": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of parallel ribbons"
        }
      }
    },
    "counterweight": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["captured_asteroid", "artificial_mass", "extended_tether", "station"]
        },
        "mass_kg": {
          "type": "number",
          "minimum": 0
        },
        "altitude_km": {
          "type": "number",
          "minimum": 0
        },
        "orbital_period_hours": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "climber": {
      "type": "object",
      "properties": {
        "payload_capacity_kg": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum payload per climber"
        },
        "climber_mass_kg": {
          "type": "number",
          "minimum": 0
        },
        "ascent_velocity_m_s": {
          "type": "number",
          "minimum": 0,
          "description": "Climbing speed"
        },
        "descent_velocity_m_s": {
          "type": "number",
          "minimum": 0
        },
        "power_source": {
          "type": "string",
          "enum": ["laser_beamed", "microwave_beamed", "solar", "nuclear", "battery"]
        },
        "laser_power_mw": {
          "type": "number",
          "minimum": 0
        },
        "trip_time_hours": {
          "type": "number",
          "minimum": 0,
          "description": "Time to reach GEO"
        },
        "simultaneous_climbers": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "geostationary_station": {
      "type": "object",
      "properties": {
        "altitude_km": {
          "type": "number",
          "minimum": 0,
          "description": "Station altitude (should be ~35786 km for Earth)"
        },
        "capacity_people": {
          "type": "integer",
          "minimum": 0
        },
        "functions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["transfer_hub", "research", "manufacturing", "hotel", "port", "energy_relay"]
          }
        },
        "mass_kg": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "intermediate_stations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "altitude_km": {"type": "number", "minimum": 0},
          "purpose": {"type": "string"}
        }
      }
    },
    "structural_analysis": {
      "type": "object",
      "properties": {
        "max_tension_gn": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum tension in giganewtons"
        },
        "oscillation_period_hours": {
          "type": "number",
          "minimum": 0
        },
        "debris_avoidance_system": {
          "type": "boolean"
        },
        "wind_load_tolerance_m_s": {
          "type": "number",
          "minimum": 0
        },
        "earthquake_resistance": {
          "type": "boolean"
        },
        "lightning_protection": {
          "type": "boolean"
        }
      }
    },
    "operations": {
      "type": "object",
      "properties": {
        "annual_capacity_kg": {
          "type": "number",
          "minimum": 0
        },
        "cost_per_kg_usd": {
          "type": "number",
          "minimum": 0
        },
        "availability_percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      }
    }
  }
}
