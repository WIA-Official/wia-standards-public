{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/space/technology.schema.json",
  "title": "WIA Space Technology",
  "description": "Base schema for space technology specifications",
  "type": "object",
  "required": [
    "technology_id",
    "category",
    "technology_readiness"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "technology_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-]+$",
      "description": "Unique technology identifier"
    },
    "category": {
      "type": "string",
      "enum": [
        "dyson_sphere",
        "mars_terraforming",
        "warp_drive",
        "space_elevator",
        "asteroid_mining",
        "interstellar_travel"
      ],
      "description": "Technology category"
    },
    "subcategory": {
      "type": "string",
      "description": "Technology subcategory"
    },
    "technology_readiness": {
      "type": "object",
      "required": ["level"],
      "properties": {
        "level": {
          "type": "integer",
          "minimum": 1,
          "maximum": 9,
          "description": "Technology Readiness Level (TRL)"
        },
        "description": {
          "type": "string",
          "description": "TRL description"
        },
        "assessment_date": {
          "type": "string",
          "format": "date",
          "description": "Date of TRL assessment"
        },
        "assessor": {
          "type": "string",
          "description": "Organization that performed assessment"
        }
      }
    },
    "specifications": {
      "type": "object",
      "description": "Technology-specific specifications"
    },
    "development_status": {
      "type": "object",
      "properties": {
        "phase": {
          "type": "string",
          "enum": ["concept", "design", "development", "testing", "deployment", "operational"]
        },
        "milestones_completed": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "date": {"type": "string", "format": "date"}
            }
          }
        },
        "next_milestone": {
          "type": "string"
        }
      }
    },
    "references": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["paper", "patent", "website", "report", "standard"]
          },
          "title": {"type": "string"},
          "authors": {
            "type": "array",
            "items": {"type": "string"}
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "doi": {"type": "string"},
          "date": {
            "type": "string",
            "format": "date"
          }
        }
      }
    },
    "related_technologies": {
      "type": "array",
      "items": {"type": "string"},
      "description": "IDs of related technologies"
    }
  }
}
