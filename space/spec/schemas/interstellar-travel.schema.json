{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/space/interstellar-travel.schema.json",
  "title": "WIA Space Interstellar Travel",
  "description": "Schema for interstellar mission specifications",
  "type": "object",
  "required": [
    "technology_id",
    "category",
    "mission",
    "propulsion"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "technology_id": {
      "type": "string",
      "pattern": "^interstellar-[a-zA-Z0-9-]+$"
    },
    "category": {
      "type": "string",
      "const": "interstellar_travel"
    },
    "mission": {
      "type": "object",
      "required": ["name", "type", "target_system"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Mission name"
        },
        "type": {
          "type": "string",
          "enum": ["flyby", "orbit", "landing", "sample_return", "colony"],
          "description": "Mission type"
        },
        "target_system": {
          "type": "string",
          "description": "Target star system name"
        },
        "target_body": {
          "type": "string",
          "description": "Specific target body (if any)"
        },
        "distance_ly": {
          "type": "number",
          "minimum": 0,
          "description": "Distance in light-years"
        },
        "distance_pc": {
          "type": "number",
          "minimum": 0,
          "description": "Distance in parsecs"
        },
        "target_coordinates": {
          "type": "object",
          "properties": {
            "ra_hours": {"type": "number", "minimum": 0, "maximum": 24},
            "dec_degrees": {"type": "number", "minimum": -90, "maximum": 90}
          }
        }
      }
    },
    "propulsion": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "laser_lightsail",
            "solar_sail",
            "nuclear_thermal",
            "nuclear_pulse",
            "fusion",
            "antimatter",
            "bussard_ramjet",
            "warp_drive"
          ]
        },
        "sail_area_m2": {
          "type": "number",
          "minimum": 0,
          "description": "Sail area (for lightsail/solar sail)"
        },
        "sail_mass_kg": {
          "type": "number",
          "minimum": 0
        },
        "sail_material": {
          "type": "string"
        },
        "sail_reflectivity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "laser_array_power_gw": {
          "type": "number",
          "minimum": 0,
          "description": "Laser power for lightsail"
        },
        "laser_array_diameter_km": {
          "type": "number",
          "minimum": 0
        },
        "acceleration_g": {
          "type": "number",
          "minimum": 0,
          "description": "Peak acceleration in g"
        },
        "acceleration_time_minutes": {
          "type": "number",
          "minimum": 0
        },
        "specific_impulse_s": {
          "type": "number",
          "minimum": 0,
          "description": "Specific impulse (for rocket propulsion)"
        },
        "exhaust_velocity_km_s": {
          "type": "number",
          "minimum": 0
        },
        "fuel_mass_kg": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "spacecraft": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["starchip", "probe", "crewed_vessel", "generation_ship", "worldship"]
        },
        "total_mass_kg": {
          "type": "number",
          "minimum": 0
        },
        "payload_mass_kg": {
          "type": "number",
          "minimum": 0
        },
        "dimensions": {
          "type": "object",
          "properties": {
            "length_m": {"type": "number", "minimum": 0},
            "width_m": {"type": "number", "minimum": 0},
            "height_m": {"type": "number", "minimum": 0}
          }
        },
        "instruments": {
          "type": "array",
          "items": {"type": "string"}
        },
        "crew_size": {
          "type": "integer",
          "minimum": 0
        },
        "life_support_duration_years": {
          "type": "number",
          "minimum": 0
        },
        "communication": {
          "type": "object",
          "properties": {
            "laser_power_w": {"type": "number", "minimum": 0},
            "antenna_diameter_m": {"type": "number", "minimum": 0},
            "data_rate_bps": {"type": "number", "minimum": 0},
            "frequency_ghz": {"type": "number", "minimum": 0}
          }
        },
        "shielding": {
          "type": "object",
          "properties": {
            "dust_shield": {"type": "boolean"},
            "radiation_shield": {"type": "boolean"},
            "material": {"type": "string"},
            "thickness_cm": {"type": "number", "minimum": 0}
          }
        }
      }
    },
    "trajectory": {
      "type": "object",
      "properties": {
        "cruise_velocity_c": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Cruise velocity as fraction of c"
        },
        "cruise_velocity_km_s": {
          "type": "number",
          "minimum": 0
        },
        "travel_time_years": {
          "type": "number",
          "minimum": 0
        },
        "launch_date": {
          "type": "string",
          "format": "date"
        },
        "arrival_date": {
          "type": "string",
          "format": "date"
        },
        "flyby_distance_km": {
          "type": "number",
          "minimum": 0
        },
        "time_dilation_factor": {
          "type": "number",
          "minimum": 1,
          "description": "Relativistic time dilation"
        },
        "ship_time_years": {
          "type": "number",
          "minimum": 0,
          "description": "Time experienced by crew"
        }
      }
    },
    "communication": {
      "type": "object",
      "properties": {
        "earth_receiver_diameter_km": {
          "type": "number",
          "minimum": 0
        },
        "signal_travel_time_years": {
          "type": "number",
          "minimum": 0
        },
        "data_return_rate_bps": {
          "type": "number",
          "minimum": 0
        },
        "total_data_bits": {
          "type": "number",
          "minimum": 0
        },
        "communication_windows_per_year": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "risks": {
      "type": "object",
      "properties": {
        "dust_collision_probability": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "component_failure_probability": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "communication_loss_probability": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "mission_success_probability": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "identified_risks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "risk": {"type": "string"},
              "probability": {"type": "number", "minimum": 0, "maximum": 1},
              "severity": {"type": "string", "enum": ["low", "medium", "high", "critical"]},
              "mitigation": {"type": "string"}
            }
          }
        }
      }
    },
    "science_objectives": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "objective": {"type": "string"},
          "priority": {"type": "string", "enum": ["primary", "secondary", "tertiary"]},
          "instruments_required": {
            "type": "array",
            "items": {"type": "string"}
          }
        }
      }
    },
    "program_info": {
      "type": "object",
      "properties": {
        "organization": {"type": "string"},
        "funding_usd": {"type": "number", "minimum": 0},
        "status": {
          "type": "string",
          "enum": ["concept", "study", "development", "construction", "launched", "en_route", "arrived", "completed", "cancelled"]
        }
      }
    }
  }
}
