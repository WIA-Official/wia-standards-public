{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/space/v1/schema.json",
  "title": "WIA Space Message",
  "description": "WIA Space Standard base message schema",
  "type": "object",
  "required": ["version", "type", "timestamp", "metadata", "data"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "JSON Schema URI"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Specification version (SemVer)"
    },
    "type": {
      "type": "string",
      "enum": [
        "dyson_sphere",
        "terraforming",
        "warp_drive",
        "space_elevator",
        "asteroid_mining",
        "orbital_habitat",
        "interstellar",
        "custom"
      ],
      "description": "Technology type identifier"
    },
    "timestamp": {
      "$ref": "#/definitions/timestamp"
    },
    "metadata": {
      "$ref": "#/definitions/metadata"
    },
    "physical_constants": {
      "$ref": "#/definitions/physical_constants"
    },
    "data": {
      "type": "object",
      "description": "Technology-specific data"
    },
    "validation": {
      "$ref": "#/definitions/validation"
    }
  },
  "definitions": {
    "timestamp": {
      "type": "object",
      "required": ["unix_ms"],
      "properties": {
        "unix_ms": {
          "type": "number",
          "description": "UNIX timestamp in milliseconds"
        },
        "iso8601": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 formatted string"
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["simulation_id", "confidence_level"],
      "properties": {
        "simulation_id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique identifier (UUID v4)"
        },
        "author": {
          "type": "string",
          "description": "Author name"
        },
        "institution": {
          "type": "string",
          "description": "Institution name"
        },
        "reference": {
          "type": "string",
          "description": "Reference (DOI or URL)"
        },
        "confidence_level": {
          "type": "string",
          "enum": ["theoretical", "calculated", "simulated", "measured"],
          "description": "Data confidence level"
        }
      }
    },
    "physical_constants": {
      "type": "object",
      "properties": {
        "c": {
          "type": "number",
          "description": "Speed of light (m/s)"
        },
        "G": {
          "type": "number",
          "description": "Gravitational constant (m³/kg·s²)"
        },
        "h": {
          "type": "number",
          "description": "Planck constant (J·s)"
        },
        "k": {
          "type": "number",
          "description": "Boltzmann constant (J/K)"
        },
        "sigma": {
          "type": "number",
          "description": "Stefan-Boltzmann constant (W/m²·K⁴)"
        },
        "solar_luminosity_W": {
          "type": "number",
          "description": "Solar luminosity (W)"
        },
        "solar_mass_kg": {
          "type": "number",
          "description": "Solar mass (kg)"
        },
        "solar_radius_m": {
          "type": "number",
          "description": "Solar radius (m)"
        },
        "earth_mass_kg": {
          "type": "number",
          "description": "Earth mass (kg)"
        },
        "earth_radius_m": {
          "type": "number",
          "description": "Earth radius (m)"
        },
        "AU_m": {
          "type": "number",
          "description": "Astronomical unit (m)"
        },
        "light_year_m": {
          "type": "number",
          "description": "Light year (m)"
        },
        "parsec_m": {
          "type": "number",
          "description": "Parsec (m)"
        }
      }
    },
    "validation": {
      "type": "object",
      "required": ["schema_version", "validated"],
      "properties": {
        "schema_version": {
          "type": "string",
          "description": "Schema version used"
        },
        "validated": {
          "type": "boolean",
          "description": "Validation status"
        },
        "warnings": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Warning messages"
        }
      }
    }
  }
}
