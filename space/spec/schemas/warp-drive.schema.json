{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/space/warp-drive.schema.json",
  "title": "WIA Space Warp Drive",
  "description": "Schema for warp drive propulsion system specifications",
  "type": "object",
  "required": [
    "technology_id",
    "category",
    "drive_type",
    "theoretical_basis"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "technology_id": {
      "type": "string",
      "pattern": "^warp-[a-zA-Z0-9-]+$"
    },
    "category": {
      "type": "string",
      "const": "warp_drive"
    },
    "drive_type": {
      "type": "string",
      "enum": [
        "alcubierre_ftl",
        "alcubierre_subluminal",
        "natario",
        "white_juday",
        "van_den_broeck",
        "krasnikov_tube"
      ],
      "description": "Type of warp drive"
    },
    "theoretical_basis": {
      "type": "object",
      "required": ["metric"],
      "properties": {
        "metric": {
          "type": "string",
          "enum": ["alcubierre", "natario", "van_den_broeck", "custom"],
          "description": "Spacetime metric used"
        },
        "requires_exotic_matter": {
          "type": "boolean",
          "description": "Whether exotic matter is required"
        },
        "energy_conditions_satisfied": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["null", "weak", "strong", "dominant"]
          },
          "description": "Energy conditions that are satisfied"
        },
        "reference_paper": {
          "type": "string"
        },
        "mathematical_formulation": {
          "type": "string",
          "description": "Brief description of mathematical basis"
        }
      }
    },
    "bubble_parameters": {
      "type": "object",
      "properties": {
        "radius_meters": {
          "type": "number",
          "minimum": 0,
          "description": "Warp bubble radius"
        },
        "wall_thickness_meters": {
          "type": "number",
          "minimum": 0,
          "description": "Bubble wall thickness"
        },
        "shape": {
          "type": "string",
          "enum": ["spherical", "oblate_spheroid", "prolate_spheroid", "toroidal"],
          "description": "Bubble geometry"
        },
        "aspect_ratio": {
          "type": "number",
          "minimum": 0,
          "description": "Shape aspect ratio"
        },
        "interior_volume_m3": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "performance": {
      "type": "object",
      "properties": {
        "max_velocity_c": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum velocity as fraction of c"
        },
        "cruise_velocity_c": {
          "type": "number",
          "minimum": 0,
          "description": "Cruise velocity as fraction of c"
        },
        "acceleration_g": {
          "type": "number",
          "minimum": 0,
          "description": "Acceleration in g-forces"
        },
        "acceleration_time_seconds": {
          "type": "number",
          "minimum": 0
        },
        "deceleration_time_seconds": {
          "type": "number",
          "minimum": 0
        },
        "energy_requirement_joules": {
          "type": "number",
          "minimum": 0,
          "description": "Total energy required"
        },
        "power_requirement_watts": {
          "type": "number",
          "minimum": 0,
          "description": "Continuous power requirement"
        }
      }
    },
    "energy_source": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "antimatter_annihilation",
            "fusion",
            "zero_point",
            "casimir_effect",
            "exotic_matter",
            "theoretical"
          ]
        },
        "efficiency_percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "fuel_mass_kg": {
          "type": "number",
          "minimum": 0
        },
        "storage_method": {
          "type": "string"
        }
      }
    },
    "spacetime_metrics": {
      "type": "object",
      "properties": {
        "contraction_factor_front": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Spacetime contraction ahead of craft"
        },
        "expansion_factor_rear": {
          "type": "number",
          "minimum": 1,
          "description": "Spacetime expansion behind craft"
        },
        "local_flat_space": {
          "type": "boolean",
          "description": "Whether interior space is flat"
        },
        "tidal_forces_survivable": {
          "type": "boolean"
        }
      }
    },
    "simulation_parameters": {
      "type": "object",
      "properties": {
        "grid_resolution": {
          "type": "integer",
          "minimum": 1,
          "description": "Simulation grid resolution"
        },
        "time_step_seconds": {
          "type": "number",
          "minimum": 0
        },
        "boundary_conditions": {
          "type": "string",
          "enum": ["asymptotically_flat", "periodic", "absorbing"]
        },
        "numerical_method": {
          "type": "string"
        }
      }
    },
    "hazards": {
      "type": "object",
      "properties": {
        "hawking_radiation_exposure": {
          "type": "boolean"
        },
        "causality_violation_risk": {
          "type": "boolean"
        },
        "particle_accumulation": {
          "type": "boolean"
        },
        "destination_destruction_risk": {
          "type": "boolean"
        }
      }
    },
    "spacecraft_requirements": {
      "type": "object",
      "properties": {
        "min_mass_kg": {
          "type": "number",
          "minimum": 0
        },
        "max_dimensions_meters": {
          "type": "number",
          "minimum": 0
        },
        "shielding_required": {
          "type": "boolean"
        }
      }
    }
  }
}
