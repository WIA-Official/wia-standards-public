{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/space/v1/interstellar.schema.json",
  "title": "Interstellar Travel Data",
  "description": "Schema for interstellar travel technology data",
  "type": "object",
  "required": ["propulsion_type", "mission", "spacecraft"],
  "properties": {
    "propulsion_type": {
      "type": "string",
      "enum": ["light_sail", "fusion", "antimatter", "nuclear_pulse", "ion", "laser_propulsion", "other"],
      "description": "Propulsion system type"
    },
    "mission": {
      "type": "object",
      "required": ["origin", "destination", "distance_ly", "cruise_velocity_c"],
      "properties": {
        "origin": {
          "type": "string",
          "description": "Origin star system"
        },
        "destination": {
          "type": "string",
          "description": "Destination star system"
        },
        "distance_ly": {
          "type": "number",
          "minimum": 0,
          "description": "Distance in light-years"
        },
        "cruise_velocity_c": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Cruise velocity as fraction of c"
        },
        "mission_duration_years": {
          "type": "number",
          "minimum": 0,
          "description": "Total mission duration in years"
        }
      }
    },
    "spacecraft": {
      "type": "object",
      "required": ["dry_mass_kg"],
      "properties": {
        "dry_mass_kg": {
          "type": "number",
          "minimum": 0,
          "description": "Dry mass in kg"
        },
        "payload_mass_kg": {
          "type": "number",
          "minimum": 0,
          "description": "Payload mass in kg"
        },
        "propellant_mass_kg": {
          "type": "number",
          "minimum": 0,
          "description": "Propellant mass in kg"
        },
        "sail_area_m2": {
          "type": "number",
          "minimum": 0,
          "description": "Light sail area in m² (for light sail propulsion)"
        },
        "sail_thickness_m": {
          "type": "number",
          "minimum": 0,
          "description": "Light sail thickness in m"
        },
        "total_mass_kg": {
          "type": "number",
          "minimum": 0,
          "description": "Total mass in kg"
        }
      }
    },
    "propulsion": {
      "type": "object",
      "properties": {
        "specific_impulse_s": {
          "type": "number",
          "minimum": 0,
          "description": "Specific impulse in seconds"
        },
        "thrust_N": {
          "type": "number",
          "minimum": 0,
          "description": "Thrust in Newtons"
        },
        "exhaust_velocity_ms": {
          "type": "number",
          "minimum": 0,
          "description": "Exhaust velocity in m/s"
        },
        "laser_power_W": {
          "type": "number",
          "minimum": 0,
          "description": "Laser power in Watts (for light sail)"
        },
        "acceleration_distance_AU": {
          "type": "number",
          "minimum": 0,
          "description": "Effective acceleration distance in AU"
        },
        "max_acceleration_ms2": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum acceleration in m/s²"
        },
        "mass_ratio": {
          "type": "number",
          "minimum": 1,
          "description": "Mass ratio (initial/final)"
        },
        "propellant_type": {
          "type": "string",
          "description": "Propellant type"
        }
      }
    },
    "trajectory": {
      "type": "object",
      "properties": {
        "acceleration_phase_years": {
          "type": "number",
          "minimum": 0,
          "description": "Acceleration phase duration in years"
        },
        "cruise_phase_years": {
          "type": "number",
          "minimum": 0,
          "description": "Cruise phase duration in years"
        },
        "deceleration_phase_years": {
          "type": "number",
          "minimum": 0,
          "description": "Deceleration phase duration in years"
        },
        "total_delta_v_ms": {
          "type": "number",
          "minimum": 0,
          "description": "Total delta-v in m/s"
        }
      }
    },
    "relativistic_effects": {
      "type": "object",
      "properties": {
        "lorentz_factor": {
          "type": "number",
          "minimum": 1,
          "description": "Lorentz factor (gamma)"
        },
        "time_dilation_factor": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Time dilation factor"
        },
        "ship_proper_time_years": {
          "type": "number",
          "minimum": 0,
          "description": "Ship proper time in years"
        },
        "earth_elapsed_time_years": {
          "type": "number",
          "minimum": 0,
          "description": "Earth elapsed time in years"
        }
      }
    },
    "challenges": {
      "type": "object",
      "properties": {
        "interstellar_medium_erosion": {
          "type": "boolean",
          "description": "Whether interstellar medium erosion is significant"
        },
        "communication_delay_years": {
          "type": "number",
          "minimum": 0,
          "description": "One-way communication delay in years"
        },
        "navigation_precision_arcsec": {
          "type": "number",
          "minimum": 0,
          "description": "Required navigation precision in arcseconds"
        },
        "radiation_shielding_mass_kg": {
          "type": "number",
          "minimum": 0,
          "description": "Radiation shielding mass in kg"
        },
        "sail_absorption_limit": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Maximum allowable sail absorption"
        }
      }
    }
  }
}
