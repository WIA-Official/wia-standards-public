{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wia.live/space/v1/wsp-message.schema.json",
  "title": "WIA Space Protocol Message",
  "description": "Message format for WIA Space Protocol (WSP)",
  "type": "object",
  "required": [
    "protocol",
    "version",
    "messageId",
    "timestamp",
    "sequence",
    "type",
    "source",
    "destination",
    "payload"
  ],
  "properties": {
    "protocol": {
      "type": "string",
      "const": "wia-space",
      "description": "Protocol identifier"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Protocol version (semver)"
    },
    "messageId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique message ID (UUID v4)"
    },
    "timestamp": {
      "type": "integer",
      "minimum": 0,
      "description": "Unix timestamp in milliseconds"
    },
    "sequence": {
      "type": "integer",
      "minimum": 0,
      "description": "Sequence number for ordering"
    },
    "type": {
      "type": "string",
      "enum": [
        "connect",
        "connect_ack",
        "disconnect",
        "ping",
        "pong",
        "telemetry",
        "command",
        "command_ack",
        "mission_update",
        "simulation_data",
        "spec_update",
        "validation_request",
        "validation_result",
        "error",
        "warning"
      ],
      "description": "Message type"
    },
    "source": {
      "$ref": "#/$defs/endpoint",
      "description": "Message source"
    },
    "destination": {
      "$ref": "#/$defs/endpoint",
      "description": "Message destination"
    },
    "payload": {
      "type": "object",
      "description": "Message payload"
    },
    "metadata": {
      "$ref": "#/$defs/metadata",
      "description": "Optional metadata"
    }
  },
  "$defs": {
    "endpoint": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "description": "Endpoint identifier"
        },
        "type": {
          "type": "string",
          "enum": ["ground_station", "spacecraft", "simulator", "relay"],
          "description": "Endpoint type"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "normal", "low"],
          "default": "normal",
          "description": "Message priority"
        },
        "ttl": {
          "type": "integer",
          "minimum": 0,
          "description": "Time to live in seconds"
        },
        "compression": {
          "type": "string",
          "enum": ["none", "gzip", "lz4"],
          "default": "none",
          "description": "Compression algorithm"
        },
        "encryption": {
          "type": "string",
          "enum": ["none", "aes-256-gcm"],
          "default": "none",
          "description": "Encryption algorithm"
        }
      }
    }
  }
}
