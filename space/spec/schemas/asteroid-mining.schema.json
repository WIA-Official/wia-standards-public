{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/space/asteroid-mining.schema.json",
  "title": "WIA Space Asteroid Mining",
  "description": "Schema for asteroid mining mission and resource specifications",
  "type": "object",
  "required": [
    "technology_id",
    "category",
    "target_asteroid"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "technology_id": {
      "type": "string",
      "pattern": "^mining-[a-zA-Z0-9-]+$"
    },
    "category": {
      "type": "string",
      "const": "asteroid_mining"
    },
    "target_asteroid": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Asteroid name or designation"
        },
        "designation": {
          "type": "string",
          "description": "Official designation (e.g., A801 BA)"
        },
        "type": {
          "type": "string",
          "enum": ["c_type", "s_type", "m_type", "v_type", "d_type", "p_type", "x_type"],
          "description": "Spectral classification"
        },
        "diameter_km": {
          "type": "number",
          "minimum": 0,
          "description": "Mean diameter"
        },
        "mass_kg": {
          "type": "number",
          "minimum": 0,
          "description": "Estimated mass"
        },
        "rotation_period_hours": {
          "type": "number",
          "minimum": 0
        },
        "albedo": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "orbital_parameters": {
          "type": "object",
          "properties": {
            "semi_major_axis_au": {"type": "number", "minimum": 0},
            "eccentricity": {"type": "number", "minimum": 0, "maximum": 1},
            "inclination_deg": {"type": "number", "minimum": 0, "maximum": 180},
            "orbital_period_years": {"type": "number", "minimum": 0},
            "perihelion_au": {"type": "number", "minimum": 0},
            "aphelion_au": {"type": "number", "minimum": 0}
          }
        },
        "location": {
          "type": "string",
          "enum": ["main_belt", "near_earth", "trojan", "kuiper_belt", "other"]
        }
      }
    },
    "resource_assessment": {
      "type": "object",
      "properties": {
        "assessment_date": {
          "type": "string",
          "format": "date"
        },
        "assessment_method": {
          "type": "string",
          "enum": ["spectroscopic_remote", "radar", "sample_return", "in_situ", "theoretical"]
        },
        "confidence_level": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence in assessment (0-1)"
        },
        "resources": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["element", "mass_fraction"],
            "properties": {
              "element": {
                "type": "string",
                "description": "Element symbol (e.g., 'Fe', 'Ni', 'Au')"
              },
              "name": {
                "type": "string",
                "description": "Element name"
              },
              "mass_fraction": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "description": "Fraction of total mass"
              },
              "estimated_mass_kg": {
                "type": "number",
                "minimum": 0
              },
              "estimated_value_usd": {
                "type": "number",
                "minimum": 0
              },
              "extractability": {
                "type": "string",
                "enum": ["easy", "moderate", "difficult", "very_difficult"]
              }
            }
          }
        },
        "water_content_percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "total_estimated_value_usd": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "mission_parameters": {
      "type": "object",
      "properties": {
        "launch_window": {
          "type": "string",
          "format": "date"
        },
        "launch_window_duration_days": {
          "type": "number",
          "minimum": 0
        },
        "transfer_type": {
          "type": "string",
          "enum": ["hohmann", "low_thrust", "gravity_assist", "direct"]
        },
        "delta_v_km_s": {
          "type": "number",
          "minimum": 0,
          "description": "Total delta-v required"
        },
        "travel_time_days": {
          "type": "number",
          "minimum": 0
        },
        "stay_time_days": {
          "type": "number",
          "minimum": 0
        },
        "return_time_days": {
          "type": "number",
          "minimum": 0
        },
        "total_mission_duration_days": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "spacecraft": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "dry_mass_kg": {"type": "number", "minimum": 0},
        "propellant_mass_kg": {"type": "number", "minimum": 0},
        "propulsion_type": {
          "type": "string",
          "enum": ["chemical", "ion", "solar_sail", "nuclear_thermal", "hall_thruster"]
        },
        "power_source": {
          "type": "string",
          "enum": ["solar", "nuclear", "battery"]
        },
        "power_kw": {"type": "number", "minimum": 0}
      }
    },
    "extraction_technology": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string",
          "enum": [
            "optical_mining",
            "mechanical_excavation",
            "magnetic_separation",
            "electrolysis",
            "chemical_extraction",
            "thermal_processing"
          ]
        },
        "description": {"type": "string"},
        "processing_rate_kg_day": {
          "type": "number",
          "minimum": 0
        },
        "power_requirement_kw": {
          "type": "number",
          "minimum": 0
        },
        "efficiency_percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "return_method": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "capsule_return",
            "whole_asteroid_redirect",
            "in_space_processing",
            "lunar_base_delivery",
            "orbital_depot"
          ]
        },
        "payload_mass_kg": {
          "type": "number",
          "minimum": 0
        },
        "reentry_method": {
          "type": "string",
          "enum": ["aerocapture", "direct_entry", "propulsive", "lunar_orbit_insertion"]
        },
        "landing_site": {"type": "string"}
      }
    },
    "economic_analysis": {
      "type": "object",
      "properties": {
        "mission_cost_usd": {"type": "number", "minimum": 0},
        "expected_return_usd": {"type": "number", "minimum": 0},
        "roi_percent": {"type": "number"},
        "break_even_missions": {"type": "integer", "minimum": 1},
        "payback_period_years": {"type": "number", "minimum": 0},
        "net_present_value_usd": {"type": "number"}
      }
    },
    "regulatory": {
      "type": "object",
      "properties": {
        "licensing_authority": {"type": "string"},
        "license_number": {"type": "string"},
        "space_law_compliance": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    }
  }
}
