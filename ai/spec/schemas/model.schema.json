{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/ai/model.schema.json",
  "title": "WIA AI Model",
  "description": "Schema for WIA AI model metadata",
  "type": "object",
  "required": [
    "wia_version",
    "model_id",
    "model_info",
    "architecture"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "wia_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "WIA AI specification version"
    },
    "model_id": {
      "type": "string",
      "pattern": "^model-[a-zA-Z0-9-]+$",
      "description": "Unique model identifier"
    },
    "model_info": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Model name"
        },
        "family": {
          "type": "string",
          "description": "Model family (e.g., gpt, claude, llama)"
        },
        "version": {
          "type": "string",
          "description": "Model version"
        },
        "release_date": {
          "type": "string",
          "format": "date",
          "description": "Release date"
        },
        "provider": {
          "type": "string",
          "description": "Model provider/organization"
        }
      }
    },
    "architecture": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "transformer",
            "transformer_decoder",
            "transformer_enc_dec",
            "moe",
            "ssm",
            "diffusion",
            "neuromorphic",
            "hybrid",
            "other"
          ],
          "description": "Architecture type"
        },
        "variant": {
          "type": "string",
          "description": "Architecture variant"
        },
        "parameters": {
          "type": "object",
          "properties": {
            "total": {
              "type": ["integer", "null"],
              "description": "Total parameters"
            },
            "trainable": {
              "type": ["integer", "null"],
              "description": "Trainable parameters"
            },
            "embedding": {
              "type": ["integer", "null"],
              "description": "Embedding parameters"
            }
          }
        },
        "layers": {
          "type": "object",
          "properties": {
            "num_layers": {
              "type": ["integer", "null"]
            },
            "hidden_size": {
              "type": ["integer", "null"]
            },
            "num_attention_heads": {
              "type": ["integer", "null"]
            },
            "intermediate_size": {
              "type": ["integer", "null"]
            }
          }
        },
        "context_length": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum context length in tokens"
        },
        "vocabulary_size": {
          "type": ["integer", "null"],
          "description": "Vocabulary size"
        }
      }
    },
    "capabilities": {
      "type": "object",
      "properties": {
        "modalities": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["text", "image", "audio", "video", "code", "structured_data"]
          },
          "description": "Supported input/output modalities"
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Supported languages (ISO 639-1 codes)"
        },
        "tasks": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Supported tasks"
        },
        "features": {
          "type": "object",
          "properties": {
            "function_calling": {
              "type": "boolean"
            },
            "structured_output": {
              "type": "boolean"
            },
            "vision": {
              "type": "boolean"
            },
            "extended_thinking": {
              "type": "boolean"
            },
            "streaming": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "training": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string",
          "enum": ["pretrain", "finetune", "rlhf", "dpo", "constitutional_ai", "other"],
          "description": "Training method"
        },
        "base_model": {
          "type": ["string", "null"],
          "description": "Base model ID if fine-tuned"
        },
        "dataset": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["public", "proprietary", "mixed"]
            },
            "size": {
              "type": ["string", "null"]
            },
            "cutoff_date": {
              "type": ["string", "null"]
            }
          }
        },
        "compute": {
          "type": "object",
          "properties": {
            "hardware": {
              "type": ["string", "null"]
            },
            "duration": {
              "type": ["string", "null"]
            },
            "cost": {
              "type": ["string", "null"]
            }
          }
        }
      }
    },
    "safety": {
      "type": "object",
      "properties": {
        "alignment_method": {
          "type": "string",
          "description": "Alignment training method"
        },
        "safety_training": {
          "type": "boolean"
        },
        "content_policy": {
          "type": "string"
        },
        "evaluations": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Paths to safety evaluation files"
        }
      }
    },
    "deployment": {
      "type": "object",
      "properties": {
        "inference_api": {
          "type": "boolean"
        },
        "on_premise": {
          "type": "boolean"
        },
        "quantization_options": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "hardware_requirements": {
          "type": ["object", "null"]
        }
      }
    },
    "licensing": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["open_source", "proprietary", "research_only", "commercial"]
        },
        "license_name": {
          "type": "string"
        },
        "commercial_use": {
          "type": "boolean"
        },
        "attribution_required": {
          "type": "boolean"
        }
      }
    }
  }
}
