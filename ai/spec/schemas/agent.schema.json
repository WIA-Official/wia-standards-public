{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/ai/agent.schema.json",
  "title": "WIA AI Agent",
  "description": "Schema for WIA AI agent definition",
  "type": "object",
  "required": [
    "wia_version",
    "agent_id",
    "agent_info",
    "model"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "wia_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "WIA AI specification version"
    },
    "agent_id": {
      "type": "string",
      "pattern": "^agent-[a-zA-Z0-9-]+$",
      "description": "Unique agent identifier"
    },
    "agent_info": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Agent name"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["assistant", "researcher", "coder", "writer", "analyst", "orchestrator", "specialist", "custom"]
        },
        "author": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "model": {
      "type": "object",
      "required": ["model_name"],
      "properties": {
        "model_id": {
          "type": "string",
          "description": "WIA model ID reference"
        },
        "provider": {
          "type": "string",
          "enum": ["anthropic", "openai", "google", "meta", "mistral", "local", "other"]
        },
        "model_name": {
          "type": "string",
          "description": "Provider's model name"
        },
        "temperature": {
          "type": "number",
          "minimum": 0,
          "maximum": 2,
          "default": 0.7
        },
        "max_tokens": {
          "type": "integer",
          "minimum": 1
        },
        "top_p": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "top_k": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "system_prompt": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "description": "Inline system prompt content"
        },
        "template": {
          "type": "string",
          "description": "Path to template file"
        },
        "variables": {
          "type": "object",
          "additionalProperties": true,
          "description": "Template variables"
        }
      }
    },
    "capabilities": {
      "type": "object",
      "properties": {
        "tools": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/tool"
          }
        },
        "mcp_servers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/mcpServer"
          }
        },
        "memory": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["none", "conversation", "vector_store", "knowledge_graph"]
            },
            "provider": {
              "type": "string"
            },
            "config": {
              "type": "object"
            }
          }
        }
      }
    },
    "behavior": {
      "type": "object",
      "properties": {
        "planning": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "strategy": {
              "type": "string",
              "enum": ["none", "chain_of_thought", "tree_of_thought", "react", "reflexion"]
            }
          }
        },
        "reflection": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "frequency": {
              "type": "string",
              "enum": ["never", "after_each_task", "after_each_step", "on_error"]
            }
          }
        },
        "handoff": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "target_agents": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "properties": {
        "max_iterations": {
          "type": "integer",
          "minimum": 1
        },
        "timeout_seconds": {
          "type": "integer",
          "minimum": 1
        },
        "rate_limits": {
          "type": "object",
          "properties": {
            "requests_per_minute": {
              "type": "integer"
            },
            "tokens_per_minute": {
              "type": "integer"
            }
          }
        }
      }
    },
    "safety": {
      "type": "object",
      "properties": {
        "content_filters": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "pii_handling": {
          "type": "string",
          "enum": ["allow", "warn", "redact", "block"]
        },
        "audit_logging": {
          "type": "boolean"
        },
        "human_in_loop": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "actions_requiring_approval": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "tool": {
      "type": "object",
      "required": ["name", "description"],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "schema": {
          "type": "string",
          "description": "Path to tool schema file"
        },
        "parameters": {
          "type": "object",
          "description": "Inline parameter schema"
        }
      }
    },
    "mcpServer": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "command": {
          "type": "string"
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    }
  }
}
