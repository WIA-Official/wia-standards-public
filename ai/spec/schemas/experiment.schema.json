{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/ai/experiment.schema.json",
  "title": "WIA AI Experiment",
  "description": "Schema for WIA AI experiment records",
  "type": "object",
  "required": [
    "wia_version",
    "experiment_id",
    "experiment_info",
    "base_model"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "wia_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "WIA AI specification version"
    },
    "experiment_id": {
      "type": "string",
      "pattern": "^exp-[a-zA-Z0-9-]+$",
      "description": "Unique experiment identifier"
    },
    "experiment_info": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["pretraining", "finetuning", "rlhf", "dpo", "evaluation", "ablation", "hpo", "other"]
        },
        "status": {
          "type": "string",
          "enum": ["pending", "running", "completed", "failed", "cancelled"]
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "completed_at": {
          "type": ["string", "null"],
          "format": "date-time"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "base_model": {
      "type": "object",
      "properties": {
        "model_id": {
          "type": "string"
        },
        "provider": {
          "type": "string"
        },
        "model_name": {
          "type": "string"
        }
      }
    },
    "dataset": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "splits": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/dataSplit"
          }
        }
      }
    },
    "hyperparameters": {
      "type": "object",
      "properties": {
        "learning_rate": {
          "type": "number"
        },
        "batch_size": {
          "type": "integer"
        },
        "epochs": {
          "type": "integer"
        },
        "warmup_steps": {
          "type": "integer"
        },
        "weight_decay": {
          "type": "number"
        },
        "max_seq_length": {
          "type": "integer"
        },
        "gradient_accumulation_steps": {
          "type": "integer"
        }
      },
      "additionalProperties": true
    },
    "training_config": {
      "type": "object",
      "properties": {
        "optimizer": {
          "type": "string",
          "enum": ["sgd", "adam", "adamw", "adafactor", "lion", "other"]
        },
        "scheduler": {
          "type": "string",
          "enum": ["constant", "linear", "cosine", "polynomial", "other"]
        },
        "precision": {
          "type": "string",
          "enum": ["fp32", "fp16", "bf16", "int8", "int4"]
        },
        "distributed": {
          "type": "object",
          "properties": {
            "strategy": {
              "type": "string",
              "enum": ["none", "ddp", "fsdp", "deepspeed", "megatron"]
            },
            "num_gpus": {
              "type": "integer"
            },
            "num_nodes": {
              "type": "integer"
            }
          }
        }
      }
    },
    "compute": {
      "type": "object",
      "properties": {
        "hardware": {
          "type": "object",
          "properties": {
            "gpu_type": {
              "type": "string"
            },
            "num_gpus": {
              "type": "integer"
            },
            "gpu_memory_gb": {
              "type": "number"
            },
            "cpu_cores": {
              "type": "integer"
            },
            "ram_gb": {
              "type": "number"
            }
          }
        },
        "duration_hours": {
          "type": "number"
        },
        "cost_usd": {
          "type": "number"
        }
      }
    },
    "results": {
      "type": "object",
      "properties": {
        "final_metrics": {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          }
        },
        "checkpoints": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/checkpoint"
          }
        }
      }
    },
    "artifacts": {
      "type": "object",
      "properties": {
        "model": {
          "type": "string"
        },
        "logs": {
          "type": "string"
        },
        "tensorboard": {
          "type": "string"
        },
        "config": {
          "type": "string"
        }
      }
    },
    "reproducibility": {
      "type": "object",
      "properties": {
        "random_seed": {
          "type": "integer"
        },
        "framework": {
          "type": "string"
        },
        "framework_version": {
          "type": "string"
        },
        "dependencies": {
          "type": "string"
        },
        "git_commit": {
          "type": "string"
        },
        "git_repo": {
          "type": "string"
        }
      }
    }
  },
  "definitions": {
    "dataSplit": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        },
        "num_examples": {
          "type": "integer"
        },
        "format": {
          "type": "string",
          "enum": ["jsonl", "parquet", "csv", "arrow", "tfrecord"]
        }
      }
    },
    "checkpoint": {
      "type": "object",
      "properties": {
        "step": {
          "type": "integer"
        },
        "epoch": {
          "type": "number"
        },
        "path": {
          "type": "string"
        },
        "metrics": {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          }
        }
      }
    }
  }
}
