{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/ai/prompt.schema.json",
  "title": "WIA AI Prompt",
  "description": "Schema for WIA AI prompt templates",
  "type": "object",
  "required": [
    "wia_version",
    "prompt_id",
    "prompt_info",
    "template"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "wia_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "WIA AI specification version"
    },
    "prompt_id": {
      "type": "string",
      "pattern": "^prompt-[a-zA-Z0-9-]+$",
      "description": "Unique prompt identifier"
    },
    "prompt_info": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "description": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "category": {
          "type": "string",
          "enum": [
            "system",
            "user",
            "assistant",
            "few_shot",
            "chain_of_thought",
            "tool_use",
            "other"
          ]
        }
      }
    },
    "template": {
      "type": "object",
      "properties": {
        "system": {
          "type": "string",
          "description": "System prompt template"
        },
        "user": {
          "type": "string",
          "description": "User message template"
        },
        "assistant": {
          "type": "string",
          "description": "Assistant response template"
        },
        "assistant_prefill": {
          "type": ["string", "null"],
          "description": "Prefilled assistant response"
        }
      }
    },
    "variables": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/variable"
      }
    },
    "examples": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/example"
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "optimal_temperature": {
          "type": "number",
          "minimum": 0,
          "maximum": 2
        },
        "optimal_top_p": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "max_tokens": {
          "type": "integer"
        },
        "stop_sequences": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "recommended_models": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "validation": {
      "type": "object",
      "properties": {
        "output_format": {
          "type": "string",
          "enum": ["text", "json", "markdown", "code", "structured"]
        },
        "output_schema": {
          "type": "object",
          "description": "JSON Schema for expected output"
        },
        "required_elements": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "definitions": {
    "variable": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "array", "object"]
        },
        "required": {
          "type": "boolean",
          "default": false
        },
        "default": {
          "description": "Default value"
        },
        "description": {
          "type": "string"
        },
        "examples": {
          "type": "array"
        },
        "enum": {
          "type": "array"
        },
        "minLength": {
          "type": "integer"
        },
        "maxLength": {
          "type": "integer"
        }
      }
    },
    "example": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "variables": {
          "type": "object"
        },
        "expected_output": {
          "type": "string"
        },
        "expected_topics": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
