{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/ai/safety-assessment.schema.json",
  "title": "WIA AI Safety Assessment",
  "description": "Schema for WIA AI safety assessment results",
  "type": "object",
  "required": [
    "wia_version",
    "assessment_id",
    "assessment_info"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "wia_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "WIA AI specification version"
    },
    "assessment_id": {
      "type": "string",
      "pattern": "^safety-assessment-[a-zA-Z0-9-]+$",
      "description": "Unique assessment identifier"
    },
    "assessment_info": {
      "type": "object",
      "required": ["name", "model_id"],
      "properties": {
        "name": {
          "type": "string"
        },
        "model_id": {
          "type": "string"
        },
        "assessor": {
          "type": "string"
        },
        "methodology": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "risk_categories": {
      "type": "object",
      "properties": {
        "dangerous_capabilities": {
          "$ref": "#/definitions/riskCategory"
        },
        "misuse_potential": {
          "$ref": "#/definitions/riskCategory"
        },
        "alignment": {
          "$ref": "#/definitions/alignmentCategory"
        },
        "bias_fairness": {
          "$ref": "#/definitions/riskCategory"
        },
        "privacy": {
          "$ref": "#/definitions/riskCategory"
        }
      }
    },
    "red_team_findings": {
      "type": "object",
      "properties": {
        "total_attempts": {
          "type": "integer"
        },
        "successful_jailbreaks": {
          "type": "integer"
        },
        "jailbreak_rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "categories": {
          "type": "object",
          "additionalProperties": {
            "type": "integer"
          }
        },
        "remediation_status": {
          "type": "string",
          "enum": ["not_started", "in_progress", "completed", "ongoing"]
        }
      }
    },
    "compliance": {
      "type": "object",
      "properties": {
        "frameworks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/complianceFramework"
          }
        }
      }
    },
    "incident_history": {
      "type": "object",
      "properties": {
        "total_incidents": {
          "type": "integer"
        },
        "severity_breakdown": {
          "type": "object",
          "properties": {
            "critical": {
              "type": "integer"
            },
            "high": {
              "type": "integer"
            },
            "medium": {
              "type": "integer"
            },
            "low": {
              "type": "integer"
            }
          }
        },
        "recent_incidents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/incident"
          }
        }
      }
    },
    "overall_rating": {
      "type": "object",
      "properties": {
        "score": {
          "type": "string"
        },
        "numeric_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "summary": {
          "type": "string"
        },
        "next_review_date": {
          "type": "string",
          "format": "date"
        }
      }
    }
  },
  "definitions": {
    "riskCategory": {
      "type": "object",
      "properties": {
        "risk_level": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low", "none"]
        },
        "tests_conducted": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "result": {
                "type": "string",
                "enum": ["pass", "fail", "partial", "not_applicable"]
              },
              "details": {
                "type": "string"
              }
            }
          }
        },
        "concerns": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "mitigations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "alignmentCategory": {
      "type": "object",
      "properties": {
        "risk_level": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low", "none"]
        },
        "evaluation": {
          "type": "object",
          "properties": {
            "value_alignment_score": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "goal_stability": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "instruction_following": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "honesty": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "harmlessness": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          }
        }
      }
    },
    "complianceFramework": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["compliant", "non_compliant", "in_progress", "not_applicable"]
        },
        "risk_classification": {
          "type": "string"
        },
        "requirements_met": {
          "type": "integer"
        },
        "requirements_total": {
          "type": "integer"
        },
        "certification_date": {
          "type": ["string", "null"],
          "format": "date"
        },
        "categories_addressed": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "incident": {
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "severity": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"]
        },
        "description": {
          "type": "string"
        },
        "resolution": {
          "type": "string"
        },
        "root_cause": {
          "type": "string"
        }
      }
    }
  }
}
