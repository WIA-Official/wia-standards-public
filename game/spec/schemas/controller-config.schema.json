{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/game/controller-config.schema.json",
  "title": "WIA Game Controller Configuration",
  "description": "Button remapping and controller configuration - 弘益人間",
  "type": "object",
  "properties": {
    "config_id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "description": "Configuration profile name"
    },
    "controller_type": {
      "type": "string",
      "enum": [
        "standard_controller",
        "xbox_adaptive_controller",
        "ps_access_controller",
        "hori_flex",
        "quadstick",
        "switch_array",
        "keyboard_mouse",
        "custom"
      ]
    },
    "button_mapping": {
      "type": "object",
      "properties": {
        "a": { "$ref": "#/definitions/button_action" },
        "b": { "$ref": "#/definitions/button_action" },
        "x": { "$ref": "#/definitions/button_action" },
        "y": { "$ref": "#/definitions/button_action" },
        "lb": { "$ref": "#/definitions/button_action" },
        "rb": { "$ref": "#/definitions/button_action" },
        "lt": { "$ref": "#/definitions/button_action" },
        "rt": { "$ref": "#/definitions/button_action" },
        "dpad_up": { "$ref": "#/definitions/button_action" },
        "dpad_down": { "$ref": "#/definitions/button_action" },
        "dpad_left": { "$ref": "#/definitions/button_action" },
        "dpad_right": { "$ref": "#/definitions/button_action" },
        "left_stick_click": { "$ref": "#/definitions/button_action" },
        "right_stick_click": { "$ref": "#/definitions/button_action" },
        "start": { "$ref": "#/definitions/button_action" },
        "select": { "$ref": "#/definitions/button_action" },
        "home": { "$ref": "#/definitions/button_action" },
        "share": { "$ref": "#/definitions/button_action" },
        "touchpad": { "$ref": "#/definitions/button_action" },
        "paddle_1": { "$ref": "#/definitions/button_action" },
        "paddle_2": { "$ref": "#/definitions/button_action" },
        "paddle_3": { "$ref": "#/definitions/button_action" },
        "paddle_4": { "$ref": "#/definitions/button_action" }
      },
      "additionalProperties": {
        "$ref": "#/definitions/button_action"
      }
    },
    "stick_mapping": {
      "type": "object",
      "properties": {
        "left_stick": {
          "$ref": "#/definitions/stick_config"
        },
        "right_stick": {
          "$ref": "#/definitions/stick_config"
        }
      }
    },
    "trigger_mapping": {
      "type": "object",
      "properties": {
        "left_trigger": {
          "$ref": "#/definitions/trigger_config"
        },
        "right_trigger": {
          "$ref": "#/definitions/trigger_config"
        }
      }
    },
    "keyboard_mapping": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/button_action"
      },
      "description": "Key name to action mapping"
    },
    "mouse_mapping": {
      "type": "object",
      "properties": {
        "left_click": { "$ref": "#/definitions/button_action" },
        "right_click": { "$ref": "#/definitions/button_action" },
        "middle_click": { "$ref": "#/definitions/button_action" },
        "mouse_4": { "$ref": "#/definitions/button_action" },
        "mouse_5": { "$ref": "#/definitions/button_action" },
        "scroll_up": { "$ref": "#/definitions/button_action" },
        "scroll_down": { "$ref": "#/definitions/button_action" }
      }
    },
    "switch_mapping": {
      "type": "object",
      "description": "Switch access button mapping",
      "properties": {
        "switch_1": { "$ref": "#/definitions/button_action" },
        "switch_2": { "$ref": "#/definitions/button_action" },
        "switch_3": { "$ref": "#/definitions/button_action" },
        "switch_4": { "$ref": "#/definitions/button_action" },
        "switch_5": { "$ref": "#/definitions/button_action" },
        "switch_6": { "$ref": "#/definitions/button_action" },
        "switch_7": { "$ref": "#/definitions/button_action" },
        "switch_8": { "$ref": "#/definitions/button_action" }
      },
      "additionalProperties": {
        "$ref": "#/definitions/button_action"
      }
    },
    "combo_mapping": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/combo_action"
      },
      "description": "Button combination mappings"
    },
    "macro_mapping": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/macro_action"
      },
      "description": "Macro sequences"
    }
  },
  "definitions": {
    "button_action": {
      "type": "object",
      "properties": {
        "action": {
          "type": "string",
          "description": "Game action name"
        },
        "modifiers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Required modifier buttons"
        },
        "behavior": {
          "type": "string",
          "enum": ["press", "hold", "toggle", "tap", "double_tap"],
          "default": "press"
        },
        "sensitivity": {
          "type": "number",
          "minimum": 0,
          "maximum": 2.0,
          "default": 1.0
        },
        "enabled": {
          "type": "boolean",
          "default": true
        }
      },
      "required": ["action"]
    },
    "stick_config": {
      "type": "object",
      "properties": {
        "action": {
          "type": "string",
          "enum": ["move", "look", "menu_navigate", "custom"],
          "default": "move"
        },
        "sensitivity": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 3.0,
          "default": 1.0
        },
        "dead_zone": {
          "type": "number",
          "minimum": 0,
          "maximum": 0.5,
          "default": 0.15
        },
        "outer_threshold": {
          "type": "number",
          "minimum": 0.5,
          "maximum": 1.0,
          "default": 1.0
        },
        "invert_x": {
          "type": "boolean",
          "default": false
        },
        "invert_y": {
          "type": "boolean",
          "default": false
        },
        "response_curve": {
          "type": "string",
          "enum": ["linear", "smooth", "aggressive", "custom"],
          "default": "smooth"
        }
      }
    },
    "trigger_config": {
      "type": "object",
      "properties": {
        "action": {
          "type": "string"
        },
        "threshold": {
          "type": "number",
          "minimum": 0,
          "maximum": 1.0,
          "default": 0.1,
          "description": "Activation threshold"
        },
        "analog": {
          "type": "boolean",
          "default": true,
          "description": "Use analog value or digital on/off"
        },
        "hair_trigger": {
          "type": "boolean",
          "default": false,
          "description": "Reduced travel for faster activation"
        }
      }
    },
    "combo_action": {
      "type": "object",
      "properties": {
        "buttons": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 2,
          "description": "Buttons required for combo"
        },
        "action": {
          "type": "string"
        },
        "simultaneous": {
          "type": "boolean",
          "default": true,
          "description": "Require simultaneous press or sequential"
        },
        "timeout_ms": {
          "type": "integer",
          "minimum": 100,
          "maximum": 5000,
          "default": 500,
          "description": "Time window for sequential combo"
        }
      },
      "required": ["buttons", "action"]
    },
    "macro_action": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "trigger": {
          "type": "string",
          "description": "Button to trigger macro"
        },
        "sequence": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "action": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["press", "release", "hold"],
                "default": "press"
              },
              "delay_ms": {
                "type": "integer",
                "minimum": 0,
                "default": 0
              },
              "duration_ms": {
                "type": "integer",
                "minimum": 0,
                "description": "Hold duration for hold type"
              }
            },
            "required": ["action"]
          }
        },
        "loop": {
          "type": "boolean",
          "default": false
        },
        "enabled": {
          "type": "boolean",
          "default": true
        }
      },
      "required": ["name", "trigger", "sequence"]
    }
  }
}
