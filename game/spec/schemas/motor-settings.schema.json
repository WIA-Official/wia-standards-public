{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/game/motor-settings.schema.json",
  "title": "WIA Game Motor Accessibility Settings",
  "description": "Motor accessibility settings for gaming - 弘益人間",
  "type": "object",
  "properties": {
    "input_device": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "standard_controller",
            "xbox_adaptive_controller",
            "ps_access_controller",
            "hori_flex",
            "quadstick",
            "eye_tracker",
            "switch_array",
            "keyboard_mouse",
            "touch_screen",
            "custom"
          ],
          "default": "standard_controller"
        },
        "profile_name": {
          "type": "string",
          "description": "Custom profile name for this device setup"
        },
        "copilot_enabled": {
          "type": "boolean",
          "default": false,
          "description": "Allow second controller to assist"
        }
      }
    },
    "button_behavior": {
      "type": "object",
      "properties": {
        "hold_to_toggle": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Actions that convert hold to toggle",
          "examples": [["aim", "run", "crouch"]]
        },
        "tap_timing_ms": {
          "type": "integer",
          "minimum": 100,
          "maximum": 2000,
          "default": 500,
          "description": "Maximum time for tap input"
        },
        "hold_timing_ms": {
          "type": "integer",
          "minimum": 200,
          "maximum": 5000,
          "default": 1000,
          "description": "Minimum time for hold input"
        },
        "repeat_rate_ms": {
          "type": "integer",
          "minimum": 50,
          "maximum": 1000,
          "default": 100,
          "description": "Key repeat rate for held buttons"
        },
        "debounce_ms": {
          "type": "integer",
          "minimum": 0,
          "maximum": 500,
          "default": 50,
          "description": "Input debounce time"
        }
      }
    },
    "stick_settings": {
      "type": "object",
      "properties": {
        "left_sensitivity": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 3.0,
          "default": 1.0
        },
        "right_sensitivity": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 3.0,
          "default": 1.0
        },
        "left_dead_zone": {
          "type": "number",
          "minimum": 0,
          "maximum": 0.5,
          "default": 0.15
        },
        "right_dead_zone": {
          "type": "number",
          "minimum": 0,
          "maximum": 0.5,
          "default": 0.15
        },
        "invert_y_look": {
          "type": "boolean",
          "default": false
        },
        "invert_y_move": {
          "type": "boolean",
          "default": false
        },
        "swap_sticks": {
          "type": "boolean",
          "default": false
        },
        "response_curve": {
          "type": "string",
          "enum": ["linear", "smooth", "aggressive", "custom"],
          "default": "smooth"
        }
      }
    },
    "aim_assist": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "strength": {
          "type": "string",
          "enum": ["off", "low", "medium", "high", "strong", "maximum"],
          "default": "medium"
        },
        "auto_aim": {
          "type": "boolean",
          "default": false,
          "description": "Automatic target acquisition"
        },
        "lock_on": {
          "type": "boolean",
          "default": false,
          "description": "Lock onto targets"
        },
        "sticky_aim": {
          "type": "boolean",
          "default": true,
          "description": "Aim slows near targets"
        },
        "snap_to_target": {
          "type": "boolean",
          "default": false,
          "description": "Snap aim to nearest target on ADS"
        }
      }
    },
    "auto_actions": {
      "type": "object",
      "properties": {
        "auto_run": {
          "type": "boolean",
          "default": false
        },
        "auto_climb": {
          "type": "boolean",
          "default": false
        },
        "auto_mantle": {
          "type": "boolean",
          "default": false
        },
        "auto_pickup": {
          "type": "boolean",
          "default": false
        },
        "auto_reload": {
          "type": "boolean",
          "default": false
        },
        "auto_switch_weapon": {
          "type": "boolean",
          "default": false,
          "description": "Switch weapon when empty"
        },
        "auto_heal": {
          "type": "boolean",
          "default": false
        },
        "auto_sprint": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "one_handed_mode": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "hand": {
          "type": "string",
          "enum": ["left", "right"],
          "default": "right"
        },
        "layout": {
          "type": "string",
          "enum": ["compact", "extended", "custom"],
          "default": "compact"
        },
        "gyro_aim": {
          "type": "boolean",
          "default": false,
          "description": "Use motion controls for aiming"
        }
      }
    },
    "sequential_inputs": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "description": "Allow combos with sequential button presses instead of simultaneous"
        },
        "timeout_ms": {
          "type": "integer",
          "minimum": 500,
          "maximum": 10000,
          "default": 2000
        },
        "visual_indicator": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "qte_settings": {
      "type": "object",
      "properties": {
        "auto_complete": {
          "type": "boolean",
          "default": false
        },
        "extended_time": {
          "type": "boolean",
          "default": false
        },
        "time_multiplier": {
          "type": "number",
          "minimum": 1.0,
          "maximum": 10.0,
          "default": 1.0
        },
        "hold_instead_of_mash": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "button_remapping": {
      "$ref": "controller-config.schema.json"
    }
  }
}
