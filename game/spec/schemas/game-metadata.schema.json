{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/game/game-metadata.schema.json",
  "title": "WIA Game Accessibility Metadata",
  "description": "Game accessibility feature metadata - 弘益人間",
  "type": "object",
  "properties": {
    "game_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique game identifier"
    },
    "title": {
      "type": "string",
      "description": "Game title"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Game version"
    },
    "accessibility_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Accessibility features version"
    },
    "platforms": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["pc", "xbox", "playstation", "switch", "mobile", "vr", "cloud"]
      }
    },
    "visual_features": {
      "type": "object",
      "properties": {
        "screen_reader_support": {
          "type": "boolean",
          "default": false
        },
        "screen_reader_coverage": {
          "type": "string",
          "enum": ["none", "menus", "partial", "full"],
          "default": "none"
        },
        "colorblind_modes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["protanopia", "deuteranopia", "tritanopia", "achromatopsia", "custom"]
          }
        },
        "text_scaling": {
          "type": "object",
          "properties": {
            "min": { "type": "number", "minimum": 0.5 },
            "max": { "type": "number", "maximum": 5.0 }
          }
        },
        "high_contrast_mode": {
          "type": "boolean",
          "default": false
        },
        "reduce_motion_option": {
          "type": "boolean",
          "default": false
        },
        "disable_screen_shake": {
          "type": "boolean",
          "default": false
        },
        "target_lock_indicator": {
          "type": "boolean",
          "default": false
        },
        "customizable_crosshair": {
          "type": "boolean",
          "default": false
        },
        "customizable_hud": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "audio_features": {
      "type": "object",
      "properties": {
        "subtitle_support": {
          "type": "boolean",
          "default": false
        },
        "subtitle_customization": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["size", "color", "background", "position", "speaker_labels"]
          }
        },
        "closed_captions": {
          "type": "boolean",
          "default": false
        },
        "visual_sound_indicators": {
          "type": "boolean",
          "default": false
        },
        "mono_audio_option": {
          "type": "boolean",
          "default": false
        },
        "separate_volume_controls": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["master", "music", "sfx", "voice", "ambient", "ui"]
          }
        },
        "tts_chat": {
          "type": "boolean",
          "default": false
        },
        "tts_ui": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "motor_features": {
      "type": "object",
      "properties": {
        "full_button_remapping": {
          "type": "boolean",
          "default": false
        },
        "remapping_scope": {
          "type": "string",
          "enum": ["none", "limited", "full"],
          "default": "none"
        },
        "hold_to_toggle_options": {
          "type": "boolean",
          "default": false
        },
        "adjustable_sensitivity": {
          "type": "boolean",
          "default": false
        },
        "adjustable_dead_zones": {
          "type": "boolean",
          "default": false
        },
        "aim_assist_levels": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["off", "low", "medium", "high", "maximum", "auto_aim"]
          }
        },
        "one_handed_modes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["left", "right"]
          }
        },
        "adaptive_controller_support": {
          "type": "boolean",
          "default": false
        },
        "switch_access": {
          "type": "boolean",
          "default": false
        },
        "keyboard_mouse_on_console": {
          "type": "boolean",
          "default": false
        },
        "touch_controls": {
          "type": "boolean",
          "default": false
        },
        "gyro_aiming": {
          "type": "boolean",
          "default": false
        },
        "copilot_mode": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "cognitive_features": {
      "type": "object",
      "properties": {
        "multiple_difficulty_levels": {
          "type": "boolean",
          "default": false
        },
        "difficulty_options": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["story", "easy", "normal", "hard", "custom"]
          }
        },
        "granular_difficulty": {
          "type": "boolean",
          "default": false,
          "description": "Separate combat/puzzle/time difficulty"
        },
        "skip_puzzles_option": {
          "type": "boolean",
          "default": false
        },
        "skip_combat_option": {
          "type": "boolean",
          "default": false
        },
        "objective_markers": {
          "type": "boolean",
          "default": false
        },
        "navigation_assistance": {
          "type": "boolean",
          "default": false
        },
        "tutorial_replay": {
          "type": "boolean",
          "default": false
        },
        "hint_system": {
          "type": "boolean",
          "default": false
        },
        "content_warnings": {
          "type": "boolean",
          "default": false
        },
        "content_filters": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["violence", "gore", "flashing", "jumpscares", "spiders"]
          }
        },
        "save_anywhere": {
          "type": "boolean",
          "default": false
        },
        "auto_save": {
          "type": "boolean",
          "default": false
        },
        "pause_cutscenes": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "input_support": {
      "type": "object",
      "properties": {
        "controllers": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "standard",
              "xbox_adaptive",
              "ps_access",
              "hori_flex",
              "switch_pro",
              "fight_stick",
              "racing_wheel",
              "flight_stick"
            ]
          }
        },
        "eye_tracking": {
          "type": "boolean",
          "default": false
        },
        "eye_tracking_provider": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["tobii", "irisbond", "eyeware"]
          }
        },
        "voice_commands": {
          "type": "boolean",
          "default": false
        },
        "switch_access": {
          "type": "boolean",
          "default": false
        },
        "head_tracking": {
          "type": "boolean",
          "default": false
        },
        "mouth_controller": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "accessibility_rating": {
      "$ref": "#/definitions/accessibility_rating"
    }
  },
  "required": ["game_id", "title", "version"],
  "definitions": {
    "accessibility_rating": {
      "type": "object",
      "properties": {
        "overall_score": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "visual_score": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "audio_score": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "motor_score": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "cognitive_score": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "certifications": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "wia_certified",
              "wia_gold",
              "wia_platinum",
              "able_gamers_approved",
              "can_i_play_that_reviewed",
              "dag_certified"
            ]
          }
        },
        "reviewed_by": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "last_review_date": {
          "type": "string",
          "format": "date"
        }
      }
    }
  }
}
