{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/game/audio-settings.schema.json",
  "title": "WIA Game Audio Accessibility Settings",
  "description": "Audio accessibility settings for gaming - 弘益人間",
  "type": "object",
  "properties": {
    "subtitles": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "style": {
          "type": "string",
          "enum": ["dialogue_only", "full_captions", "minimal", "verbose"],
          "default": "full_captions"
        },
        "speaker_identification": {
          "type": "boolean",
          "default": true
        },
        "speaker_colors": {
          "type": "boolean",
          "default": true
        },
        "sound_effects": {
          "type": "boolean",
          "default": true,
          "description": "Show sound effect descriptions [FOOTSTEPS]"
        },
        "music_indicators": {
          "type": "boolean",
          "default": true,
          "description": "Show music descriptions ♪ Tense music playing ♪"
        },
        "directional_indicators": {
          "type": "boolean",
          "default": true,
          "description": "Show sound direction [LEFT] [BEHIND]"
        },
        "background_opacity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1.0,
          "default": 0.8
        },
        "text_size": {
          "type": "string",
          "enum": ["small", "medium", "large", "extra_large"],
          "default": "medium"
        },
        "text_color": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "default": "#FFFFFF"
        },
        "background_color": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "default": "#000000"
        },
        "position": {
          "type": "string",
          "enum": ["bottom", "top", "custom"],
          "default": "bottom"
        }
      }
    },
    "visual_sound_cues": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "style": {
          "type": "string",
          "enum": ["radar", "screen_edge", "compass", "icons"],
          "default": "screen_edge"
        },
        "position": {
          "type": "string",
          "enum": ["screen_edge", "minimap", "center", "custom"],
          "default": "screen_edge"
        },
        "size": {
          "type": "string",
          "enum": ["small", "medium", "large"],
          "default": "medium"
        },
        "opacity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1.0,
          "default": 0.8
        },
        "categories": {
          "type": "object",
          "properties": {
            "footsteps": { "type": "boolean", "default": true },
            "gunshots": { "type": "boolean", "default": true },
            "explosions": { "type": "boolean", "default": true },
            "voices": { "type": "boolean", "default": true },
            "vehicles": { "type": "boolean", "default": true },
            "environmental": { "type": "boolean", "default": true },
            "alerts": { "type": "boolean", "default": true },
            "music": { "type": "boolean", "default": false }
          }
        }
      }
    },
    "haptic_audio": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "intensity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1.0,
          "default": 0.5
        },
        "directional": {
          "type": "boolean",
          "default": true,
          "description": "Use haptics to indicate sound direction"
        },
        "bass_to_haptic": {
          "type": "boolean",
          "default": true,
          "description": "Convert bass frequencies to vibration"
        }
      }
    },
    "mono_audio": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "balance": {
          "type": "number",
          "minimum": -1.0,
          "maximum": 1.0,
          "default": 0,
          "description": "-1.0 = left only, 0 = center, 1.0 = right only"
        }
      }
    },
    "volume_controls": {
      "type": "object",
      "properties": {
        "master": {
          "type": "number",
          "minimum": 0,
          "maximum": 1.0,
          "default": 1.0
        },
        "music": {
          "type": "number",
          "minimum": 0,
          "maximum": 1.0,
          "default": 0.7
        },
        "sfx": {
          "type": "number",
          "minimum": 0,
          "maximum": 1.0,
          "default": 1.0
        },
        "voice": {
          "type": "number",
          "minimum": 0,
          "maximum": 1.0,
          "default": 1.0
        },
        "ambient": {
          "type": "number",
          "minimum": 0,
          "maximum": 1.0,
          "default": 0.5
        },
        "ui": {
          "type": "number",
          "minimum": 0,
          "maximum": 1.0,
          "default": 0.8
        }
      }
    },
    "tts_for_chat": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "voice": {
          "type": "string",
          "description": "TTS voice identifier"
        },
        "speed": {
          "type": "number",
          "minimum": 0.5,
          "maximum": 2.0,
          "default": 1.0
        },
        "read_player_names": {
          "type": "boolean",
          "default": true
        },
        "filter_spam": {
          "type": "boolean",
          "default": true
        }
      }
    }
  }
}
