{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/game/visual-settings.schema.json",
  "title": "WIA Game Visual Accessibility Settings",
  "description": "Visual accessibility settings for gaming - 弘益人間",
  "type": "object",
  "properties": {
    "screen_reader": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "voice": {
          "type": "string",
          "description": "TTS voice identifier (e.g., ko-KR-female)"
        },
        "speed": {
          "type": "number",
          "minimum": 0.5,
          "maximum": 3.0,
          "default": 1.0
        },
        "verbosity": {
          "type": "string",
          "enum": ["minimal", "normal", "high", "verbose"],
          "default": "normal"
        },
        "read_button_prompts": {
          "type": "boolean",
          "default": true
        },
        "read_menu_items": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "magnification": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "level": {
          "type": "number",
          "minimum": 1.0,
          "maximum": 10.0,
          "default": 2.0
        },
        "follow_focus": {
          "type": "boolean",
          "default": true
        },
        "smooth_scrolling": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "color_settings": {
      "type": "object",
      "properties": {
        "colorblind_mode": {
          "type": "string",
          "enum": ["none", "protanopia", "deuteranopia", "tritanopia", "achromatopsia", "custom"],
          "default": "none"
        },
        "high_contrast": {
          "type": "boolean",
          "default": false
        },
        "contrast_level": {
          "type": "number",
          "minimum": 1.0,
          "maximum": 3.0,
          "default": 1.0
        },
        "custom_color_mapping": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$"
          },
          "description": "Custom color replacements (original -> replacement)"
        }
      }
    },
    "text_settings": {
      "type": "object",
      "properties": {
        "size_multiplier": {
          "type": "number",
          "minimum": 0.5,
          "maximum": 3.0,
          "default": 1.0
        },
        "font_weight": {
          "type": "string",
          "enum": ["normal", "bold", "extra_bold"],
          "default": "normal"
        },
        "dyslexia_friendly_font": {
          "type": "boolean",
          "default": false
        },
        "letter_spacing": {
          "type": "number",
          "minimum": 0,
          "maximum": 2.0,
          "default": 0
        },
        "line_height": {
          "type": "number",
          "minimum": 1.0,
          "maximum": 2.5,
          "default": 1.4
        }
      }
    },
    "ui_settings": {
      "type": "object",
      "properties": {
        "reduce_motion": {
          "type": "boolean",
          "default": false
        },
        "reduce_transparency": {
          "type": "boolean",
          "default": false
        },
        "highlight_interactive": {
          "type": "boolean",
          "default": false
        },
        "focus_indicator_size": {
          "type": "string",
          "enum": ["small", "medium", "large", "extra_large"],
          "default": "medium"
        },
        "cursor_size": {
          "type": "string",
          "enum": ["small", "medium", "large", "extra_large"],
          "default": "medium"
        },
        "disable_parallax": {
          "type": "boolean",
          "default": false
        },
        "disable_screen_shake": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "target_indicators": {
      "type": "object",
      "properties": {
        "enemy_highlight": {
          "type": "boolean",
          "default": false
        },
        "enemy_highlight_color": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "default": "#FF0000"
        },
        "ally_highlight": {
          "type": "boolean",
          "default": false
        },
        "ally_highlight_color": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "default": "#00FF00"
        },
        "item_highlight": {
          "type": "boolean",
          "default": false
        },
        "item_highlight_color": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "default": "#FFFF00"
        },
        "path_highlight": {
          "type": "boolean",
          "default": false
        },
        "interactable_highlight": {
          "type": "boolean",
          "default": false
        }
      }
    }
  }
}
