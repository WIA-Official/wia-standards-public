{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/game/player-profile.schema.json",
  "title": "WIA Game Player Accessibility Profile",
  "description": "Complete player accessibility profile for gaming - 弘益人間",
  "type": "object",
  "properties": {
    "profile_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique profile identifier"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version (semver)"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Profile creation timestamp (ISO8601)"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp (ISO8601)"
    },
    "player_info": {
      "type": "object",
      "properties": {
        "display_name": {
          "type": "string",
          "maxLength": 50
        },
        "language": {
          "type": "string",
          "pattern": "^[a-z]{2}-[A-Z]{2}$",
          "default": "en-US"
        },
        "region": {
          "type": "string"
        }
      }
    },
    "disability_context": {
      "$ref": "#/definitions/disability_context"
    },
    "visual_settings": {
      "$ref": "visual-settings.schema.json"
    },
    "audio_settings": {
      "$ref": "audio-settings.schema.json"
    },
    "motor_settings": {
      "$ref": "motor-settings.schema.json"
    },
    "cognitive_settings": {
      "$ref": "cognitive-settings.schema.json"
    },
    "presets": {
      "type": "array",
      "items": {
        "$ref": "preset.schema.json"
      }
    }
  },
  "required": ["profile_id", "version"],
  "definitions": {
    "disability_context": {
      "type": "object",
      "properties": {
        "primary_disabilities": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "blind",
              "low_vision",
              "colorblind",
              "deaf",
              "hard_of_hearing",
              "limited_mobility",
              "fine_motor_difficulty",
              "one_handed",
              "cognitive",
              "adhd",
              "dyslexia",
              "epilepsy",
              "chronic_pain",
              "fatigue",
              "anxiety",
              "other"
            ]
          },
          "uniqueItems": true
        },
        "assistive_technologies": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "screen_reader",
              "magnifier",
              "eye_tracker",
              "switch_access",
              "voice_control",
              "head_tracking",
              "mouth_controller",
              "foot_pedals",
              "braille_display",
              "cochlear_implant",
              "hearing_aid",
              "wheelchair",
              "other"
            ]
          },
          "uniqueItems": true
        },
        "input_devices": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "standard_controller",
              "xbox_adaptive_controller",
              "ps_access_controller",
              "hori_flex",
              "quadstick",
              "eye_tracker",
              "switch_array",
              "keyboard_mouse",
              "touch_screen",
              "custom"
            ]
          },
          "uniqueItems": true
        },
        "notes": {
          "type": "string",
          "maxLength": 500,
          "description": "Optional personal notes about accessibility needs"
        }
      }
    }
  }
}
