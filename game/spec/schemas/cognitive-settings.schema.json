{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/schemas/game/cognitive-settings.schema.json",
  "title": "WIA Game Cognitive Accessibility Settings",
  "description": "Cognitive accessibility settings for gaming - 弘益人間",
  "type": "object",
  "properties": {
    "difficulty": {
      "type": "object",
      "properties": {
        "combat_difficulty": {
          "type": "string",
          "enum": ["story", "easy", "normal", "hard", "custom"],
          "default": "normal"
        },
        "puzzle_difficulty": {
          "type": "string",
          "enum": ["story", "easy", "normal", "hard", "custom"],
          "default": "normal"
        },
        "time_pressure": {
          "type": "string",
          "enum": ["none", "relaxed", "normal", "intense"],
          "default": "normal",
          "description": "Time pressure for timed challenges"
        },
        "auto_complete_qte": {
          "type": "boolean",
          "default": false
        },
        "skip_minigames": {
          "type": "boolean",
          "default": false
        },
        "invincibility_mode": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "guidance": {
      "type": "object",
      "properties": {
        "objective_reminders": {
          "type": "boolean",
          "default": true
        },
        "reminder_frequency_sec": {
          "type": "integer",
          "minimum": 10,
          "maximum": 600,
          "default": 60
        },
        "waypoint_guidance": {
          "type": "boolean",
          "default": true
        },
        "path_visualization": {
          "type": "boolean",
          "default": false,
          "description": "Show visual path to objective"
        },
        "hint_system": {
          "type": "string",
          "enum": ["off", "on_request", "progressive", "automatic"],
          "default": "on_request"
        },
        "hint_delay_sec": {
          "type": "integer",
          "minimum": 0,
          "maximum": 300,
          "default": 30
        },
        "tutorial_repeat": {
          "type": "boolean",
          "default": true
        },
        "control_reminders": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "simplification": {
      "type": "object",
      "properties": {
        "simplified_controls": {
          "type": "boolean",
          "default": false
        },
        "reduced_button_combos": {
          "type": "boolean",
          "default": false
        },
        "reduced_hud": {
          "type": "boolean",
          "default": false
        },
        "minimal_ui": {
          "type": "boolean",
          "default": false
        },
        "reduced_visual_effects": {
          "type": "boolean",
          "default": false
        },
        "reduced_enemy_count": {
          "type": "boolean",
          "default": false
        },
        "simplified_inventory": {
          "type": "boolean",
          "default": false
        },
        "auto_sort_inventory": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "content_warnings": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "violence",
              "gore",
              "blood",
              "flashing",
              "jumpscares",
              "spiders",
              "heights",
              "drowning",
              "fire",
              "needles",
              "confined_spaces",
              "loud_sounds",
              "body_horror",
              "child_harm",
              "self_harm",
              "substance_abuse"
            ]
          }
        },
        "auto_skip": {
          "type": "boolean",
          "default": false,
          "description": "Automatically skip warned content"
        },
        "warning_duration_sec": {
          "type": "integer",
          "minimum": 1,
          "maximum": 30,
          "default": 5
        }
      }
    },
    "reading_aids": {
      "type": "object",
      "properties": {
        "text_to_speech_ui": {
          "type": "boolean",
          "default": false
        },
        "text_to_speech_lore": {
          "type": "boolean",
          "default": false
        },
        "reading_speed_control": {
          "type": "boolean",
          "default": true
        },
        "pause_during_text": {
          "type": "boolean",
          "default": true,
          "description": "Pause game while text is displayed"
        },
        "highlight_keywords": {
          "type": "boolean",
          "default": false
        },
        "simplified_language": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "memory_aids": {
      "type": "object",
      "properties": {
        "story_recap": {
          "type": "boolean",
          "default": true,
          "description": "Show story summary on load"
        },
        "quest_journal": {
          "type": "boolean",
          "default": true
        },
        "recent_actions_log": {
          "type": "boolean",
          "default": true
        },
        "character_bios": {
          "type": "boolean",
          "default": true
        },
        "relationship_tracker": {
          "type": "boolean",
          "default": false
        },
        "map_annotations": {
          "type": "boolean",
          "default": true
        },
        "visited_location_markers": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "focus_aids": {
      "type": "object",
      "properties": {
        "break_reminders": {
          "type": "boolean",
          "default": false
        },
        "break_interval_min": {
          "type": "integer",
          "minimum": 15,
          "maximum": 180,
          "default": 60
        },
        "pause_on_focus_loss": {
          "type": "boolean",
          "default": true
        },
        "reduce_background_motion": {
          "type": "boolean",
          "default": false
        },
        "mute_on_focus_loss": {
          "type": "boolean",
          "default": true
        }
      }
    }
  }
}
