{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wiastandards.com/schemas/wihp/wihp-mapping.schema.json",
  "title": "WIHP Mapping File",
  "description": "Schema for WIHP complete mapping file",
  "type": "object",
  "required": ["version", "symbols"],
  "properties": {
    "version": {
      "type": "string",
      "description": "WIHP specification version",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "examples": ["1.0.0"]
    },
    "generated": {
      "type": "string",
      "format": "date-time",
      "description": "Generation timestamp"
    },
    "coverage": {
      "type": "object",
      "description": "Coverage statistics",
      "properties": {
        "consonants": {
          "type": "object",
          "properties": {
            "covered": { "type": "integer" },
            "total": { "type": "integer" },
            "percentage": { "type": "number" }
          }
        },
        "vowels": {
          "type": "object",
          "properties": {
            "covered": { "type": "integer" },
            "total": { "type": "integer" },
            "percentage": { "type": "number" }
          }
        },
        "diacritics": {
          "type": "object",
          "properties": {
            "covered": { "type": "integer" },
            "total": { "type": "integer" },
            "percentage": { "type": "number" }
          }
        },
        "total": {
          "type": "object",
          "properties": {
            "covered": { "type": "integer" },
            "total": { "type": "integer" },
            "percentage": { "type": "number" }
          }
        }
      }
    },
    "symbols": {
      "type": "array",
      "description": "Array of symbol mappings",
      "items": {
        "$ref": "ipa-symbol.schema.json"
      }
    }
  },
  "examples": [
    {
      "version": "1.0.0",
      "generated": "2025-12-23T00:00:00Z",
      "coverage": {
        "consonants": { "covered": 69, "total": 69, "percentage": 100.0 },
        "vowels": { "covered": 28, "total": 28, "percentage": 100.0 },
        "diacritics": { "covered": 20, "total": 20, "percentage": 100.0 },
        "total": { "covered": 117, "total": 117, "percentage": 100.0 }
      },
      "symbols": []
    }
  ]
}
