{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wiastandards.com/schemas/wihp/ipa-symbol.schema.json",
  "title": "WIHP IPA Symbol",
  "description": "Schema for WIHP IPA to Hangul symbol mapping",
  "type": "object",
  "required": ["ipa", "hangul", "category"],
  "properties": {
    "ipa": {
      "type": "string",
      "description": "IPA character or sequence",
      "minLength": 1,
      "maxLength": 4
    },
    "code": {
      "type": "string",
      "description": "WIHP systematic code",
      "pattern": "^(PL[0-9]{2}-MN[0-9]{2}-AR[0-9]{2}|V[0-9]{2}-[A-Z]+-[A-Z]+-[A-Z]+|DIA-[A-Z]+|TONE-[A-Z]+)$"
    },
    "hangul": {
      "type": "string",
      "description": "Korean Hangul representation",
      "minLength": 1
    },
    "category": {
      "type": "string",
      "description": "Symbol category",
      "enum": ["consonant", "vowel", "diacritic", "suprasegmental"]
    },
    "subcategory": {
      "type": "string",
      "description": "Detailed subcategory",
      "examples": ["plosive", "nasal", "fricative", "close", "mid", "tone"]
    },
    "description_ko": {
      "type": "string",
      "description": "Description in Korean"
    },
    "description_en": {
      "type": "string",
      "description": "Description in English"
    },
    "examples": {
      "type": "array",
      "description": "Example languages using this sound",
      "items": {
        "type": "string"
      }
    },
    "unicode": {
      "type": "string",
      "description": "Unicode code point(s)",
      "pattern": "^U\\+[0-9A-F]{4,5}(\\s+U\\+[0-9A-F]{4,5})*$"
    }
  },
  "examples": [
    {
      "ipa": "p",
      "code": "PL01-MN01-AR01",
      "hangul": "ㅂ",
      "category": "consonant",
      "subcategory": "plosive",
      "description_ko": "무성 양순 파열음",
      "description_en": "voiceless bilabial plosive",
      "examples": ["Korean", "English", "Spanish"],
      "unicode": "U+0070"
    },
    {
      "ipa": "ə",
      "code": "V09-MID-CENTRAL",
      "hangul": "ㅓ",
      "category": "vowel",
      "subcategory": "mid",
      "description_ko": "중설 중모음 (슈와)",
      "description_en": "mid central vowel (schwa)",
      "examples": ["English", "German"],
      "unicode": "U+0259"
    }
  ]
}
