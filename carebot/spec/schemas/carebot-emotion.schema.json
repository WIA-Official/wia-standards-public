{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia-standards.org/carebot/emotion.schema.json",
  "title": "EmotionState",
  "description": "Emotion detection and analysis state",
  "type": "object",
  "required": ["timestamp", "recipient_id", "primary_emotion"],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "recipient_id": {
      "type": "string"
    },
    "device_id": {
      "type": "string"
    },
    "detection_method": {
      "type": "string",
      "enum": ["facial", "voice", "multimodal", "behavioral"]
    },
    "primary_emotion": {
      "type": "object",
      "required": ["category", "confidence"],
      "properties": {
        "category": {
          "type": "string",
          "enum": ["happy", "sad", "angry", "fearful", "surprised", "disgusted", "neutral", "content", "anxious", "confused", "lonely"]
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "intensity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "secondary_emotions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "category": { "type": "string" },
          "confidence": { "type": "number" }
        }
      }
    },
    "dimensional": {
      "type": "object",
      "properties": {
        "valence": { "type": "number", "minimum": -1, "maximum": 1 },
        "arousal": { "type": "number", "minimum": 0, "maximum": 1 },
        "dominance": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "facial_analysis": {
      "type": "object",
      "properties": {
        "detected": { "type": "boolean" },
        "landmarks_quality": { "type": "number" },
        "expressions": {
          "type": "object",
          "properties": {
            "smile": { "type": "number" },
            "eye_openness": { "type": "number" },
            "brow_raise": { "type": "number" }
          }
        }
      }
    },
    "voice_analysis": {
      "type": "object",
      "properties": {
        "detected": { "type": "boolean" },
        "pitch_mean_hz": { "type": "number" },
        "pitch_variation": { "type": "number" },
        "energy": { "type": "number" },
        "speech_rate": { "type": "string" }
      }
    },
    "behavioral_context": {
      "type": "object",
      "properties": {
        "activity": { "type": "string" },
        "social_context": { "type": "string" },
        "time_of_day": { "type": "string" }
      }
    },
    "trend": {
      "type": "object",
      "properties": {
        "vs_1_hour_ago": { "type": "string" },
        "vs_yesterday": { "type": "string" },
        "weekly_average": { "type": "string" }
      }
    }
  }
}
