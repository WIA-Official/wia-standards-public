{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia-standards.org/carebot/device.schema.json",
  "title": "CareBotDevice",
  "description": "WIA CareBot device specification",
  "type": "object",
  "required": ["device_id", "device_type", "capabilities"],
  "properties": {
    "device_id": {
      "type": "string",
      "pattern": "^carebot-[a-z0-9-]+$",
      "description": "Unique device identifier"
    },
    "device_name": {
      "type": "string",
      "description": "Friendly device name"
    },
    "device_type": {
      "type": "string",
      "enum": ["companion", "health_monitor", "daily_assistant", "cognitive_care", "emergency_response", "multipurpose"]
    },
    "manufacturer": {
      "type": "string"
    },
    "model": {
      "type": "string"
    },
    "firmware_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "capabilities": {
      "type": "object",
      "properties": {
        "voice_interaction": { "type": "boolean" },
        "emotion_recognition": { "type": "boolean" },
        "face_recognition": { "type": "boolean" },
        "vital_monitoring": { "type": "boolean" },
        "fall_detection": { "type": "boolean" },
        "mobility": { "type": "boolean" },
        "medication_dispensing": { "type": "boolean" }
      }
    },
    "sensors": {
      "type": "object",
      "properties": {
        "camera": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "resolution": { "type": "string" }
          }
        },
        "microphone": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "channels": { "type": "integer" }
          }
        },
        "speaker": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "power_watts": { "type": "number" }
          }
        },
        "temperature": { "type": "boolean" },
        "humidity": { "type": "boolean" },
        "motion": { "type": "boolean" },
        "pressure_mat": { "type": "boolean" }
      }
    },
    "ai_models": {
      "type": "object",
      "properties": {
        "speech_recognition": { "type": "string" },
        "emotion_detection": { "type": "string" },
        "face_recognition": { "type": "string" },
        "language_model": { "type": "string" }
      }
    },
    "network": {
      "type": "object",
      "properties": {
        "wifi": { "type": "boolean" },
        "bluetooth": { "type": "boolean" },
        "lte": { "type": "boolean" },
        "emergency_sim": { "type": "boolean" }
      }
    },
    "battery": {
      "type": "object",
      "properties": {
        "capacity_mah": { "type": "integer" },
        "current_percent": { "type": "integer", "minimum": 0, "maximum": 100 },
        "charging": { "type": "boolean" },
        "estimated_hours": { "type": "number" }
      }
    },
    "registered_at": {
      "type": "string",
      "format": "date-time"
    },
    "last_seen": {
      "type": "string",
      "format": "date-time"
    }
  }
}
