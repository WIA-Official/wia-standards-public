{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/nano/v1/molecular-assembler.schema.json",
  "title": "WIA Nano Molecular Assembler Data",
  "description": "Schema for molecular assembler system data",
  "type": "object",
  "required": ["operation", "target", "building_blocks", "assembly_state"],
  "properties": {
    "operation": {
      "type": "string",
      "enum": ["assembly", "disassembly", "modification"],
      "description": "Operation type"
    },
    "target": {
      "type": "object",
      "required": ["molecule_id", "formula"],
      "properties": {
        "molecule_id": {
          "type": "string",
          "description": "Unique molecule identifier"
        },
        "name": {
          "type": "string",
          "description": "Molecule name"
        },
        "formula": {
          "type": "string",
          "description": "Chemical formula"
        },
        "structure_type": {
          "type": "string",
          "enum": ["fullerene", "nanotube", "protein", "dna", "polymer", "crystal", "custom"]
        },
        "mass_da": {
          "type": "number",
          "minimum": 0,
          "description": "Molecular mass in Daltons"
        },
        "smiles": {
          "type": "string",
          "description": "SMILES notation"
        },
        "inchi": {
          "type": "string",
          "description": "InChI identifier"
        }
      }
    },
    "building_blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["element", "count"],
        "properties": {
          "element": {
            "type": "string",
            "pattern": "^[A-Z][a-z]?$",
            "description": "Chemical element symbol"
          },
          "count": {
            "type": "integer",
            "minimum": 1
          },
          "source": {
            "type": "string",
            "description": "Feedstock source"
          },
          "isotope": {
            "type": "integer",
            "description": "Isotope number"
          }
        }
      }
    },
    "assembly_state": {
      "type": "object",
      "required": ["status", "progress_percent"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["idle", "preparing", "in_progress", "paused", "completed", "failed", "aborted"]
        },
        "progress_percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "current_step": {
          "type": "integer",
          "minimum": 0
        },
        "total_steps": {
          "type": "integer",
          "minimum": 1
        },
        "bonds_formed": {
          "type": "integer",
          "minimum": 0
        },
        "bonds_target": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "workspace": {
      "type": "object",
      "properties": {
        "center": {
          "$ref": "wia-nano-base-v1.schema.json#/definitions/Position3D"
        },
        "radius_nm": {
          "type": "number",
          "minimum": 0
        },
        "atoms_count": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "energy": {
      "type": "object",
      "properties": {
        "total_kj_mol": {
          "type": "number",
          "description": "Total energy in kJ/mol"
        },
        "binding_kj_mol": {
          "type": "number",
          "description": "Binding energy in kJ/mol"
        },
        "barrier_kj_mol": {
          "type": "number",
          "minimum": 0,
          "description": "Activation barrier in kJ/mol"
        }
      }
    },
    "error": {
      "type": ["object", "null"],
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "step": { "type": "integer" }
      }
    }
  }
}
