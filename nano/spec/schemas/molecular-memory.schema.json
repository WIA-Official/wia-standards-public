{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/nano/v1/molecular-memory.schema.json",
  "title": "WIA Nano Molecular Memory Data",
  "description": "Schema for molecular memory (DNA storage, etc.) system data",
  "type": "object",
  "required": ["memory_type", "memory_id", "encoding"],
  "properties": {
    "memory_type": {
      "type": "string",
      "enum": ["dna_storage", "protein_memory", "polymer_memory", "molecular_switch", "custom"]
    },
    "memory_id": {
      "type": "string",
      "minLength": 1
    },
    "address": {
      "type": "object",
      "properties": {
        "pool_id": {
          "type": "integer",
          "minimum": 0
        },
        "strand_id": {
          "type": "integer",
          "minimum": 0
        },
        "offset_bp": {
          "type": "integer",
          "minimum": 0,
          "description": "Offset in base pairs"
        }
      }
    },
    "capacity": {
      "type": "object",
      "properties": {
        "total_bits": {
          "type": "integer",
          "minimum": 0
        },
        "used_bits": {
          "type": "integer",
          "minimum": 0
        },
        "available_bits": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "encoding": {
      "type": "object",
      "required": ["method"],
      "properties": {
        "method": {
          "type": "string",
          "enum": ["binary", "ternary", "goldman", "fountain", "custom"],
          "description": "Encoding method"
        },
        "bits_per_nucleotide": {
          "type": "number",
          "minimum": 0,
          "maximum": 2
        },
        "error_correction": {
          "type": "string",
          "enum": ["none", "reed_solomon", "ldpc", "fountain", "custom"]
        },
        "redundancy_factor": {
          "type": "number",
          "minimum": 1
        }
      }
    },
    "content": {
      "type": "object",
      "properties": {
        "data_type": {
          "type": "string",
          "enum": ["binary", "text", "image", "video", "mixed"]
        },
        "hash_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "fragment_index": {
          "type": "integer",
          "minimum": 0
        },
        "total_fragments": {
          "type": "integer",
          "minimum": 1
        },
        "sequence_preview": {
          "type": "string",
          "pattern": "^[ATCG]+$",
          "description": "DNA sequence preview (first N nucleotides)"
        }
      }
    },
    "physical": {
      "type": "object",
      "properties": {
        "strand_count": {
          "type": "integer",
          "minimum": 1
        },
        "strand_length_bp": {
          "type": "integer",
          "minimum": 1,
          "description": "Strand length in base pairs"
        },
        "gc_content_percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "storage_density_pb_per_g": {
          "type": "number",
          "minimum": 0,
          "description": "Storage density in petabytes per gram"
        },
        "melting_temp_c": {
          "type": "number",
          "description": "Melting temperature in Celsius"
        }
      }
    },
    "access": {
      "type": "object",
      "properties": {
        "read_latency_s": {
          "type": "number",
          "minimum": 0,
          "description": "Read latency in seconds"
        },
        "write_latency_s": {
          "type": "number",
          "minimum": 0,
          "description": "Write latency in seconds"
        },
        "read_cycles": {
          "type": "integer",
          "minimum": 0
        },
        "write_cycles": {
          "type": "integer",
          "minimum": 0
        },
        "max_read_cycles": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "status": {
      "type": "object",
      "properties": {
        "integrity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "degradation_percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "estimated_lifetime_years": {
          "type": "number",
          "minimum": 0
        }
      }
    }
  }
}
