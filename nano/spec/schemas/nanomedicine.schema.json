{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wia.live/nano/v1/nanomedicine.schema.json",
  "title": "WIA Nano Nanomedicine Data",
  "description": "Schema for nanomedicine (drug delivery system) data",
  "type": "object",
  "required": ["carrier_type", "carrier_id", "payload"],
  "properties": {
    "carrier_type": {
      "type": "string",
      "enum": ["liposome", "solid_lipid", "polymeric", "dendrimer", "micelle", "nanoparticle", "viral_vector", "custom"]
    },
    "carrier_id": {
      "type": "string",
      "minLength": 1
    },
    "dimensions": {
      "type": "object",
      "properties": {
        "diameter_nm": {
          "type": "number",
          "minimum": 0
        },
        "wall_thickness_nm": {
          "type": "number",
          "minimum": 0
        },
        "volume_nm3": {
          "type": "number",
          "minimum": 0
        },
        "surface_area_nm2": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "payload": {
      "type": "object",
      "required": ["drug_name"],
      "properties": {
        "drug_name": {
          "type": "string"
        },
        "drug_id": {
          "type": "string"
        },
        "drug_class": {
          "type": "string",
          "enum": ["chemotherapy", "antibiotic", "antiviral", "immunotherapy", "gene_therapy", "rna", "protein", "custom"]
        },
        "mass_pg": {
          "type": "number",
          "minimum": 0,
          "description": "Drug mass in picograms"
        },
        "loading_efficiency_percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "molecules_count": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "targeting": {
      "type": "object",
      "properties": {
        "mechanism": {
          "type": "string",
          "enum": ["passive", "antibody", "peptide", "aptamer", "magnetic", "custom"]
        },
        "target_receptor": {
          "type": "string"
        },
        "target_tissue": {
          "type": "string"
        },
        "ligand": {
          "type": "string"
        },
        "binding_affinity_nm": {
          "type": "number",
          "minimum": 0,
          "description": "Binding affinity (Kd) in nM"
        },
        "specificity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "release": {
      "type": "object",
      "properties": {
        "trigger_type": {
          "type": "string",
          "enum": ["ph", "temperature", "enzyme", "magnetic", "ultrasound", "light", "redox", "time", "custom"]
        },
        "trigger_threshold": {
          "type": "number",
          "description": "Trigger threshold value (pH, temp, etc.)"
        },
        "release_rate_percent_per_hour": {
          "type": "number",
          "minimum": 0
        },
        "released_percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "release_profile": {
          "type": "string",
          "enum": ["burst", "sustained", "pulsatile", "triggered"]
        }
      }
    },
    "location": {
      "type": "object",
      "properties": {
        "tissue": {
          "type": "string"
        },
        "organ": {
          "type": "string"
        },
        "position_um": {
          "type": "object",
          "properties": {
            "x": { "type": "number" },
            "y": { "type": "number" },
            "z": { "type": "number" }
          }
        },
        "in_target_zone": {
          "type": "boolean"
        },
        "distance_to_target_um": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "pharmacokinetics": {
      "type": "object",
      "properties": {
        "circulation_half_life_h": {
          "type": "number",
          "minimum": 0
        },
        "biodistribution": {
          "type": "object",
          "additionalProperties": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          }
        },
        "clearance_rate": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "status": {
      "type": "object",
      "properties": {
        "structural_integrity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "time_since_injection_h": {
          "type": "number",
          "minimum": 0
        },
        "estimated_remaining_h": {
          "type": "number",
          "minimum": 0
        },
        "phase": {
          "type": "string",
          "enum": ["circulation", "extravasation", "targeting", "internalization", "release", "degradation"]
        }
      }
    }
  }
}
