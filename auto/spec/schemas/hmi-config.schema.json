{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wia.org/auto/schemas/hmi-config.schema.json",
  "title": "WIA Autonomous Vehicle HMI Configuration",
  "description": "Human-Machine Interface configuration for accessible interaction",
  "type": "object",
  "required": ["config_id", "version"],
  "properties": {
    "config_id": {
      "type": "string",
      "format": "uuid"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "visual": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "brightness": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "default": 70
        },
        "contrast": {
          "type": "string",
          "enum": ["normal", "high"],
          "default": "normal"
        },
        "text_size": {
          "type": "string",
          "enum": ["small", "medium", "large", "extra_large"],
          "default": "medium"
        },
        "color_scheme": {
          "type": "string",
          "enum": ["default", "high_contrast", "dark", "light"],
          "default": "default"
        },
        "animations": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "audio": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "volume": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "default": 70
        },
        "tts_voice": { "type": "string" },
        "tts_speed": {
          "type": "string",
          "enum": ["slow", "normal", "fast"],
          "default": "normal"
        },
        "chimes_enabled": { "type": "boolean", "default": true },
        "speech_recognition": { "type": "boolean", "default": true },
        "language": {
          "type": "string",
          "pattern": "^[a-z]{2}$",
          "default": "en"
        }
      }
    },
    "haptic": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "intensity": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "default": 50
        },
        "patterns": {
          "type": "object",
          "properties": {
            "notification": { "type": "boolean", "default": true },
            "navigation": { "type": "boolean", "default": true },
            "warning": { "type": "boolean", "default": true },
            "confirmation": { "type": "boolean", "default": true }
          }
        }
      }
    },
    "physical": {
      "type": "object",
      "properties": {
        "braille_output": { "type": "boolean", "default": false },
        "button_audio_feedback": { "type": "boolean", "default": true },
        "button_haptic_feedback": { "type": "boolean", "default": true }
      }
    }
  }
}
