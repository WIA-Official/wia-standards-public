{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wia.org/auto/schemas/emergency-event.schema.json",
  "title": "WIA Autonomous Vehicle Emergency Event",
  "description": "Emergency event data for accessible autonomous vehicles",
  "type": "object",
  "required": ["event_id", "version", "timestamp", "event_type", "severity", "location"],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "vehicle_id": {
      "type": "string",
      "format": "uuid"
    },
    "trip_id": {
      "type": ["string", "null"],
      "format": "uuid"
    },
    "event_type": {
      "type": "string",
      "enum": ["panic_button", "pull_over", "collision", "medical", "fire", "other"]
    },
    "severity": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"]
    },
    "location": {
      "type": "object",
      "required": ["latitude", "longitude"],
      "properties": {
        "latitude": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        },
        "address": { "type": "string" }
      }
    },
    "passenger": {
      "type": "object",
      "properties": {
        "profile_id": {
          "type": "string",
          "format": "uuid"
        },
        "disabilities": {
          "type": "array",
          "items": { "type": "string" }
        },
        "emergency_contact": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "phone": { "type": "string" }
          }
        }
      }
    },
    "vehicle_status": {
      "type": "object",
      "properties": {
        "speed_kmh": {
          "type": "number",
          "minimum": 0
        },
        "is_moving": { "type": "boolean" },
        "doors_locked": { "type": "boolean" },
        "securement_status": {
          "type": "string",
          "enum": ["secured", "unsecured"]
        }
      }
    },
    "response": {
      "type": "object",
      "properties": {
        "auto_pulled_over": { "type": "boolean" },
        "support_contacted": { "type": "boolean" },
        "emergency_services_called": { "type": "boolean" },
        "eta_support_minutes": {
          "type": ["number", "null"],
          "minimum": 0
        }
      }
    }
  }
}
