{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wia.org/auto/schemas/trip-response.schema.json",
  "title": "WIA Autonomous Vehicle Trip Response",
  "description": "Response to an accessible autonomous vehicle trip request",
  "type": "object",
  "required": ["response_id", "request_id", "version", "timestamp", "status"],
  "properties": {
    "response_id": {
      "type": "string",
      "format": "uuid"
    },
    "request_id": {
      "type": "string",
      "format": "uuid"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["confirmed", "no_vehicle", "pending"]
    },
    "vehicle": {
      "type": "object",
      "properties": {
        "vehicle_id": {
          "type": "string",
          "format": "uuid"
        },
        "eta_minutes": {
          "type": "number",
          "minimum": 0
        },
        "distance_km": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "accessibility_match": {
      "type": "object",
      "properties": {
        "wheelchair_accessible": { "type": "boolean" },
        "ramp_available": { "type": "boolean" },
        "lift_available": { "type": "boolean" },
        "service_animal_ok": { "type": "boolean" },
        "modalities_supported": {
          "type": "array",
          "items": { "type": "string" }
        },
        "match_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "wayfinding": {
      "type": "object",
      "properties": {
        "pickup_instructions": { "type": "string" },
        "audio_guidance_available": { "type": "boolean" },
        "find_vehicle_features": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["horn", "lights", "melody"]
          }
        },
        "braille_identifier": { "type": "string" }
      }
    }
  }
}
