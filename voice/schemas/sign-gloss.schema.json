{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wia-standards.org/voice/schemas/sign-gloss.schema.json",
  "title": "SignGlossSequence",
  "description": "Sign language gloss sequence for translation output",
  "type": "object",
  "required": ["transcription_id", "gloss_id", "timestamp", "sign_language", "glosses", "sentence_type", "confidence", "translation_model", "processing_time_ms"],
  "properties": {
    "transcription_id": {
      "type": "string",
      "description": "Reference to source transcription"
    },
    "gloss_id": {
      "type": "string",
      "description": "Unique identifier for this gloss sequence"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "sign_language": {
      "$ref": "#/$defs/SignLanguageCode"
    },
    "glosses": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/SignGloss"
      }
    },
    "sentence_type": {
      "type": "string",
      "enum": ["declarative", "interrogative", "imperative", "exclamatory"]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "translation_model": {
      "type": "string"
    },
    "processing_time_ms": {
      "type": "number",
      "minimum": 0
    }
  },
  "$defs": {
    "SignLanguageCode": {
      "type": "string",
      "enum": ["ASL", "BSL", "LSF", "DGS", "JSL", "KSL", "CSL", "Auslan", "NZSL"],
      "description": "Sign language code"
    },
    "SignGloss": {
      "type": "object",
      "required": ["gloss", "start_ms", "end_ms", "duration_ms", "sign_type", "confidence"],
      "properties": {
        "gloss": {
          "type": "string",
          "description": "Gloss identifier (e.g., HELLO, THANK-YOU)"
        },
        "start_ms": {
          "type": "number",
          "minimum": 0
        },
        "end_ms": {
          "type": "number",
          "minimum": 0
        },
        "duration_ms": {
          "type": "number",
          "minimum": 0
        },
        "sign_type": {
          "type": "string",
          "enum": ["lexical", "fingerspell", "classifier", "depicting", "pointing", "number"]
        },
        "hamnosys": {
          "type": "string",
          "description": "HamNoSys notation"
        },
        "sigml": {
          "type": "string",
          "description": "SiGML XML notation"
        },
        "signwriting": {
          "type": "string",
          "description": "SignWriting FSW notation"
        },
        "modifiers": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/GlossModifier"
          }
        },
        "spatial_ref": {
          "$ref": "#/$defs/SpatialReference"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "GlossModifier": {
      "type": "object",
      "required": ["type", "value"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["intensity", "speed", "repetition", "negation", "question", "aspect"]
        },
        "value": {
          "oneOf": [
            { "type": "string" },
            { "type": "number" }
          ]
        }
      }
    },
    "SpatialReference": {
      "type": "object",
      "required": ["x", "y", "z"],
      "properties": {
        "x": {
          "type": "number",
          "minimum": -1,
          "maximum": 1,
          "description": "Left to right (-1 to 1)"
        },
        "y": {
          "type": "number",
          "minimum": -1,
          "maximum": 1,
          "description": "Down to up (-1 to 1)"
        },
        "z": {
          "type": "number",
          "minimum": -1,
          "maximum": 1,
          "description": "Back to front (-1 to 1)"
        }
      }
    }
  }
}
