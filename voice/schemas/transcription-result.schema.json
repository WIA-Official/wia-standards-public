{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wia-standards.org/voice/schemas/transcription-result.schema.json",
  "title": "TranscriptionResult",
  "description": "Speech recognition (ASR) result",
  "type": "object",
  "required": ["audio_id", "transcription_id", "timestamp", "language", "confidence", "text", "words", "model", "processing_time_ms"],
  "properties": {
    "audio_id": {
      "type": "string",
      "description": "Reference to source audio"
    },
    "transcription_id": {
      "type": "string",
      "description": "Unique identifier for this transcription"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of transcription"
    },
    "language": {
      "type": "string",
      "pattern": "^[a-z]{2}$",
      "description": "ISO 639-1 detected language code"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Overall transcription confidence"
    },
    "text": {
      "type": "string",
      "description": "Full transcribed text"
    },
    "words": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/TranscribedWord"
      },
      "description": "Word-level transcription details"
    },
    "alternatives": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/TranscriptionAlternative"
      },
      "description": "Alternative transcription hypotheses"
    },
    "model": {
      "type": "string",
      "description": "ASR model used"
    },
    "processing_time_ms": {
      "type": "number",
      "minimum": 0,
      "description": "Processing time in milliseconds"
    }
  },
  "$defs": {
    "TranscribedWord": {
      "type": "object",
      "required": ["word", "start_ms", "end_ms", "confidence"],
      "properties": {
        "word": {
          "type": "string"
        },
        "start_ms": {
          "type": "number",
          "minimum": 0
        },
        "end_ms": {
          "type": "number",
          "minimum": 0
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "pos": {
          "type": "string",
          "enum": ["noun", "verb", "adjective", "adverb", "pronoun", "preposition", "conjunction", "interjection", "determiner", "particle"],
          "description": "Part of speech"
        },
        "lemma": {
          "type": "string",
          "description": "Base form of the word"
        }
      }
    },
    "TranscriptionAlternative": {
      "type": "object",
      "required": ["text", "confidence"],
      "properties": {
        "text": {
          "type": "string"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  }
}
