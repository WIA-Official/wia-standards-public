{
  "$schema": "../schemas/rehab-program.schema.json",
  "programId": "wia-exo-sci-beginner-v1.0",
  "version": "1.0.0",
  "metadata": {
    "name": "SCI Beginner Gait Training Program",
    "nameKorean": "척수손상 초급 보행훈련 프로그램",
    "description": "A comprehensive 12-week gait training program for individuals with spinal cord injury who are new to exoskeleton-assisted walking. Focuses on building standing tolerance, weight shifting, and progressing to overground ambulation.",
    "targetCondition": "SCI",
    "difficulty": "beginner",
    "totalWeeks": 12,
    "sessionsPerWeek": 3,
    "sessionDuration": 60,
    "createdBy": "WIA Clinical Team",
    "createdAt": "2025-12-14T00:00:00Z",
    "evidenceLevel": "level_2",
    "references": [
      "Scivoletto G, et al. Spinal Cord. 2015;53(8):621-627.",
      "Field-Fote EC. Phys Ther. 2001;81(2):719-735.",
      "Benson I, et al. Arch Phys Med Rehabil. 2016;97(7):1165-1173."
    ]
  },
  "targetProfile": {
    "condition": "SCI",
    "severityRange": ["moderate", "complete"],
    "physical": {
      "ageRange": [18, 65],
      "heightRange": [150, 190],
      "weightRange": [40, 100],
      "bmiRange": [18.5, 35]
    },
    "functional": {
      "minStandingBalance": 0,
      "minTrunkControl": "minimal",
      "minUpperExtremityFunction": true,
      "minCognitive": "follows_simple"
    },
    "prerequisites": [
      "Medical clearance from physician",
      "No active pressure ulcers",
      "No severe osteoporosis",
      "Hip and knee ROM > 90 degrees",
      "Adequate upper body strength for assistive device use"
    ]
  },
  "phases": [
    {
      "phaseId": "phase-1-standing",
      "name": "Standing Tolerance",
      "nameKorean": "기립 적응기",
      "description": "Build cardiovascular tolerance and joint adaptation to upright posture",
      "weekStart": 1,
      "weekEnd": 3,
      "goals": [
        {
          "goalId": "goal-1-1",
          "description": "Stand continuously for 30 minutes with support",
          "descriptionKorean": "30분간 지속 기립 유지",
          "targetMetric": "STANDING_TIME",
          "targetValue": 30,
          "unit": "minutes",
          "priority": "primary"
        },
        {
          "goalId": "goal-1-2",
          "description": "Tolerate upright position without orthostatic symptoms",
          "descriptionKorean": "기립성 저혈압 증상 없이 기립 유지",
          "targetMetric": "STANDING_TIME",
          "targetValue": 20,
          "unit": "minutes",
          "priority": "secondary"
        }
      ],
      "parameters": {
        "assistanceRange": [90, 100],
        "maxWalkingSpeed": 0,
        "maxContinuousWalking": 0,
        "minRestBetweenActivities": 120,
        "weeklyAssistanceReduction": 0,
        "adaptiveAdjustment": false
      },
      "entryCriteria": [
        {
          "metric": "STANDING_TIME",
          "value": 0,
          "comparison": "greater_than"
        }
      ],
      "exitCriteria": [
        {
          "metric": "STANDING_TIME",
          "value": 25,
          "comparison": "greater_than"
        }
      ],
      "sessions": [
        {
          "sessionId": "phase1-session-template",
          "sessionNumber": 1,
          "title": "Standing Tolerance Session",
          "titleKorean": "기립 적응 세션",
          "description": "Progressive standing training with vital sign monitoring",
          "totalDuration": 60,
          "warmUp": {
            "duration": 10,
            "activities": [
              {
                "type": "passive_rom",
                "duration": 5,
                "description": "Passive range of motion for lower extremities"
              },
              {
                "type": "stretching",
                "duration": 5,
                "description": "Hamstring and calf stretching"
              }
            ]
          },
          "mainActivities": [
            {
              "activityId": "standing-1",
              "type": "STANDING",
              "duration": 35,
              "order": 1,
              "assistanceLevel": 100,
              "assistanceMode": "PASSIVE",
              "parameters": {
                "standing": {
                  "targetDuration": 2100,
                  "weightDistribution": [50, 50],
                  "armSupport": "full"
                }
              },
              "targetMetrics": {
                "primary": [
                  {
                    "metric": "STANDING_TIME",
                    "target": 30,
                    "unit": "minutes",
                    "tolerance": 20
                  }
                ],
                "secondary": [],
                "safetyLimits": [
                  {
                    "metric": "HEART_RATE",
                    "maxValue": 140,
                    "unit": "bpm"
                  }
                ]
              },
              "instructions": [
                {
                  "step": 1,
                  "type": "PREPARATION",
                  "content": "Secure all straps and check alignment",
                  "contentKorean": "모든 스트랩 고정 및 정렬 확인",
                  "timing": "before"
                },
                {
                  "step": 2,
                  "type": "EXECUTION",
                  "content": "Slowly transition to standing position",
                  "contentKorean": "천천히 기립 자세로 전환",
                  "verbal": "Stand up slowly, keep looking forward",
                  "timing": "during"
                },
                {
                  "step": 3,
                  "type": "SAFETY",
                  "content": "Monitor for dizziness or lightheadedness",
                  "contentKorean": "어지럼증 모니터링",
                  "timing": "during"
                }
              ],
              "modifications": [
                {
                  "modificationId": "mod-1",
                  "condition": {
                    "trigger": "HEART_RATE",
                    "threshold": 130,
                    "comparison": "greater_than"
                  },
                  "action": {
                    "type": "ADD_REST",
                    "parameter": "duration",
                    "adjustment": 60
                  },
                  "description": "Add rest if heart rate exceeds 130 bpm",
                  "descriptionKorean": "심박수 130bpm 초과 시 휴식 추가"
                }
              ]
            }
          ],
          "coolDown": {
            "duration": 10,
            "activities": [
              {
                "type": "gentle_movement",
                "duration": 5,
                "description": "Gentle seated movements"
              },
              {
                "type": "breathing",
                "duration": 5,
                "description": "Deep breathing exercises"
              }
            ]
          },
          "restPeriods": [
            {
              "afterActivity": 0,
              "duration": 300,
              "type": "sitting",
              "hydration": true
            }
          ],
          "therapistNotes": "Monitor blood pressure every 5 minutes during initial sessions. Gradually increase standing duration as tolerated.",
          "expectedOutcomes": [
            {
              "metric": "STANDING_TIME",
              "expectedValue": 10,
              "unit": "minutes",
              "week": 1
            }
          ]
        }
      ]
    },
    {
      "phaseId": "phase-2-weight-shifting",
      "name": "Weight Shifting",
      "nameKorean": "체중 이동기",
      "description": "Develop controlled weight shifting as prerequisite for stepping",
      "weekStart": 4,
      "weekEnd": 6,
      "goals": [
        {
          "goalId": "goal-2-1",
          "description": "Achieve controlled 60:40 lateral weight shift",
          "descriptionKorean": "좌우 60:40 체중 이동 달성",
          "targetMetric": "BALANCE_SCORE",
          "targetValue": 60,
          "unit": "percent",
          "priority": "primary"
        },
        {
          "goalId": "goal-2-2",
          "description": "Maintain balance during weight shifts",
          "descriptionKorean": "체중 이동 시 균형 유지",
          "targetMetric": "BALANCE_SCORE",
          "targetValue": 70,
          "unit": "score",
          "priority": "secondary"
        }
      ],
      "parameters": {
        "assistanceRange": [80, 95],
        "maxWalkingSpeed": 0,
        "maxContinuousWalking": 0,
        "minRestBetweenActivities": 90,
        "weeklyAssistanceReduction": 2,
        "adaptiveAdjustment": true
      },
      "entryCriteria": [
        {
          "metric": "STANDING_TIME",
          "value": 25,
          "comparison": "greater_than"
        }
      ],
      "exitCriteria": [
        {
          "metric": "BALANCE_SCORE",
          "value": 60,
          "comparison": "greater_than"
        }
      ],
      "sessions": []
    },
    {
      "phaseId": "phase-3-treadmill",
      "name": "Treadmill Walking",
      "nameKorean": "트레드밀 보행기",
      "description": "Introduce reciprocal gait pattern with body weight support on treadmill",
      "weekStart": 7,
      "weekEnd": 9,
      "goals": [
        {
          "goalId": "goal-3-1",
          "description": "Walk continuously for 15 minutes on treadmill",
          "descriptionKorean": "트레드밀에서 15분 연속 보행",
          "targetMetric": "WALKING_TIME",
          "targetValue": 15,
          "unit": "minutes",
          "priority": "primary"
        },
        {
          "goalId": "goal-3-2",
          "description": "Achieve walking speed of 0.3 m/s",
          "descriptionKorean": "보행 속도 0.3m/s 달성",
          "targetMetric": "WALKING_SPEED",
          "targetValue": 0.3,
          "unit": "m/s",
          "priority": "primary"
        }
      ],
      "parameters": {
        "assistanceRange": [60, 85],
        "maxWalkingSpeed": 0.4,
        "maxContinuousWalking": 20,
        "minRestBetweenActivities": 60,
        "weeklyAssistanceReduction": 5,
        "adaptiveAdjustment": true
      },
      "entryCriteria": [
        {
          "metric": "BALANCE_SCORE",
          "value": 55,
          "comparison": "greater_than"
        }
      ],
      "exitCriteria": [
        {
          "metric": "WALKING_TIME",
          "value": 12,
          "comparison": "greater_than"
        },
        {
          "metric": "WALKING_SPEED",
          "value": 0.25,
          "comparison": "greater_than"
        }
      ],
      "sessions": []
    },
    {
      "phaseId": "phase-4-overground",
      "name": "Overground Walking",
      "nameKorean": "지상 보행기",
      "description": "Transfer skills to overground walking with progressive distance",
      "weekStart": 10,
      "weekEnd": 12,
      "goals": [
        {
          "goalId": "goal-4-1",
          "description": "Walk 100 meters overground continuously",
          "descriptionKorean": "지상에서 100m 연속 보행",
          "targetMetric": "WALKING_DISTANCE",
          "targetValue": 100,
          "unit": "meters",
          "priority": "primary"
        },
        {
          "goalId": "goal-4-2",
          "description": "Achieve independence score of 60",
          "descriptionKorean": "독립성 점수 60 달성",
          "targetMetric": "INDEPENDENCE_SCORE",
          "targetValue": 60,
          "unit": "score",
          "priority": "secondary"
        }
      ],
      "parameters": {
        "assistanceRange": [40, 70],
        "maxWalkingSpeed": 0.5,
        "maxContinuousWalking": 30,
        "minRestBetweenActivities": 45,
        "weeklyAssistanceReduction": 5,
        "adaptiveAdjustment": true
      },
      "entryCriteria": [
        {
          "metric": "WALKING_TIME",
          "value": 10,
          "comparison": "greater_than"
        }
      ],
      "exitCriteria": [
        {
          "metric": "WALKING_DISTANCE",
          "value": 80,
          "comparison": "greater_than"
        }
      ],
      "sessions": []
    }
  ],
  "progressionCriteria": {
    "automatic": {
      "criteria": [
        {
          "criterionId": "crit-1",
          "name": "Standing Duration",
          "nameKorean": "기립 지속시간",
          "metric": "STANDING_TIME",
          "target": 25,
          "unit": "minutes",
          "comparison": "greater_than",
          "weight": 0.4,
          "required": true
        },
        {
          "criterionId": "crit-2",
          "name": "Balance Score",
          "nameKorean": "균형 점수",
          "metric": "BALANCE_SCORE",
          "target": 60,
          "unit": "score",
          "comparison": "greater_than",
          "weight": 0.3,
          "required": false
        },
        {
          "criterionId": "crit-3",
          "name": "Session Completion",
          "nameKorean": "세션 완료율",
          "metric": "TASK_COMPLETION_RATE",
          "target": 80,
          "unit": "percent",
          "comparison": "greater_than",
          "weight": 0.3,
          "required": true
        }
      ],
      "requiredCriteriaCount": 2,
      "minSessionsInPhase": 6,
      "consistencyRequirement": {
        "consecutiveSessions": 2,
        "percentageOfSessions": 70
      }
    },
    "manual": {
      "assessmentRequired": true,
      "assessmentTypes": ["clinical_observation", "functional_assessment"],
      "supervisorApproval": false,
      "documentationRequired": ["progress_notes", "vital_signs_log"]
    },
    "regression": {
      "triggers": [
        {
          "metric": "FATIGUE_LEVEL",
          "threshold": 8,
          "consecutiveSessions": 2
        },
        {
          "metric": "PAIN_LEVEL",
          "threshold": 6,
          "consecutiveSessions": 2
        }
      ],
      "actions": {
        "reducePhase": true,
        "reduceWithinPhase": true,
        "alertTherapist": true,
        "requireReassessment": true
      }
    }
  },
  "contraindications": [
    {
      "contraindicationId": "contra-1",
      "type": "AUTONOMIC_DYSREFLEXIA",
      "name": "Autonomic Dysreflexia",
      "nameKorean": "자율신경 반사이상",
      "description": "Signs of autonomic dysreflexia including sudden hypertension, headache, flushing, sweating above lesion level",
      "severity": "absolute",
      "affectedActivities": "all",
      "requiredActions": [
        {
          "action": "stop",
          "description": "Immediately stop session and lower patient to seated/supine position",
          "urgency": "immediate"
        },
        {
          "action": "consult",
          "description": "Contact physician if symptoms persist",
          "urgency": "immediate"
        }
      ],
      "medicalReviewRequired": true
    },
    {
      "contraindicationId": "contra-2",
      "type": "PRESSURE_ULCER",
      "name": "Active Pressure Ulcer",
      "nameKorean": "활성 욕창",
      "description": "Stage 2 or higher pressure ulcer at weight-bearing or contact areas",
      "severity": "absolute",
      "affectedActivities": "all",
      "requiredActions": [
        {
          "action": "stop",
          "description": "Do not proceed with exoskeleton training",
          "urgency": "immediate"
        },
        {
          "action": "consult",
          "description": "Refer to wound care team",
          "urgency": "within_session"
        }
      ],
      "medicalReviewRequired": true
    },
    {
      "contraindicationId": "contra-3",
      "type": "SEVERE_SPASTICITY",
      "name": "Uncontrolled Spasticity",
      "nameKorean": "조절되지 않는 경직",
      "description": "Modified Ashworth Scale > 3 affecting training",
      "severity": "relative",
      "affectedActivities": ["TREADMILL_WALKING", "OVERGROUND_WALKING", "STAIR_CLIMBING"],
      "requiredActions": [
        {
          "action": "modify",
          "description": "Reduce activity intensity and duration",
          "urgency": "within_session"
        },
        {
          "action": "consult",
          "description": "Discuss spasticity management with physician",
          "urgency": "before_next_session"
        }
      ],
      "medicalReviewRequired": false
    }
  ],
  "safetyParameters": {
    "vitalLimits": {
      "heartRateMax": 140,
      "heartRateMin": 50,
      "bloodPressureSystolicMax": 180,
      "bloodPressureDiastolicMax": 100,
      "oxygenSaturationMin": 92
    },
    "fatigueLimits": {
      "maxFatigueLevel": 7,
      "maxBorgScale": 15,
      "mandatoryRestThreshold": 6
    },
    "painLimits": {
      "maxPainLevel": 5,
      "stopThreshold": 7,
      "newPainProtocol": "stop"
    },
    "environmentalLimits": {
      "maxAmbientTemperature": 28,
      "minAmbientTemperature": 18,
      "maxHumidity": 70
    },
    "sessionLimits": {
      "maxSessionDuration": 90,
      "maxContinuousActivity": 30,
      "minRestBetweenActivities": 30,
      "maxSessionsPerDay": 1
    },
    "supervision": {
      "minTherapistRatio": "1:1",
      "continuousMonitoring": true,
      "remoteMonitoringAllowed": false
    }
  }
}
