// WIA-INTENT: Multi-Agent Collaboration
// 여러 AI가 협업하는 예시

collective PlanTrip {
  agents {
    FlightAgent {
      role: specialist
      specializes_in: flights
    }
    HotelAgent {
      role: specialist
      specializes_in: accommodations
    }
    ActivityAgent {
      role: specialist
      specializes_in: experiences
    }
    BudgetAgent {
      role: coordinator
      specializes_in: cost_optimization
    }
  }

  // 협업 흐름
  sequence {
    1. FlightAgent { want: available_flights }
    2. HotelAgent { want: matching_hotels }
    3. ActivityAgent { want: local_experiences }
  }

  parallel {
    BudgetAgent { want: optimized_total_cost }
  }
}

intent BookTrip {
  given {
    destination: string
    dates: DateRange
    travelers: number
    budget: Money
    preferences: TravelPreferences
  }

  want {
    itinerary: TripItinerary
    total_cost: Money
    satisfaction_score: >= 0.85
  }

  constraints {
    budget: <= given.budget
    comfort: >= preferences.min_comfort
    safety: high
    flexibility: medium
  }

  certainty: >= 0.8

  fallback {
    if over_budget: suggest_alternatives_with_tradeoffs
    if no_availability: suggest_different_dates
    if conflicting_preferences: ask_human_to_prioritize
  }
}
